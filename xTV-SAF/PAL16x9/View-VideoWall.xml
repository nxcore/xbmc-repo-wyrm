<includes>
	<include name="VideoWallView">
		<control type="panel" id="58">
			<posx>278</posx>
			<posy>105</posy>
			<width>436</width>
			<height>378</height>
			<onleft>2</onleft>
			<onright>28</onright>
			<onup>58</onup>
			<ondown>58</ondown>
			<viewtype label="31945">Wall</viewtype>
			<scrolltime>100</scrolltime>
			<include>list-fade</include>
			<pagecontrol>28</pagecontrol>
			<preloaditems>7</preloaditems>
			<animation effect="rotatey" start="-15" end="-15" time="0" condition="Skin.HasSetting(tilted-videowall)">Conditional</animation>
			<animation effect="slide" end="70,0" time="0" condition="Skin.HasSetting(tilted-videowall)">Conditional</animation>
			<animation effect="zoom" start="100" end="120" center="auto" time="0" tween="back" easing="out" condition="Skin.HasSetting(tilted-videowall)">Conditional</animation>
			<itemlayout height="126" width="57">
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>57</width>
					<height>126</height>
					<texture>-</texture>
				</control>
				<control type="image">
					<posx>1</posx>
					<posy>1</posy>
					<width>56</width>
					<height>124</height>
				    <aspectratio>stretch</aspectratio>
					<colordiffuse>UnFocusedPosters</colordiffuse>
					<texture background="true" diffuse="mask-rect.png">DefaultVideo.png</texture>
					<visible>SubString(ListItem.Icon,DefaultFolder.png,Left)</visible>
				</control>
				<control type="image">
					<posx>1</posx>
					<posy>1</posy>
					<width>56</width>
					<height>124</height>
				    <aspectratio>stretch</aspectratio>
					<colordiffuse>UnFocusedPosters</colordiffuse>
					<texture background="true" diffuse="mask-rect.png">DefaultVideo.png</texture>
					<info>ListItem.Icon</info>
					<visible>!SubString(ListItem.Icon,DefaultFolder.png,Left)</visible>
				</control>
			</itemlayout>
			<focusedlayout height="136" width="82">
				<control type="image">
					<posx>4</posx>
					<posy>4</posy>
					<width>58</width>
					<height>124</height>
				    <aspectratio>stretch</aspectratio>
					<animation type="Focus" reversible="false">
						<effect type="zoom" start="100" end="140" center="auto" time="600" tween="back" easing="out" />
					</animation>
					<texture background="true" diffuse="mask-rect.png">DefaultVideo.png</texture>
					<visible>SubString(ListItem.Icon,DefaultFolder.png,Left)</visible>
				</control>
				<control type="image">
					<posx>4</posx>
					<posy>4</posy>
					<width>58</width>
					<height>124</height>
					<texture background="true">$INFO[ListItem.Icon]</texture>
					<aspectratio align="center" aligny="center">stretch</aspectratio>
					<animation type="Focus" reversible="false">
						<effect type="zoom" start="100" end="140" center="auto" time="600" tween="back" easing="out" />
					</animation>
					<visible>SubString(ListItem.Icon,DefaultFolderBack,Left)</visible>
				</control>
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<height>124</height>
					<width>68</width>
					<texture diffuse="mask-rect.png">hi-lite.png</texture>
					<aspectratio>stretch</aspectratio>
					<animation type="Focus" reversible="false">
						<effect type="zoom" start="100" end="150" center="auto" time="600" tween="back" easing="out" />
					</animation>
					<colordiffuse>IconGlow</colordiffuse>
					<visible>!SubString(ListItem.Icon,Default,Left)</visible>
				</control>
				<control type="image">
					<posx>8</posx>
					<posy>8</posy>
					<width>50</width>
					<height>106</height>
					<texture background="true" diffuse="mask-rect.png">$INFO[ListItem.Icon]</texture>
					<aspectratio align="center" aligny="center">stretch</aspectratio>
					<animation type="Focus" reversible="false">
						<effect type="zoom" start="100" end="150" center="auto" time="600" tween="back" easing="out" />
					</animation>
					<visible>!SubString(ListItem.Icon,DefaultFolder,Left)</visible>
				</control>
			</focusedlayout>
		</control>
		<control type="group">
			<visible>Control.IsVisible(58)</visible>
			<include>SortLetterNotification</include>
			<!-- Title -->
			<control type="image" id="7016">
				<posx>10</posx>
				<posy>90</posy>
				<width>200</width>
				<height>78</height>
				<texture background="true">$INFO[ListItem.path]logo.png</texture>
				<aligny>bottom</aligny>
				<aspectratio align="left">keep</aspectratio>
				<animation effect="fade" delay="100" start="0" end="100" time="200">Visible</animation>
				<visible>container.content(tvshows)</visible>
			</control>
			<control type="label">
				<posx>10</posx>
				<posy>135</posy>
				<width>260</width>
				<height>30</height>
				<font>font18</font>
				<align>left</align>
				<textcolor>button-text</textcolor>
				<shadowcolor>shadow-text</shadowcolor>
				<scroll>true</scroll>
				<info>ListItem.Label</info>
				<textoffsetx>0</textoffsetx>
				<visible>[IsEmpty(Control.GetLabel(7016))] + container.content(tvshows)</visible>
				<visible>!SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
				<animation effect="fade" delay="50" start="0" end="100" time="100">Visible</animation>
				<animation effect="fade" time="200">WindowClose</animation>
			</control>
			<control type="label">
				<posx>10</posx>
				<posy>135</posy>
				<width>260</width>
				<height>30</height>
				<font>font18</font>
				<align>left</align>
				<textcolor>button-text</textcolor>
				<shadowcolor>shadow-text</shadowcolor>
				<scroll>true</scroll>
				<info>ListItem.Label</info>
				<textoffsetx>0</textoffsetx>
				<visible>!container.content(tvshows)</visible>
				<visible>!SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
				<animation effect="fade" delay="50" start="0" end="100" time="100">Visible</animation>
				<animation effect="fade" time="200">WindowClose</animation>
			</control>
			<!-- Go Back -->
			<control type="label">
				<posx>10</posx>
				<posy>240</posy>
				<width>260</width>
				<height>30</height>
				<font>font28</font>
				<align>center</align>
				<textcolor>button-text</textcolor>
				<shadowcolor>shadow-text</shadowcolor>
				<scroll>true</scroll>
				<label>31688</label>
				<textoffsetx>0</textoffsetx>
				<visible>SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
			</control>
			<!-- Genre -->
			<control type="label">
				<posx>10</posx>
				<posy>170</posy>
				<width>260</width>
				<height>30</height>
				<font>font11</font>
				<align>left</align>
				<textcolor>button-text</textcolor>
				<shadowcolor>shadow-text</shadowcolor>
				<selectedcolor>listselectedtext</selectedcolor>
				<scroll>true</scroll>
				<info>ListItem.Genre</info>
				<textoffsetx>0</textoffsetx>
			</control>
			<!-- MPAA Rating -->
			<control type="group">
				<posx>10</posx>
				<posy>205</posy>
				<include>mpaa-ratings</include>
			</control>
			<!-- Watched Overlay -->
			<control type="image">
				<posx>135</posx>
				<posy>205</posy>
				<width>32</width>
				<height>32</height>
				<info>ListItem.Overlay</info>
				<visible>Skin.HasSetting(watched-overlay)</visible>
			</control>
			<!-- Star Rating -->
			<control type="image">
				<posx>170</posx>
				<posy>215</posy>
				<width>100</width>
				<height>20</height>
				<info>ListItem.StarRating</info>
				<align>right</align>
				<colordiffuse>StarDiffuse</colordiffuse>
				<visible>!IsEmpty(ListItem.StarRating)</visible>
			</control>
			<!-- Plot Outline -->
			<control type="textbox">
				<posx>10</posx>
				<posy>258</posy>
				<width>260</width>
				<height>274</height>
				<font>font11</font>
				<textcolor>button-text</textcolor>
				<shadowcolor>shadow-text</shadowcolor>
				<label fallback="161">$INFO[ListItem.PlotOutline]</label>
				<align>justify</align>
				<visible>!IsEmpty(ListItem.PlotOutline)</visible>
				<autoscroll time="4000" delay="6000" repeat="8000">true</autoscroll>
			</control>
			<!-- Plot (Show if no outline available)-->
			<control type="textbox">
				<posx>10</posx>
				<posy>258</posy>
				<width>260</width>
				<height>274</height>
				<font>font11</font>
				<textcolor>button-text</textcolor>
				<shadowcolor>shadow-text</shadowcolor>
				<label fallback="161">$INFO[ListItem.Plot]</label>
				<align>justify</align>
				<visible>IsEmpty(ListItem.PlotOutline) + !IsEmpty(ListItem.Plot)</visible>
				<autoscroll time="4000" delay="6000" repeat="8000">true</autoscroll>
			</control>
			<control type="group">
				<visible>!IsEmpty(listitem.Duration)</visible>
				<!-- Duration -->
				<control type="label">
					<posx>425</posx>
					<posy>515</posy>
					<width>150</width>
					<height>25</height>
					<aligny>center</aligny>
					<font>font18</font>
					<textcolor>button-text</textcolor>
					<shadowcolor>shadow-text</shadowcolor>
					<info>ListItem.Duration</info>
					<visible>substring(listitem.Duration,hrs)</visible>
				</control>
				<control type="label">
					<posx>425</posx>
					<posy>515</posy>
					<width>150</width>
					<height>25</height>
					<aligny>center</aligny>
					<font>font18</font>
					<textcolor>button-text</textcolor>
					<shadowcolor>shadow-text</shadowcolor>
					<info>ListItem.Duration</info>
					<visible>substring(listitem.Duration,min)</visible>
					<visible>!substring(listitem.Duration,hrs)</visible>
				</control>
				<control type="label">
					<posx>425</posx>
					<posy>515</posy>
					<width>150</width>
					<height>25</height>
					<aligny>center</aligny>
					<font>font18</font>
					<textcolor>button-text</textcolor>
					<shadowcolor>shadow-text</shadowcolor>
					<label>$INFO[ListItem.Duration,, mins]</label>
					<visible>!substring(listitem.Duration,min)</visible>
				</control>
			</control>
			<!-- Watched TV episodes -->
			<control type="label">
				<posx>400</posx>
				<posy>500</posy>
				<width>200</width>
				<height>25</height>
				<aligny>center</aligny>
				<font>font22</font>
				<textcolor>button-text</textcolor>
				<shadowcolor>shadow-text</shadowcolor>
				<label>$LOCALIZE[20360]: $INFO[ListItem.Property(TotalEpisodes)]</label>
				<visible>Container.Content(TVShows) + !IsEmpty(ListItem.Property(TotalEpisodes))</visible>
			</control>
			<control type="scrollbar" id="28">
				<posx>700</posx>
				<posy>82</posy>
				<width>14</width>
				<height>422</height>
				<texturesliderbackground border="0,8,0,8">scrollbar_background.png</texturesliderbackground>
				<texturesliderbar border="0,8,0,8">scrollbar_bar.png</texturesliderbar>
				<texturesliderbarfocus border="0,8,0,8">scrollbar_bar_focus.png</texturesliderbarfocus>
				<textureslidernib>-</textureslidernib>
				<textureslidernibfocus>-</textureslidernibfocus>
				<onleft>58</onleft>
				<onright>2</onright>
				<include>list-fade</include>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
				<colordiffuse>ScrollBarColor</colordiffuse>
				<visible>Skin.HasSetting(sbar)</visible>
			</control>
		</control>
	</include>
</includes>

<?xml version="1.0" encoding="UTF-8"?>
<window>
	<allowoverlay>no</allowoverlay>
	<defaultcontrol always="false">101</defaultcontrol>
	<coordinates>
		<system>1</system>
		<posx>0</posx>
		<posy>0</posy>
	</coordinates>
	<controls>
		<control type="group">
			<control type="image"><!-- Solid background -->
				<posx>0</posx>
				<posy>0</posy>
				<width>1280</width>
				<height>720</height>
				<texture>background.png</texture>
				<visible>!Skin.String(custom-background)</visible>
			</control>
			<control type="image"><!-- Custom background -->
				<posx>0</posx>
				<posy>0</posy>
				<width>1280</width>
				<height>720</height>
				<texture>$INFO[Skin.String(custom-background)]</texture>
				<colordiffuse>osd-background</colordiffuse>
				<visible>Skin.String(custom-background)</visible>
			</control>
			<control type="group"><!-- Backgroung fanart image -->
				<animation effect="fade" time="300">VisibleChange</animation>
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>1280</width>
					<height>720</height>
					<texture background="true">$INFO[MusicPlayer.Property(Fanart_Image)]</texture>
					<aspectratio>scale</aspectratio>
					<fadetime>1000</fadetime>
					<visible>!Skin.HasSetting(background-slideshow)</visible>
				</control>
			</control>
			<control type="group"><!-- Background visualisation image -->
				<visible>Skin.HasSetting(HomeViewToggle)</visible>
				<animation effect="fade" time="300">VisibleChange</animation>
				<control type="visualisation" id="2">
					<posx>0</posx>
					<posy>0</posy>
					<width>1280</width>
					<height>720</height>
					<visible>Player.HasAudio + !SubString(Window(VideoLibrary).Property(TvTunesIsAlive),True)</visible>
				</control>
			</control>
			<control type="group">
				<visible>Skin.HasSetting(background-slideshow)</visible>
				<animation effect="fade" time="300">VisibleChange</animation>
				<control type="image"><!-- Mask out any backgrounds showing around ArtistSlideshow Fanart -->
					<posx>0</posx>
					<posy>0</posy>
					<width>1280</width>
					<height>720</height>
					<texture>colours/black.png</texture>
					<aspectratio>stretch</aspectratio>
				</control>
				<control type="multiimage" id="991">
					<posx>0</posx>
					<posy>0</posy>
					<width>1280</width>
					<height>720</height>
					<imagepath fallback="blank.png" background="true">$INFO[Window(Visualisation).Property(ArtistSlideshow)]</imagepath>
					<aspectratio>keep</aspectratio>
					<timeperimage>5000</timeperimage>
					<fadetime>1000</fadetime>
					<randomize>true</randomize>
				</control>
			</control>
			<control type="image"><!-- Mask to fade backgrounds -->
				<posx>0</posx>
				<posy>0</posy>
				<width>1280</width>
				<height>720</height>
				<colordiffuse>mask-background</colordiffuse>
				<texture>colours/black.png</texture>
				<animation effect="fade" start="100" end="80" condition="Skin.HasSetting(background-visibiltyhigh)">Conditional</animation>
				<animation effect="fade" start="100" end="90" condition="Skin.HasSetting(background-visibiltymed)">Conditional</animation>
				<aspectratio>stretch</aspectratio>
				<visible>Skin.HasSetting(background-fanart) | Skin.HasSetting(HomeViewToggle) | Skin.HasSetting(background-slideshow)</visible>
			</control>
			<control type="label"><!-- Scraper -->
				<posx>10</posx>
				<posy>50</posy>
				<width>550</width>
				<height>30</height>
				<label>$LOCALIZE[21870] - $INFO[Control.GetLabel(200)]</label>
				<font>font12</font>
			</control>
			<control type="label" id="200">
				<visible>false</visible>
			</control>
			<control type="label"><!--Dialog heading -->
				<posx>946</posx>
				<posy>50</posy>
				<width>360</width>
				<height>37</height>
				<font>font18</font>
				<label>$ADDON[script.cu.lrclyrics 0]</label>
			</control>

			<!-- ** Required ** Do not change <id> or <type> (Text box for lyrics) -->
			<control type="textbox" id="100">
				<posx>20</posx>
				<posy>100</posy>
				<width>1240</width>
				<height>370</height>
				<align>center</align>
				<selectedcolor>listselected-text</selectedcolor>
				<pagecontrol>101</pagecontrol>
			</control>
			<control type="spincontrol" id="101"><!-- Next page button -->
				<posx>1195</posx>
				<posy>580</posy>
				<subtype>page</subtype>
				<font>font12</font>
				<onleft>101</onleft>
				<onright>101</onright>
				<ondown>101</ondown>
				<onup>101</onup>
				<showonepage>true</showonepage>
				<visible>Control.IsVisible(100)</visible>
			</control>
			<!-- ** Required ** Do not change <id> or <type> (Smooth scrolling list for lyrics) -->
			<control type="list" id="110">
				<posx>20</posx>
				<posy>100</posy>
				<width>1240</width>
				<height>370</height>
				<onleft>111</onleft>
				<onright>111</onright>
				<onup>110</onup>
				<ondown>110</ondown>
				<pagecontrol>111</pagecontrol>
				<scrolltime>200</scrolltime>
				<itemlayout height="40">
					<control type="label">
						<posx>620</posx>
						<posy>0</posy>
						<width>1240</width>
						<height>40</height>
						<align>center</align>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout height="50">
					<control type="label">
						<posx>620</posx>
						<posy>0</posy>
						<width>1240</width>
						<height>50</height>
						<font>font22</font>
						<textcolor>lightblue</textcolor>
						<align>center</align>
						<label>$INFO[ListItem.Label]</label>
						<visible>!Control.HasFocus(110)</visible>
					</control>
					<control type="label">
						<posx>620</posx>
						<posy>0</posy>
						<width>1240</width>
						<height>50</height>
						<font>font22</font>
						<textcolor>lightblue</textcolor>
						<align>center</align>
						<label fallback="--">$INFO[ListItem.Label]</label>
						<visible>Control.HasFocus(110)</visible>
					</control>
				</focusedlayout>
			</control>
			<control type="spincontrol" id="111"><!-- Next page button -->
				<posx>1195</posx>
				<posy>580</posy>
				<subtype>page</subtype>
				<font>font12</font>
				<onleft>110</onleft>
				<onright>110</onright>
				<ondown>110</ondown>
				<onup>110</onup>
				<showonepage>true</showonepage>
				<visible>Control.IsVisible(110)</visible>
			</control>
			<control type="label" id="2"><!-- Pick -->
				<posx>20</posx>
				<posy>130</posy>
				<width>1240</width>
				<height>30</height>
				<align>center</align>
				<selectedcolor>listselected-text</selectedcolor>
				<label>$LOCALIZE[179]?</label>
				<visible>Control.IsVisible(120) + ![Control.IsVisible(100) | Control.IsVisible(110)]</visible>
			</control>
			<!-- ** Required ** Do not change <id> or <type> (Song Chooser if it gets it wrong) -->
			<control type="list" id="120">
				<posx>20</posx>
				<posy>140</posy>
				<width>1240</width>
				<height>410</height>
				<onleft>121</onleft>
				<onright>121</onright>
				<onup>120</onup>
				<ondown>120</ondown>
				<pagecontrol>121</pagecontrol>
				<scrolltime>200</scrolltime>
				<animation effect="slide" start="0,0" end="20,0" time="0" condition="!Control.IsVisible(121)">Conditional</animation>
				<itemlayout height="40">
					<control type="label">
						<posx>10</posx>
						<posy>0</posy>
						<width>1240</width>
						<height>40</height>
						<selectedcolor>listselected-text</selectedcolor>
						<align>center</align>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout height="40">
					<control type="label">
						<posx>10</posx>
						<posy>0</posy>
						<width>1240</width>
						<height>40</height>
						<textcolor>listselected-text</textcolor>
						<align>center</align>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</focusedlayout>
			</control>
			<control type="spincontrol" id="121"><!-- Next page button -->
				<posx>1195</posx>
				<posy>580</posy>
				<subtype>page</subtype>
				<font>font12</font>
				<onleft>120</onleft>
				<onright>120</onright>
				<ondown>120</ondown>
				<onup>120</onup>
				<showonepage>true</showonepage>
				<visible>Control.IsVisible(120)</visible>
			</control>

			<control type="image"><!-- CD overlay -->
				<animation effect="slide" start="-118" end="0" time="900" tween="cubic" easing="out" delay="1000">WindowOpen</animation>
				<animation type="WindowClose">
					<effect type="slide" start="0" end="-114" time="100" tween="cubic" easing="in" delay="0"/>
					<effect type="fade" start="100" end="0" time="200"/>
					<condition type="!Player.Playing"/>
				</animation>
				<animation effect="rotate" end="-360" center="auto" time="3000" loop="true" reversible="false" condition="!Player.Paused">Conditional</animation>
				<width>215</width>
				<height>215</height>
				<posx>132</posx>
				<posy>480</posy>
				<texture fallback="DefaultDVDEmpty.png">$INFO[Player.FolderPath]/cdart.png</texture>
				<aspectratio aligny="bottom">keep</aspectratio>
				<visible>!SubString(MusicPlayer.Cover,Default,Left)</visible>
			</control>
			<control type="image">
				<posx>-5</posx>
				<posy>455</posy>
				<height>265</height>
				<width>265</width>
				<texture>case-cd.png</texture>
				<aspectratio>stretch</aspectratio>
				<visible>Skin.HasSetting(CDcase) + !SubString(MusicPlayer.Cover,Default,Left)</visible>
			</control>
			<control type="image"><!-- Album cover -->
				<posx>20</posx>
				<posy>475</posy>
				<width>225</width>
				<height>225</height>
				<texture fallback="DefaultAudio.png">$INFO[MusicPlayer.Cover]</texture>
				<aspectratio aligny="bottom">stretch</aspectratio>
			</control>
			<control type="label"><!-- Song title -->
				<posx>370</posx>
				<posy>572</posy>
				<width>656</width>
				<height>45</height>
				<font>font18</font>
				<label>$INFO[MusicPlayer.Title]</label>
				<include condition="Skin.HasSetting(autoscroll)">scrolltext</include>
			</control>
			<control type="label"><!-- Artist -->
				<posx>370</posx>
				<posy>608</posy>
				<width>682</width>
				<height>37</height>
				<font>font12</font>
				<label>$INFO[MusicPlayer.Artist]</label>
				<include condition="Skin.HasSetting(autoscroll)">scrolltext</include>
			</control>
			<control type="label"><!-- Album name -->
				<posx>370</posx>
				<posy>638</posy>
				<width>656</width>
				<height>37</height>
				<font>font12</font>
				<label>$INFO[MusicPlayer.Album]</label>
				<include condition="Skin.HasSetting(autoscroll)">scrolltext</include>
			</control>
			<control type="label"><!-- Player time -->
				<posx>370</posx>
				<posy>668</posy>
				<width>656</width>
				<height>37</height>
				<label>$INFO[musicplayer.Time]$INFO[musicplayer.Duration, / ]</label>
				<font>font12</font>
			</control>
			<control type="progress" id="1">
				<posx>558</posx>
				<posy>674</posy>
				<width>685</width>
				<height>16</height>
				<info>Player.Progress</info>
				<colordiffuse>ProgressBarColor</colordiffuse>
				<visible>true</visible>
			</control>
		</control>
	</controls>
</window>
<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">2</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<include>screen-fade</include>
	<controls>
		<include>background</include>
		<include>Fake-Overlay</include>
		<control type="image"><!-- Setting logo -->
			<include>icon-header-commons</include>
			<texture>icon-settings.png</texture>
		</control>
		<control type="label"><!-- Screen heading -->
			<posx>946</posx>
			<posy>50</posy>
			<width>309</width>
			<height>37</height>
			<label>$LOCALIZE[31555]</label>
			<font>font20</font>
		</control>

		<control type="list" id="2">
			<posx>716</posx>
			<posy>112</posy>
			<width>531</width>
			<height>450</height>
			<onleft>4</onleft>
			<onright>23</onright>
			<onup>2</onup>
			<ondown>2</ondown>
			<scrolltime>1</scrolltime>
			<viewtype label="31941">List</viewtype>
			<pagecontrol>23</pagecontrol>
			<itemlayout height="56">
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>504</width>
					<height>56</height>
				</control>
				<control type="label">
					<posx>21</posx>
					<posy>0</posy>
					<width>504</width>
					<height>56</height>
					<font>font12</font>
					<selectedcolor>listselected-text</selectedcolor>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</itemlayout>
			<focusedlayout height="56">
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>504</width>
					<height>56</height>
					<texture border="8">default-button.png</texture>
					<visible>!Control.HasFocus(4)</visible>
				</control>
				<control type="label">
					<posx>21</posx>
					<posy>0</posy>
					<width>447</width>
					<height>56</height>
					<font>font12</font>
					<selectedcolor>listselected-text</selectedcolor>
					<include condition="Skin.HasSetting(autoscroll)">scrolltext</include>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</focusedlayout>
		</control>
		<control type="scrollbar" id="23">
			<posx>1244</posx>
			<posy>112</posy>
			<width>18</width>
			<height>450</height>
			<onleft>2</onleft>
			<onright>4</onright>
			<visible>Skin.HasSetting(sbar)</visible>
		</control>
		<control type="image">
			<posx>198</posx>
			<posy>112</posy>
			<width>320</width>
			<height>320</height>
			<texture fallback="unknown-user.png" diffuse="mask-rect.png">$INFO[Container(2).ListItem.Icon]</texture>
			<aspectratio>keep</aspectratio>
		</control>
		<control type="fadelabel" id="3"><!-- Last loaded profile -->
			<posx>10</posx>
			<posy>450</posy>
			<width>696</width>
			<height>40</height>
			<label>$LOCALIZE[13204] $INFO[System.ProfileName]</label>
			<font>font12</font>
			<align>center</align>
		</control>
		<control type="label"><!-- Profile to auto login -->
			<posx>10</posx>
			<posy>500</posy>
			<width>696</width>
			<height>40</height>
			<font>font12</font>
			<align>center</align>
			<label>$LOCALIZE[14061]: $INFO[System.ProfileAutoLogin]</label>
			<visible>!System.HasLoginScreen + !IsEmpty(System.ProfileAutoLogin)</visible>
		</control>
		<control type="group">
			<posy>720</posy>
			<include>View-as</include>
			<control type="group" id="9000">
				<visible>!Skin.HasSetting(view-as-lock)</visible>
				<control type="image"><!-- Background shadow -->
					<posx>0</posx>
					<posy>0</posy>
					<width>1280</width>
					<height>720</height>
					<texture>colours/black.png</texture>
					<colordiffuse>osd-background</colordiffuse>
					<visible>!Skin.HasSetting(view-as-lock)</visible>
				</control>
				<control type="image"><!-- Dialog background -->
					<posx>440</posx>
					<posy>282</posy>
					<width>396</width>
					<height>150</height>
					<texture border="8">button-menu-background.png</texture>
				</control>
				<control type="radiobutton" id="4"><!-- Enable login screen -->
					<posx>450</posx>
					<posy>294</posy>
					<width>376</width>
					<height>50</height>
					<label>$LOCALIZE[20096]</label>
					<font>font12</font>
					<aligny>top</aligny>
					<textoffsety>8</textoffsety>
					<radioposx>330</radioposx>
					<onright>2</onright>
					<onleft>23</onleft>
					<onup>4</onup>
					<ondown>5</ondown>
				</control>
				<control type="button" id="5"><!-- Choose auto login user -->
					<posx>450</posx>
					<posy>344</posy>
					<width>376</width>
					<height>50</height>
					<textoffsety>8</textoffsety>
					<label>$LOCALIZE[14061]</label>
					<font>font12</font>
					<aligny>top</aligny>
					<onleft>23</onleft>
					<onright>2</onright>
					<onup>4</onup>
					<ondown>4</ondown>
					<enable>!Window.IsVisible(ProfileSettings) + !System.HasLoginScreen</enable>
					<visible>!System.HasLoginScreen</visible>
				</control>
				<control type="button"><!-- Choose auto login user (grayed out) -->
					<posx>450</posx>
					<posy>394</posy>
					<width>376</width>
					<height>50</height>
					<textoffsety>8</textoffsety>
					<label>$LOCALIZE[14061]</label>
					<font>font12</font>
					<aligny>top</aligny>
					<onleft>23</onleft>
					<onright>2</onright>
					<onup>5</onup>
					<ondown>4</ondown>
					<visible>System.HasLoginScreen</visible>
					<enable>false</enable>
				</control>
				<control type="label">
					<posx>450</posx>
					<posy>394</posy>
					<width>376</width>
					<height>50</height>
					<font>font12</font>
					<align>right</align>
					<aligny>top</aligny>
					<label>$INFO[System.ProfileAutoLogin]</label>
					<visible>!System.HasLoginScreen</visible>
				</control>
			</control>
		</control>
	</controls>
</window>
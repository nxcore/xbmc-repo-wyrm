<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>2</defaultcontrol>
	<controls>
		<control type="image"><!-- Media info background image -->
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>150</height>
			<texture>background.png</texture>
			<colordiffuse>osd-background</colordiffuse>
			<visible>Player.ShowCodec</visible>
		</control>
		<control type="label" id="10"><!-- Row 1 label -->
			<posx>17</posx>
			<posy>12</posy>
			<width>1239</width>
			<height>25</height>
			<label>-</label>
			<font>font12</font>
			<visible>Player.ShowCodec</visible>
		</control>
		<control type="label" id="11"><!-- Row 2 label -->
			<posx>17</posx>
			<posy>37</posy>
			<width>1239</width>
			<height>25</height>
			<label>-</label>
			<font>font12</font>
			<visible>Player.ShowCodec</visible>
		</control>
		<control type="label" id="12"><!-- Row 3 label -->
			<posx>17</posx>
			<posy>62</posy>
			<width>1239</width>
			<height>25</height>
			<label>-</label>
			<font>font12</font>
			<visible>Player.ShowCodec</visible>
		</control>
		<!-- Media Info -->
		<control type="image"><!-- Media info background image -->
			<posx>-17</posx>
			<posy>557</posy>
			<width>1280</width>
			<height>187</height>
			<texture>background.png</texture>
			<colordiffuse>osd-background</colordiffuse>
			<visible>Player.HasMedia + Player.ShowInfo</visible>
			<animation effect="fade" time="500">VisibleChange</animation>
		</control>
		<control type="image"><!-- Cover image -->
			<posx>44</posx>
			<posy>568</posy>
			<width>177</width>
			<height>125</height>
			<texture>$INFO[MusicPlayer.Cover]</texture>
			<aspectratio>keep</aspectratio>
			<visible>Player.HasMedia + Player.ShowInfo</visible>
			<animation effect="fade" time="500">VisibleChange</animation>
		</control>
		<control type="label"><!-- Artist -->
			<posx>221</posx>
			<posy>572</posy>
			<label>$INFO[MusicPlayer.Artist]</label>
			<width>787</width>
			<height>25</height>
			<font>font12</font>
			<visible>Player.HasMedia + Player.ShowInfo</visible>
			<animation effect="fade" time="500">VisibleChange</animation>
		</control>
		<control type="label"><!-- Song title -->
			<posx>221</posx>
			<posy>598</posy>
			<width>761</width>
			<height>25</height>
			<label>$INFO[MusicPlayer.Title]</label>
			<font>font12</font>
			<visible>Player.HasMedia + Player.ShowInfo</visible>
			<animation effect="fade" time="500">VisibleChange</animation>
		</control>
		<control type="label"><!-- Album title -->
			<posx>221</posx>
			<posy>633</posy>
			<width>761</width>
			<height>25</height>
			<label>$INFO[MusicPlayer.Album]</label>
			<font>font12</font>
			<visible>Player.HasMedia + Player.ShowInfo</visible>
			<animation effect="fade" time="500">VisibleChange</animation>
		</control>
		<control type="label"><!-- Player time -->
			<posx>221</posx>
			<posy>660</posy>
			<width>761</width>
			<height>25</height>
			<label>$INFO[musicplayer.Time]$INFO[musicplayer.Duration, / ]</label>
			<font>font12</font>
			<visible>Player.HasMedia + Player.ShowInfo</visible>
			<animation effect="fade" time="500">VisibleChange</animation>
		</control>
		<control type="label"><!-- Playlist -->
			<posx>1203</posx>
			<posy>660</posy>
			<width>177</width>
			<height>25</height>
			<align>right</align>
			<label>$INFO[musicplayer.Playlistposition,Track ]$INFO[musicplayer.Playlistlength, / ]</label>
			<font>font12</font>
			<visible>Player.HasMedia + Player.ShowInfo</visible>
			<animation effect="fade" time="500">VisibleChange</animation>
		</control>
	</controls>
</window>
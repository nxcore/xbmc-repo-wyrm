						<label>13200</label>
						<onclick>ActivateWindow(Profiles)</onclick>
					</item>
					<item id="10">
						<description>File manager</description>
						<label>10003</label>
						<onclick>ActivateWindow(filemanager)</onclick>
					</item>
					<item id="11">
						<description>System Info</description>
						<label>138</label>
						<onclick>Activatewindow(systeminfo)</onclick>
					</item>
				</content>
			</control>
		</control>
	</controls>
</window>
<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<controls>
		<include>background</include>
		<include>#files</include>
		<include>Fake-Overlay</include>
		<control type="image"><!-- Addons logo -->
			<include>icon-header-commons</include>
			<texture>DefaultAddon.png</texture>
		</control>
		<control type="grouplist">
			<posx>946</posx>
			<posy>35</posy>
			<width>365</width>
			<height>72</height>
			<align>left</align>
			<aligny>bottom</aligny>
			<orientation>horizontal</orientation>
			<control type="label"><!-- Addons heading -->
				<width min="40" max="275">auto</width>
				<height>72</height>
				<label>$LOCALIZE[24001]</label>
				<font>font18</font>
				<wrapmultiline>true</wrapmultiline>
				<aligny>top</aligny>
			</control>
			<control type="label"><!-- Number of file (Use if home menu type is not vertical) -->
				<visible>Skin.HasSetting(homemenu-horizontal) | [!Skin.HasSetting(homemenu-vertical) + !Skin.HasSetting(homemenu-horizontal)]</visible>
				<width min="40" max="90">auto</width>
				<height>50</height>
				<label>$INFO[Container.NumItems, (,)]</label>
				<font>font13</font>
				<aligny>top</aligny>
			</control>
		</control>

		<include>memory-low</include><!-- Display warning if free memory is low -->

		<control type="group"><!-- Various Views of Addons Browser -->
			<include>ListView</include>
			<include>IconView</include>
			<include>WrapView</include>
			<include>WallView</include>
			<include>Coverflow</include>
		</control>

		<control type="group"><!-- View-As Menu -->
			<posy>720</posy>
			<include>View-as</include>
			<control type="group">
				<visible>ControlGroup(9000).HasFocus() + !Skin.HasSetting(view-as-lock)</visible>
				<control type="image"><!-- Background shadow -->
					<posx>0</posx>
					<posy>0</posy>
					<width>1280</width>
					<height>720</height>
					<texture>colours/black.png</texture>
					<colordiffuse>osd-background</colordiffuse>
				</control>
				<control type="image"><!-- Dialog background -->
					<posx>440</posx>
					<posy>212</posy>
					<width>396</width>
					<height>360</height>
					<texture border="8">button-menu-background.png</texture>
				</control>
			</control>
			<control type="grouplist" id="9000">
				<posx>450</posx>
				<posy>224</posy>
				<width>376</width>
				<height>336</height>
				<onleft>noop</onleft>
				<onright condition="Control.IsVisible(50)">50</onright>
				<onright condition="Control.IsVisible(52)">52</onright>
				<onright condition="Control.IsVisible(58)">58</onright>
				<onright condition="Control.IsVisible(54) | Control.IsVisible(57)">noop</onright>
				<onup>noop</onup>
				<ondown condition="Control.IsVisible(54)">54</ondown>
				<ondown condition="Control.IsVisible(57)">57</ondown>
				<ondown condition="Control.IsVisible(50) | Control.IsVisible(52) | Control.IsVisible(58)">noop</ondown>
				<itemgap>0</itemgap>
				<control type="button" id="2"><!-- View as button -->
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<label>$LOCALIZE[100]</label>
					<textoffsetx>10</textoffsetx>
				</control>
				<control type="radiobutton" id="1198"><!-- Tilt list view icons button  -->
					<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[31886]</label>
					<font>font11</font>
					<onclick>Skin.ToggleSetting(tiltmisclisticon)</onclick>
					<selected>Skin.HasSetting(tiltmisclisticon)</selected>
					<textoffsetx>10</textoffsetx>
					<radioposx>330</radioposx>
					<visible>SubString(Control.GetLabel(2),$LOCALIZE[31941],Right)</visible>
				</control>
				<control type="radiobutton" id="1197"><!-- Tilt wall view icons button -->
					<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[31886]</label>
					<font>font11</font>
					<onclick>Skin.ToggleSetting(tiltmiscwallicon)</onclick>
					<selected>Skin.HasSetting(tiltmiscwallicon)</selected>
					<textoffsetx>10</textoffsetx>
					<radioposx>330</radioposx>
					<visible>SubString(Control.GetLabel(2),$LOCALIZE[31944],Right)</visible>
				</control>
				<control type="button" id="3"><!-- Sort by button -->
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<label>$LOCALIZE[103]</label>
					<textoffsetx>10</textoffsetx>
				</control>
				<control type="togglebutton" id="4"><!-- Sort direction button -->
					<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[21429]: $LOCALIZE[21430]</label>
					<altlabel>$LOCALIZE[21429]: $LOCALIZE[21431]</altlabel>
					<font>font11</font>
					<textoffsetx>10</textoffsetx>
				</control>
				<control type="radiobutton" id="5"><!-- Auto updates button -->
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<textoffsetx>10</textoffsetx>
					<label>$LOCALIZE[24063]</label>
					<radioposx>330</radioposx>
				</control>
				<control type="radiobutton" id ="6"><!-- Notifications button -->
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<textoffsetx>10</textoffsetx>
					<label>$LOCALIZE[25000]</label>
					<radioposx>330</radioposx>
				</control>
				<control type="radiobutton" id ="7"><!-- Hide foreign button -->
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<textoffsetx>10</textoffsetx>
					<label>$LOCALIZE[25001]</label>
					<radioposx>330</radioposx>
				</control>
			</control>
		</control>
	</controls>
</window>

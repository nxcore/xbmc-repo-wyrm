						</item>
						<item id="4">
							<label>$LOCALIZE[31682]</label>
							<onclick>Dialog.Close(1154)</onclick>
							<onclick>RunScript(script.tvtunes,mode=solo&amp;tvpath=$INFO[Window(Home).Property(TVShowPath)]&amp;tvname=$INFO[ListItem.TVShowTitle])</onclick>

<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<previouswindow>Home</previouswindow>
	<controls>
		<include>background</include>
		<include>Fake-Overlay</include>
		<include>#files</include>
		<control type="image">
			<description>Music Logo</description>
			<include>icon-header-commons</include>
			<texture>icon-music-sml.png</texture>
		</control>
		<control type="grouplist">
			<posx>946</posx>
			<posy>35</posy>
			<width>360</width>
			<height>72</height>
			<align>left</align>
			<aligny>center</aligny>
			<orientation>horizontal</orientation>
			<control type="label">
				<description>Music screen headings</description>
				<width min="30" max="250">auto</width>
				<height>72</height>
				<label>$VAR[MusicHeadings]</label>
				<font>font18</font>
				<wrapmultiline>true</wrapmultiline>
				<aligny>top</aligny>
			</control>
			<control type="label">
				<description>Number of files</description>
				<visible>Skin.HasSetting(homemenu-horizontal) | [!Skin.HasSetting(homemenu-vertical) + !Skin.HasSetting(homemenu-horizontal)]</visible>
				<posy>13</posy>
				<width min="30" max="110">auto</width>
				<height>38</height>
				<label>$INFO[Container.NumItems,(,)]</label>
			</control>
		</control>

		<include>memory-low</include>

		<include>AlbumListView</include>
		<include>AlbumWrapView</include>
		<include>AudioWallView</include>
		<include>AlbumCoverflow</include>

		<!-- View-As Menu -->
		<control type="group">
			<posy>720</posy>
			<include>View-as</include>
			<control type="group">
				<visible>ControlGroup(9000).HasFocus() + !Skin.HasSetting(view-as-lock)</visible>
				<control type="image">
					<description>Background shadow</description>
					<posx>0</posx>
					<posy>0</posy>
					<width>1280</width>
					<height>720</height>
					<texture>colours/black.png</texture>
					<colordiffuse>osd-background</colordiffuse>
				</control>
				<control type="image">
					<description>Button Background</description>
					<posx>460</posx>
					<posy>90</posy>
					<width>396</width>
					<height>544</height>
					<texture border="8">button-menu-background.png</texture>
				</control>
			</control>
			<control type="grouplist" id="9000">
				<posx>472</posx>
				<posy>100</posy>
				<width>372</width>
				<height>528</height>
				<onleft>50</onleft>
				<onright>50</onright>
				<onup>9000</onup>
				<ondown>9000</ondown>
				<onback>50</onback>
				<itemgap>0</itemgap>
				<control type="button" id="2">
					<description>View As Icons button</description>
					<width>372</width>
					<height>48</height>
					<font>font11</font>
					<label>$LOCALIZE[100]</label>
				</control>
				<control type="radiobutton" id="1198">
					<description>Tilt Icon List view</description>
					<width>372</width>
					<height>48</height>
					<label>$LOCALIZE[31886]</label>
					<font>font11</font>
					<onclick>Skin.ToggleSetting(tiltmusiclisticon)</onclick>
					<selected>Skin.HasSetting(tiltmusiclisticon)</selected>
					<radioposx>330</radioposx>
					<visible>SubString(Control.GetLabel(2),$LOCALIZE[31941],Right)</visible>
				</control>
				<control type="radiobutton" id="1197">
					<description>Tilt Icon Wall view</description>
					<width>372</width>
					<height>48</height>
					<label>$LOCALIZE[31886]</label>
					<font>font11</font>
					<onclick>Skin.ToggleSetting(tiltmusicwallicon)</onclick>
					<selected>Skin.HasSetting(tiltmusicwallicon)</selected>
					<radioposx>330</radioposx>
					<visible>SubString(Control.GetLabel(2),$LOCALIZE[31944],Right)</visible>
				</control>
				<control type="button" id="3">
					<description>Sort by button</description>
					<width>372</width>
					<height>48</height>
					<font>font11</font>
					<label>$LOCALIZE[103]</label>
				</control>
				<control type="togglebutton" id="4">
					<description>Sort direction</description>
					<width>372</width>
					<height>48</height>
					<font>font11</font>
					<label>$LOCALIZE[21429]: $LOCALIZE[21430]</label>
					<altlabel>$LOCALIZE[21429]: $LOCALIZE[21431]</altlabel>
				</control>
				<control type="radiobutton" id="5">
					<description>Library button</description>
					<width>372</width>
					<height>48</height>
					<font>font11</font>
					<label>$LOCALIZE[29800]</label>
					<selected>Window.IsVisible(musiclibrary)</selected>
					<radioposx>330</radioposx>
				</control>
				<control type="button" id="8">
					<description>Search button</description>
					<width>372</width>
					<height>48</height>
					<font>font11</font>
					<label>$LOCALIZE[137]</label>
				</control>
				<control type="edit" id="19">
					<description>Filter</description>
					<width>372</width>
					<height>48</height>
					<font>font11</font>
					<label>$LOCALIZE[587]</label>
					<textwidth>340</textwidth>
					<visible>!Container.CanFilterAdvanced</visible>
				</control>
				<control type="radiobutton" id="98">
					<description>Advanced Filter</description>
					<width>372</width>
					<height>48</height>
					<label>$LOCALIZE[587]</label>
					<font>font11</font>
					<selected>Container.Filtered</selected>
					<onclick>Filter</onclick>
					<radioposx>330</radioposx>
					<visible>Container.CanFilterAdvanced</visible>
				</control>
				<control type="button" id="17">
					<description>CDDB Button</description>
					<width>372</width>
					<height>48</height>
					<font>font11</font>
					<label>$LOCALIZE[31226]</label>
				</control>
				<control type="button" id="16">
					<description>Party Mode button</description>
					<width>372</width>
					<height>48</height>
					<font>font11</font>
					<label>$LOCALIZE[589]</label>
				</control>
				<control type="button" id="1199">
					<description>Go to playlist</description>
					<width>372</width>
					<height>48</height>
					<font>font11</font>
					<label>$LOCALIZE[13350]</label>
					<onclick>$VAR[PlayList]</onclick>
					<visible>Player.HasMedia</visible>
					<visible>!VideoPlayer.Content(LiveTV)</visible>
					<visible>!Window.IsVisible(MusicPlaylist) + !Window.IsVisible(VideoPlaylist)</visible>
				</control>
				<control type="togglebutton" id="20">
					<description>Update library</description>
					<width>372</width>
					<height>48</height>
					<font>font11</font>
					<label>$LOCALIZE[653]</label>
					<altlabel>$LOCALIZE[13353]</altlabel>
					<onclick condition="SubString(System.BuildVersion,12.,Left)">UpdateLibrary(music)</onclick>
				</control>
				<control type="button" id="1200">
					<description>PlayerControls</description>
					<width>372</width>
					<height>48</height>
					<font>font11</font>
					<label>$LOCALIZE[16003] $LOCALIZE[478]</label>
					<onclick>ActivateWindow(playercontrols)</onclick>
					<onclick>SetFocus(50)</onclick>
					<visible>Player.HasAudio | Player.HasVideo</visible>
				</control>
			</control>
		</control>
	</controls>
</window>
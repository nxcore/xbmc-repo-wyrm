<?xml version="1.0" encoding="utf-8"?>
<window>
	<visible>Player.Seeking | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding </visible>
	<animation effect="fade" end="0" time="200">WindowClose</animation>
	<coordinates>
		<posx>0</posx>
		<posy>640</posy>
	</coordinates>
	<controls>
		<control type="group">
			<visible>![Window.IsVisible(SliderDialog) | Window.IsVisible(OSDVideoSettings) | Window.IsVisible(OSDAudioSettings) | Window.IsVisible(VideoBookmarks) | Window.IsVisible(script.pseudotv.TVOverlay.xml)]</visible>
			<control type="image">
				<description>Seekbar Dialog background image</description>
				<posx>-42</posx>
				<posy>6</posy>
				<height>80</height>
				<width>1359</width>
				<texture>background.png</texture>
				<colordiffuse>osd-background</colordiffuse>
				<visible>[Window.IsActive(fullscreenvideo)] + ![Window.IsActive(MusicOSD)] + ![Window.IsVisible(fullscreeninfo)]</visible>
			</control>
			<include>player-mediaicon</include>
		</control>

		<!-- Player action labels -->
		<control type="group">
			<visible>[Window.IsVisible(FullscreenVideo) | Window.IsVisible(Visualisation)]</visible>
			<control type="grouplist">
				<posx>408</posx>
				<posy>17</posy>
				<width>464</width>
				<height>64</height>
				<align>center</align>
				<aligny>center</aligny>
				<orientation>horizontal</orientation>
				<control type="image">
					<width>64</width>
					<height>64</height>
					<texture>$VAR[PlayStateImage]</texture>
				</control>
				<control type="label">
					<description>Video screen headings</description>
					<width min="150" max="400">auto</width>
					<height>64</height>
					<label>$VAR[PlayStateTxt]</label>
					<font>font22</font>
				</control>
			</control>
		</control>

		<control type="group">
			<visible>[Window.IsVisible(FullscreenVideo)]</visible>
			<visible>![Window.IsVisible(SliderDialog) | Window.IsVisible(OSDVideoSettings) | Window.IsVisible(OSDAudioSettings) | Window.IsVisible(VideoBookmarks) | Window.IsVisible(script.pseudotv.TVOverlay.xml)]</visible>
			<!-- Player info labels -->
			<control type="label">
				<posx>224</posx>
				<posy>5</posy>
				<width>220</width>
				<height>31</height>
				<font>rss20</font>
				<label>[COLOR=disabled-text]($INFO[System.Time])[/COLOR] $INFO[VideoPlayer.Time]</label>
				<align>right</align>
			</control>
			<control type="label">
				<posx>1048</posx>
				<posy>5</posy>
				<width>230</width>
				<height>31</height>
				<font>rss20</font>
				<label>-$INFO[VideoPlayer.TimeRemaining] [COLOR=disabled-text]($INFO[Player.FinishTime])[/COLOR]</label>
			</control>

			<control type="group">
				<visible>!Window.IsVisible(fullscreeninfo)</visible>
				<!-- Progress bar -->
				<control type="progress">
					<posx>238</posx>
					<posy>12</posy>
					<width>800</width>
					<height>16</height>
					<info>Player.ProgressCache</info>
					<colordiffuse>FF777777</colordiffuse>
				</control>
				<control type="progress">
					<posx>238</posx>
					<posy>12</posy>
					<width>800</width>
					<height>16</height>
					<info>Player.Progress</info>
					<colordiffuse>ProgressBarColor</colordiffuse>
				</control>
				
				<control type="slider" id="401"><!-- Seek Slider -->
					<posx>238</posx>
					<posy>10</posy>
					<width>800</width>
					<height>20</height>
					<action>seek</action>
				</control>
			</control>
		</control>
		<!-- Start Progress Control for all Windows Except VideoFullScreen , KaraokeVisualisation, MusicVisualisation, MyMusicPlaylist and PlayerControls-->
		<control type="group">
			<visible>![Window.IsActive(FullscreenVideo) | Window.IsActive(karaoke) | Window.IsActive(Visualisation) | Window.IsActive(musicplaylist) | Window.IsActive(PlayerControls)]</visible>
			<posx>463</posx>
			<posy>-620</posy>
			<control type="image"><!-- Dialog background image -->
				<posx>0</posx>
				<posy>2</posy>
				<width>354</width>
				<height>87</height>
				<texture border="8">button-menu-background.png</texture>
			</control>
			<control type="label">
				<posx>146</posx>
				<posy>25</posy>
				<font>font12</font>
				<align>right</align>
				<label>$INFO[Player.Time]</label>
				<width>177</width>
				<height>20</height>
				<visible>!Player.Seeking</visible>
			</control>
			<control type="label">
				<posx>146</posx>
				<posy>25</posy>
				<font>font12</font>
				<align>right</align>
				<label>$INFO[Player.SeekTime]</label>
				<width>177</width>
				<height>20</height>
				<visible>Player.Seeking</visible>
			</control>
			<control type="label">
				<posx>156</posx>
				<posy>25</posy>
				<label>$INFO[Player.Duration,/ ]</label>
				<font>font12</font>
				<width>177</width>
				<height>20</height>
			</control>
			<control type="progress">
				<posx>18</posx>
				<posy>66</posy>
				<width>300</width>
				<height>8</height>
				<info>Player.ProgressCache</info>
				<colordiffuse>FF777777</colordiffuse>
			</control>
			<control type="progress">
				<posx>18</posx>
				<posy>66</posy>
				<width>300</width>
				<height>8</height>
				<info>Player.Progress</info>
				<colordiffuse>ProgressBarColor</colordiffuse>
			</control>
		</control>
	</controls>
</window>
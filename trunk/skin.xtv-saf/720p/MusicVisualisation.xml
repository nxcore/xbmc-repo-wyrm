<window>
	<allowoverlay>no</allowoverlay>
	<visible>!Window.IsVisible(videooverlay)</visible>
	<visible>!Window.IsVisible(fullscreenvideo)</visible>
	<controls>
		<control type="image">
			<description>solid background</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<texture>background.png</texture>
			<visible>!Skin.String(custom-background)</visible>
		</control>
		<control type="image">
			<description>custom background</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<info>Skin.String(custom-background)</info>
			<colordiffuse>osd-background</colordiffuse>
			<visible>Skin.String(custom-background)</visible>
		</control>
		<control type="group">
			<visible>!Skin.HasSetting(np-vis)</visible>
			<animation effect="fade" time="300">VisibleChange</animation>
			<control type="group">
				<!-- Backgroung fanart image -->
				<control type="multiimage" id="991">
					<posx>0</posx>
					<posy>0</posy>
					<width>1280</width>
					<height>720</height>
					<imagepath fallback="blank.png" background="true">$INFO[Window.Property(ArtistSlideshow)]</imagepath>
					<aspectratio>keep</aspectratio>
					<timeperimage>5000</timeperimage>
					<fadetime>1000</fadetime>
					<randomize>true</randomize>
					<animation effect="fade" start="0" end="100" time="300">Visible</animation>
					<animation effect="fade" start="100" end="0" time="300">Hidden</animation>
					<visible>Skin.HasSetting(background-slideshow)</visible>
				</control>
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>1280</width>
					<height>720</height>
					<texture background="true">$INFO[MusicPlayer.Property(Fanart_Image)]</texture>
					<aspectratio>scale</aspectratio>
					<fadetime>1000</fadetime>
					<visible>!Skin.HasSetting(background-slideshow)</visible>
				</control>
			</control>
		</control>
		<control type="group">		
			<visible>Skin.HasSetting(np-vis)</visible>
			<!-- Background visualisation image -->
			<control type="visualisation" id="2">
				<description>visualisation</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>1280</width>
				<height>720</height>
			</control>
		</control>
		<!-- infos -->
		<control type="group">
			<visible>Player.ShowInfo</visible>
			<control type="image" id="992">
				<description>Music logo if available</description>
				<posx>8</posx>
				<posy>20</posy>
				<width>400</width>
				<height>155</height>
				<texture fallback="blank.png">$INFO[Player.FolderPath,,logo.png]</texture>
				<aligny>bottom</aligny>
				<aspectratio align="left">keep</aspectratio>
			</control>
			<control type="image" id="993">
				<description>Otherwise try parent directory of above</description>
				<posx>8</posx>
				<posy>20</posy>
				<width>400</width>
				<height>155</height>
				<texture fallback="blank.png">$INFO[Player.FolderPath,,../logo.png]</texture>
				<aligny>bottom</aligny>
				<aspectratio align="left">keep</aspectratio>
				<visible>StringCompare(Control.GetLabel(992),blank.png)</visible>
			</control>
			<control type="image">
				<description>media info background image</description>
				<posx>0</posx>
				<posy>565</posy>
				<width>1280</width>
				<height>155</height>
				<texture>background.png</texture>
				<colordiffuse>osd-background</colordiffuse>
			</control>
			<control type="image">
				<description>Cd overlay</description>
				<animation effect="slide" start="-118" end="0" time="900" tween="cubic" easing="out" delay="1000">WindowOpen</animation>
				<animation type="WindowClose">
					<effect type="slide" start="0" end="-114" time="100" tween="cubic" easing="in" delay="0"/>
					<effect type="fade" start="100" end="0" time="200"/>
					<condition type="!Player.Playing"/>
				</animation>
				<animation effect="rotate" end="-360" center="auto" time="3000" loop="true" reversible="false" condition="!Player.Paused">Conditional</animation>
				<width>215</width>
				<height>215</height>
				<posx>132</posx>
				<posy>475</posy>
				<texture fallback="DefaultDVDEmpty.png">$INFO[Player.FolderPath]/cdart.png</texture>
				<aspectratio aligny="bottom">keep</aspectratio>
			</control>
			<control type="image">
				<description>cover image</description>
				<posx>20</posx>
				<posy>470</posy>
				<width>225</width>
				<height>225</height>
				<info>MusicPlayer.Cover</info>
				<aspectratio aligny="bottom">stretch</aspectratio>
			</control>
			<control type="label">
				<description>Title label</description>
				<posx>370</posx>
				<posy>560</posy>
				<width>656</width>
				<height>45</height>
				<font>font18</font>
				<info>MusicPlayer.Title</info>
				<align>left</align>
				<scroll>true</scroll>
			</control>
			<control type="label">
				<description>Artist label</description>
				<posx>370</posx>
				<posy>596</posy>
				<width>682</width>
				<height>37</height>
				<font>font12</font>
				<info>MusicPlayer.Artist</info>
				<align>left</align>
				<scroll>true</scroll>
			</control>
			<control type="label">
				<description>Album label</description>
				<posx>370</posx>
				<posy>626</posy>
				<width>656</width>
				<height>37</height>
				<font>font12</font>
				<info>MusicPlayer.Album</info>
				<align>left</align>
				<scroll>true</scroll>
			</control>
			<control type="label">
				<description>time label</description>
				<posx>370</posx>
				<posy>656</posy>
				<width>656</width>
				<height>37</height>
				<label>$INFO[musicplayer.Time]$INFO[musicplayer.Duration, / ]</label>
				<align>left</align>
				<font>font12</font>
			</control>
			<control type="label">
				<description>Playlist</description>
				<posx>1239</posx>
				<posy>568</posy>
				<width>265</width>
				<height>37</height>
				<align>right</align>
				<label>$INFO[musicplayer.Playlistposition,Track ]$INFO[musicplayer.Playlistlength, / ]</label>
				<font>font12</font>
			</control>
			<control type="label">
				<description>PartyMode Enabled</description>
				<posx>1240</posx>
				<posy>686</posy>
				<width>250</width>
				<height>30</height>
				<label>589</label>
				<visible>MusicPartyMode.Enabled</visible>
				<align>right</align>
				<font>font12</font>
			</control>
			<control type="progress" id="1">
				<description>Progressbar</description>
				<posx>558</posx>
				<posy>662</posy>
				<width>685</width>
				<height>16</height>
				<info>Player.Progress</info>
				<texturebg border="14,0,14,0">progress-background.png</texturebg>
				<midtexture border="14,0,14,0">progress-middle.png</midtexture>
				<colordiffuse>ProgressBarColor</colordiffuse>
				<visible>true</visible>
			</control>
		</control>
		<!-- Codec -->
		<control type="group">
			<visible>Player.ShowCodec</visible>
			<control type="image">
				<description>preset background image</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>1280</width>
				<height>90</height>
				<texture>background.png</texture>
				<colordiffuse>osd-background</colordiffuse>
			</control>
			<control type="label">
				<description>Codecinfo</description>
				<posx>132</posx>
				<posy>12</posy>
				<width>1062</width>
				<height>37</height>
				<label>Audio | $INFO[musicplayer.Codec,Codec:,]$INFO[musicplayer.Bitrate, - Bitrate:,kbps]$INFO[musicplayer.bitspersample, - Bits:,bit]$INFO[musicplayer.Samplerate, - Freq.: ,kHz]$INFO[musicplayer.Channels, - Channels: ]</label>
				<align>left</align>
				<font>font11</font>
			</control>
			<control type="label">
				<description>Presets label</description>
				<posx>132</posx>
				<posy>43</posy>
				<width>220</width>
				<height>37</height>
				<label>Visual | fps: $INFO[System.FPS]</label>
				<font>font11</font>
				<align>left</align>
			</control>
			<control type="label">
				<description>Presets label</description>
				<posx>398</posx>
				<posy>43</posy>
				<width>743</width>
				<height>37</height>
				<label>$INFO[Visualisation.Name]$INFO[Visualisation.Preset, - ]</label>
				<font>font11</font>
				<align>left</align>
			</control>
			<control type="image">
				<description>Preset locked image</description>
				<posx>364</posx>
				<posy>42</posy>
				<width>32</width>
				<height>32</height>
				<texture>arenaitem-private.png</texture>
				<visible>Visualisation.Locked</visible>
			</control>
		</control>
	</controls>
</window>
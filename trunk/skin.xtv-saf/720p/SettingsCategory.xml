<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>3</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<controls>
		<include>background</include>
		<include>Fake-Overlay</include>
		<control type="image"><!-- Settings logo -->
			<include>icon-header-commons</include>
			<texture>icon-settings.png</texture>
		</control>
		<control type="label" id="2"><!-- Settings screen heading -->
			<posx>946</posx>
			<posy>25</posy>
			<width>309</width>
			<height>31</height>
			<label>-</label>
			<font>font20</font>
		</control>
		<control type="label"><!-- Settings subscreen heading -->
			<posx>946</posx>
			<posy>62</posy>
			<width>309</width>
			<height>31</height>
			<label>$LOCALIZE[5]</label>
			<font>font20</font>
		</control>
		<control type="grouplist" id="3"><!-- Subheadings area -->
			<posx>940</posx>
			<posy>112</posy>
			<width>320</width>
			<height>542</height>
			<itemgap>-2</itemgap>
			<onleft>5</onleft>
			<onright>noop</onright>
			<onup>3</onup>
			<ondown>3</ondown>
			<scrolltime tween="sine" easing="out">100</scrolltime>
		</control>

		<!-- Markers for control area items -->
		<control type="image">
			<posx>480</posx>
			<posy>88</posy>
			<height>27</height>
			<width>38</width>
			<texture>scroll-up.png</texture>
			<visible>Container(5).HasPrevious</visible>
		</control>
		<control type="image">
			<posx>480</posx>
			<posy>650</posy>
			<height>27</height>
			<width>38</width>
			<texture>scroll-down.png</texture>
			<visible>Container(5).HasNext</visible>
		</control>

		<control type="grouplist" id="5"><!-- Controls area -->
			<posx>53</posx>
			<posy>112</posy>
			<width>885</width>
			<height>542</height>
			<itemgap>-2</itemgap>
			<onleft>23</onleft>
			<onright>3</onright>
			<onup>5</onup>
			<ondown>5</ondown>
			<pagecontrol>23</pagecontrol>
			<scrolltime tween="sine" easing="out">100</scrolltime>
		</control>
		<control type="scrollbar" id="23"><!-- Scrollbar -->
			<posx>10</posx>
			<posy>112</posy>
			<width>18</width>
			<height>542</height>
			<onleft>9000</onleft>
			<onright>5</onright>
			<visible>Skin.HasSetting(sbar)</visible>
		</control>
		<control type="textbox" id="6"><!-- Settings description area -->
			<posx>53</posx>
			<posy>654</posy>
			<width>870</width>
			<height>62</height>
			<textcolor>listselected-text</textcolor>
			<font>font12</font>
			<align>justify</align>
			<include condition="Skin.HasSetting(autoscroll)">scrolltext</include>
		</control>
		<control type="button" id="7"><!-- Default button -->
			<posx>53</posx>
			<posy>187</posy>
			<width>870</width>
			<height>56</height>
			<textwidth>810</textwidth>
			<font>font12</font>
			<invalidcolor>invalid-text</invalidcolor>
		</control>
		<control type="radiobutton" id="8"><!-- Default radiobutton -->
			<posx>53</posx>
			<posy>187</posy>
			<width>870</width>
			<textwidth>810</textwidth>
			<height>56</height>
			<font>font12</font>
			<radioposx>840</radioposx>
		</control>
		<control type="spincontrolex" id="9"><!-- Default spincontrolex -->
			<posx>53</posx>
			<posy>187</posy>
			<width>870</width>
			<height>56</height>
			<font>font12</font>
			<reverse>yes</reverse>
		</control>
		<control type="button" id="10"><!-- Default category button -->
			<posx>53</posx>
			<posy>187</posy>
			<width>320</width>
			<height>56</height>
			<label>$LOCALIZE[224]</label>
			<font>font12</font>
		</control>

		<control type="group"><!-- Show "View-as" menu -->
			<posy>720</posy>
			<include>View-as</include>
			<control type="group">
				<visible>!Skin.HasSetting(view-as-lock) + !IsEmpty(Control.GetLabel(21))</visible>
				<control type="image"><!-- Background shadow -->
					<posx>0</posx>
					<posy>0</posy>
					<width>1280</width>
					<height>720</height>
					<texture>colours/black.png</texture>
					<colordiffuse>osd-background</colordiffuse>
					<visible>!Skin.HasSetting(view-as-lock)</visible>
				</control>
				<control type="image"><!-- Button background -->
					<posx>440</posx>
					<posy>282</posy>
					<width>396</width>
					<height>125</height>
					<texture border="8">button-menu-background.png</texture>
				</control>
				<control type="grouplist" id="9000">
					<posx>450</posx>
					<posy>292</posy>
					<width>376</width>
					<height>150</height>
					<onleft>noop</onleft>
					<onright>23</onright>
					<onup>9000</onup>
					<ondown>9000</ondown>
					<onback>3</onback>
					<itemgap>0</itemgap>
					<control type="button" id="20"><!-- Setting level button -->
						<width>376</width>
						<height>50</height>
						<label>$LOCALIZE[10037]</label>
						<font>font12</font>
						<onclick>SettingsLevelChange</onclick>
					</control>
					<control type="button" id="21"><!-- Reset button -->
						<width>376</width>
						<height>50</height>
						<label>$LOCALIZE[10035]</label>
						<font>font12</font>
						<onclick>SettingsReset</onclick>
					</control>
				</control>
			</control>
		</control>
	</controls>
</window>
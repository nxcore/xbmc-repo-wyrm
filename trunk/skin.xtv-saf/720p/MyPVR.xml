<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>50</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<previouswindow>Home</previouswindow>
	<controls>
		<include>backgroundvideo</include>
		<control type="image">
			<description>TV Logo</description>
			<include>icon-header-commons</include>
			<texture>icon-tv.png</texture>
		</control>
		<control type="label">
			<description>header label</description>
			<posx>946</posx>
			<posy>50</posy>
			<width>309</width>
			<height>36</height>
			<font>font20</font>
			<label>$VAR[PVRHeading]</label>
		</control>

		<control type="group"><!-- Current Icon/Channel playing -->
			<control type="grouplist">
				<visible>Control.IsVisible(11) | Control.IsVisible(12) | Control.IsVisible(13) | Control.IsVisible(15) | Control.IsVisible(16)</visible>
				<animation effect="fade" start="0" end="100" time="200" delay="100">Visible</animation>
				<posx>20</posx>
				<posy>116</posy>
				<width>628</width>
				<height>578</height>
				<itemgap>2</itemgap>
				<control type="group">
					<visible>!Player.HasVideo | [Player.HasVideo + Skin.HasSetting(HomeViewToggle)]</visible>
					<posx>0</posx>
					<width>256</width>
					<height>256</height>
					<control type="image">
						<posx>186</posx>
						<width>256</width>
						<height>256</height>
						<texture fallback="DefaultTvshows.png" background="true" diffuse="mask-rect.png">$INFO[ListItem.Thumb]</texture>
						<aspectratio scalediffuse="false">keep</aspectratio>
						<aligny>top</aligny>
						<visible>!IsEmpty(ListItem.Thumb)</visible>
					</control>
					<control type="image">
						<posx>186</posx>
						<width>256</width>
						<height>256</height>
						<texture fallback="DefaultTvshows.png" background="true">$INFO[ListItem.Icon]</texture>
						<aspectratio>keep</aspectratio>
						<aligny>top</aligny>
						<visible>IsEmpty(ListItem.Thumb) + !IsEmpty(ListItem.Icon)</visible>
					</control>
				</control>
				<control type="group">
					<posx>0</posx>
					<width>512</width>
					<height>256</height>
					<animation effect="fade" start="0" end="100" time="200" delay="100">Visible</animation>
					<animation effect="zoom" start="100" end="0" time="0">WindowClose</animation>
					<visible>Player.HasVideo + !Skin.HasSetting(HomeViewToggle)</visible>
					<control type="videowindow">
						<posx>58</posx>
						<width>512</width>
						<height>256</height>
						<aspectratio>keep</aspectratio>
						<align>center</align>
						<aligny>top</aligny>
					</control>
				</control>
				<control type="label">
					<label>$INFO[ListItem.Title]</label>
					<width>628</width>
					<height>34</height>
					<font>font18</font>
					<align>center</align>
					<wrapmultiline>true</wrapmultiline>
				</control>
				<control type="label"><!-- Start time -->
					<visible>!IsEmpty(ListItem.Plot) + !IsEmpty(ListItem.StartTime) + !IsEmpty(ListItem.EndTime)+ !Control.IsVisible(13)</visible>
					<width>628</width>
					<height>30</height>
					<align>center</align>
					<label>$LOCALIZE[31134] $INFO[ListItem.StartTime] - $LOCALIZE[31129] $INFO[ListItem.EndTime]</label>
				</control>
				<control type="image">
					<visible>!IsEmpty(ListItem.Title)</visible>
					<width>628</width>
					<height>5</height>
					<texture>separator.png</texture>
				</control>
				<control type="textbox"><!-- Plot -->
					<width>628</width>
					<height>214</height>
					<font>font12</font>
					<align>left</align>
					<label>$INFO[ListItem.Plot]</label>
					<visible>!IsEmpty(ListItem.Plot)</visible>
				</control>
				<control type="image">
					<visible>!IsEmpty(ListItem.Plot)</visible>
					<width>628</width>
					<height>5</height>
					<texture>separator.png</texture>
				</control>
			</control>
		</control>

		<control type="group" id="50">
			<include>PVRTVListView</include>
			<include>PVRRadioListView</include>
			<include>PVRTimelineView</include>
			<include>PVRRecordListView</include>
			<include>PVRTimerListView</include>
			<include>PVRChannelListView</include>
			<include>PVRNowNextListView</include>
			<include>PVRSearchListView</include>
		</control>

		<control type="group">
			<posy>720</posy>
			<include>View-as</include>
			<control type="image"><!-- Button background -->
				<posx>440</posx>
				<posy>202</posy>
				<width>398</width>
				<height>328</height>
				<texture border="8">button-menu-background.png</texture>
			</control>
			<control type="grouplist" id="9000">
				<posx>458</posx>
				<posy>214</posy>
				<width>362</width>
				<height>300</height>
				<onleft>50</onleft>
				<onright>50</onright>
				<onup>9000</onup>
				<ondown>9000</ondown>
				<itemgap>0</itemgap>
				<control type="button" id="32"><!-- TV Channels -->
					<posx>0</posx>
					<posy>0</posy>
					<width>362</width>
					<height>50</height>
					<font>font12</font>
					<label>$LOCALIZE[19023]</label>
					<textoffsetx>20</textoffsetx>
				</control>
				<control type="button" id="33"><!-- Radio Channels -->
					<posx>0</posx>
					<posy>50</posy>
					<width>362</width>
					<height>50</height>
					<font>font12</font>
					<label>$LOCALIZE[19024]</label>
					<textoffsetx>20</textoffsetx>
				</control>
				<control type="button" id="31"><!-- TV Guide -->
					<posx>0</posx>
					<posy>100</posy>
					<width>362</width>
					<height>50</height>
					<label>$LOCALIZE[19222]: $LOCALIZE[19030]</label>
					<font>font12</font>
					<textoffsetx>20</textoffsetx>
				</control>
				<control type="button" id="34"><!-- Recordings -->
					<posx>0</posx>
					<posy>150</posy>
					<width>362</width>
					<height>50</height>
					<label>$LOCALIZE[19163]</label>
					<font>font12</font>
					<textoffsetx>20</textoffsetx>
				</control>
				<control type="button" id="35"><!-- Timers -->
					<posx>0</posx>
					<posy>200</posy>
					<width>362</width>
					<height>50</height>
					<label>$LOCALIZE[19040]</label>
					<textoffsetx>20</textoffsetx>
				</control>
				<control type="button" id="36"><!-- Search -->
					<posx>0</posx>
					<posy>250</posy>
					<width>362</width>
					<height>50</height>
					<label>$LOCALIZE[137]</label>
					<font>font12</font>
					<textoffsetx>20</textoffsetx>
				</control>
			</control>
		</control>
	</controls>
</window>
<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<previouswindow>Home</previouswindow>
	<controls>
		<include>background</include>
		<include>#files</include>
		<include>Fake-Overlay</include>
		<control type="image">
			<description>Programs Logo</description>
			<include>icon-header-commons</include>
			<texture>icon-programs.png</texture>
		</control>
		<control type="grouplist">
			<posx>946</posx>
			<posy>50</posy>
			<width>360</width>
			<height>37</height>
			<align>left</align>
			<aligny>center</aligny>
			<orientation>horizontal</orientation>
			<control type="label"><!-- Video screen heading -->
				<width min="60" max="250">auto</width>
				<height>37</height>
				<label>$LOCALIZE[31029]</label>
				<font>font18</font>
			</control>
			<control type="label"><!-- Number of file (Use if home menu type is not vertical) -->
				<visible>Skin.HasSetting(homemenu-horizontal) | [!Skin.HasSetting(homemenu-vertical) + !Skin.HasSetting(homemenu-horizontal)]</visible>
				<posy>13</posy>
				<width min="40" max="90">auto</width>
				<height>38</height>
				<label>$INFO[Container.NumItems, (,)]</label>
				<font>font13</font>
			</control>
		</control>

		<control type="image">
			<posx>548</posx>
			<posy>506</posy>
			<width>88</width>
			<height>62</height>
			<texture>$INFO[ListItem.Overlay]</texture>
			<visible>Control.IsVisible(50)</visible>
		</control>
		<control type="image"><!-- Reflected overlay image -->
			<posx>548</posx>
			<posy>568</posy>
			<width>88</width>
			<height>62</height>
			<texture flipy="true" diffuse="mask-fade.png">$INFO[ListItem.Overlay]</texture>
			<visible>Control.IsVisible(50)</visible>
		</control>

		<include>memory-low</include>

		<control type="group"><!-- Various Views of Addons library -->
			<include>ListView</include>
			<include>IconView</include>
			<include>WrapView</include>
			<include>WallView</include>
			<include>Coverflow</include>
		</control>

		<control type="group">
			<posy>720</posy>
			<include>View-as</include>
			<control type="group">
				<visible>ControlGroup(9000).HasFocus() + !Skin.HasSetting(view-as-lock)</visible>
				<control type="image"><!-- Background shadow -->
					<posx>0</posx>
					<posy>0</posy>
					<width>1280</width>
					<height>720</height>
					<texture>colours/black.png</texture>
					<colordiffuse>osd-background</colordiffuse>
				</control>
				<control type="image"><!-- Button background -->
					<description>Button Background</description>
					<posx>440</posx>
					<posy>212</posy>
					<width>396</width>
					<height>312</height>
					<texture border="8">button-menu-background.png</texture>
				</control>
			</control>
			<control type="grouplist" id="9000">
				<posx>450</posx>
				<posy>224</posy>
				<width>376</width>
				<height>288</height>
				<onleft>noop</onleft>
				<onright condition="Control.IsVisible(50)">50</onright>
				<onright condition="Control.IsVisible(52)">52</onright>
				<onright condition="Control.IsVisible(58)">58</onright>
				<onright condition="Control.IsVisible(54) | Control.IsVisible(57)">noop</onright>
				<onup>noop</onup>
				<ondown condition="Control.IsVisible(54)">54</ondown>
				<ondown condition="Control.IsVisible(57)">57</ondown>
				<ondown condition="Control.IsVisible(50) | Control.IsVisible(52) | Control.IsVisible(58)">noop</ondown>
				<itemgap>0</itemgap>
				<control type="button" id="2"><!-- View type -->
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<label>$LOCALIZE[100]</label>
					<textoffsetx>10</textoffsetx>
				</control>
				<control type="radiobutton" id="1198"><!-- Tilt icon list view -->
					<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[31886]</label>
					<font>font11</font>
					<onclick>Skin.ToggleSetting(tiltmisclisticon)</onclick>
					<selected>Skin.HasSetting(tiltmisclisticon)</selected>
					<textoffsetx>10</textoffsetx>
					<radioposx>330</radioposx>
					<visible>SubString(Control.GetLabel(2),$LOCALIZE[31941],Right)</visible>
				</control>
				<control type="radiobutton" id="1197"><!-- Tilt icon wall view -->
					<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[31886]</label>
					<font>font11</font>
					<onclick>Skin.ToggleSetting(tiltmiscwallicon)</onclick>
					<selected>Skin.HasSetting(tiltmiscwallicon)</selected>
					<textoffsetx>10</textoffsetx>
					<radioposx>330</radioposx>
					<visible>SubString(Control.GetLabel(2),$LOCALIZE[31944],Right)</visible>
				</control>
				<control type="button" id="3"><!-- Sort by -->
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<label>$LOCALIZE[103]</label>
					<textoffsetx>10</textoffsetx>
				</control>
				<control type="togglebutton" id="4"><!-- Sort direction -->
					<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[21429]: $LOCALIZE[21430]</label>
					<altlabel>$LOCALIZE[21429]: $LOCALIZE[21431]</altlabel>
					<font>font11</font>
					<textoffsetx>10</textoffsetx>
				</control>
				<control type="edit" id="19"><!-- Filter -->
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<label>$LOCALIZE[587]</label>
					<disabledcolor>disabled-text</disabledcolor>
					<textwidth>340</textwidth>
					<textoffsetx>10</textoffsetx>
				</control>
				<control type="button" id="1200"><!-- Player controls -->
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<textoffsetx>10</textoffsetx>
					<label>$LOCALIZE[16003] $LOCALIZE[478]</label>
					<onclick>ActivateWindow(playercontrols)</onclick>
					<onclick>SetFocus(50)</onclick>
					<enable>Player.HasAudio | Player.HasVideo</enable>
				</control>
			</control>
		</control>
	</controls>
</window>
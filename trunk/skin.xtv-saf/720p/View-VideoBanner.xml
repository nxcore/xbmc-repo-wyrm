<includes>
	<include name="BannerView">
		<control type="list" id="59">
			<viewtype label="31946">Banner List</viewtype>
			<visible>[Container.Content(TVShows) | Container.Content(Seasons)]</visible>
			<posx>0</posx>
			<posy>110</posy>
			<width>1280</width>
			<height>514</height>
			<pagecontrol>29</pagecontrol>
			<onup>59</onup>
			<ondown>59</ondown>
			<onleft>9000</onleft>
			<onright>29</onright>
			<itemlayout height="100">
				<control type="group">
					<visible>!SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
					<control type="image">
						<description>Banner</description>
						<posx>630</posx>
						<posy>0</posy>
						<width>610</width>
						<height>100</height>
						<texture background="true">$VAR[IconBanner]</texture>
						<aspectratio align="center" aligny="center">keep</aspectratio>
						<colordiffuse>UnFocusedPosters</colordiffuse>
						<visible>!IsEmpty(ListItem.Art(banner))</visible>
					</control>
					<control type="image">
						<description>Otherwise try TV logo if available</description>
						<posx>630</posx>
						<posy>0</posy>
						<width>610</width>
						<height>100</height>
						<texture fallback="DefaultTvshows.png">$INFO[ListItem.path]logo.png</texture>
						<aspectratio align="center" aligny="center">keep</aspectratio>
						<colordiffuse>UnFocusedPosters</colordiffuse>
						<visible>IsEmpty(ListItem.Art(banner))</visible>
					</control>
				</control>	
				<control type="image">
					<description>Go Back Image</description>
					<posx>630</posx>
					<posy>0</posy>
					<width>610</width>
					<height>100</height>
					<texture background="true">$INFO[ListItem.Icon]</texture>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<colordiffuse>UnFocusedPosters</colordiffuse>
					<visible>SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
				</control>
			</itemlayout>
			<focusedlayout height="114">
				<control type="image">
					<description>Item Hi-lite</description>
					<posx>655</posx>
					<posy>0</posy>
					<width>560</width>
					<height>114</height>
					<texture border="8" diffuse="mask-squ.png" background="true">button-menu-background.png</texture>
				</control>
				<control type="group">
					<visible>!SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
					<control type="image">
						<description>Banner</description>
						<posx>630</posx>
						<posy>6</posy>
						<width>610</width>
						<height>100</height>
						<texture background="true">$VAR[IconBanner]</texture>
						<aspectratio align="center" aligny="center">keep</aspectratio>
						<visible>!IsEmpty(ListItem.Art(banner))</visible>
					</control>
					<control type="image">
						<description>Otherwise try TV logo if available</description>
						<posx>630</posx>
						<posy>6</posy>
						<width>610</width>
						<height>100</height>
						<texture fallback="DefaultTvshows.png">$INFO[ListItem.path]logo.png</texture>
						<aspectratio align="center" aligny="center">keep</aspectratio>
						<visible>IsEmpty(ListItem.Art(banner))</visible>
					</control>
				</control>	
				<control type="image">
					<description>Go Back Image</description>
					<posx>630</posx>
					<posy>6</posy>
					<width>610</width>
					<height>100</height>
					<texture background="true">$INFO[ListItem.Icon]</texture>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<visible>SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
				</control>
			</focusedlayout>
		</control>
		<control type="group">
			<visible>Control.IsVisible(59)</visible>
			<animation effect="fade" delay="300" start="0" end="100" time="200">Visible</animation>
			<visible>Window.IsActive(VideoLibrary) + [Container.Content(TVShows) | Container.Content(Seasons)]</visible>
			<control type="label">
				<description>Go Back</description>
				<posx>70</posx>
				<posy>312</posy>
				<width>557</width>
				<height>50</height>
				<font>font28</font>
				<align>center</align>
				<aligny>center</aligny>
				<label>31688</label>
				<visible>SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
			</control>
			<control type="grouplist">
				<posx>35</posx>
				<posy>118</posy>
				<width>557</width>
				<height>600</height>
				<itemgap>2</itemgap>
				<orientation>vertical</orientation>
				<visible>!IsEmpty(ListItem.Icon)</visible>
				<control type="group">
					<posx>0</posx>
					<posy>0</posy>
					<width>531</width>
					<height>237</height>
					<visible>![Container().OnScrollNext | Container().OnScrollPrevious] + !IsEmpty(ListItem.Art(fanart))</visible>
					<control type="image">
						<description>Mini Fanart</description>
						<width>531</width>
						<height>225</height>
						<texture background="true">$INFO[ListItem.Art(fanart)]</texture>
						<aspectratio align="center" aligny="bottom">keep</aspectratio>
						<fadetime>600</fadetime>
					</control>
				</control>
				<control type="label">
					<description>Title</description>
					<posx>0</posx>
					<posy>225</posy>
					<width>557</width>
					<height>37</height>
					<font>font18</font>
					<align>left</align>
					<aligny>center</aligny>
					<label>[B]$INFO[ListItem.Label][/B]</label>
					<include condition="Skin.HasSetting(autoscroll)">scrolltext</include>
					<visible>!SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
				</control>
				<control type="label">
					<description>First Aired</description>
					<posx>0</posx>
					<posy>268</posy>
					<height>25</height>
					<font>font13</font>
					<label>[B]$LOCALIZE[20416]:[/B] $INFO[ListItem.Premiered]</label>
					<visible>!IsEmpty(ListItem.Premiered)</visible>
				</control>
				<control type="label">
					<description>Genre</description>
					<posx>0</posx>
					<posy>300</posy>
					<width>557</width>
					<height>25</height>
					<font>font13</font>
					<label>[B]$LOCALIZE[515]:[/B] $INFO[ListItem.Genre]</label>
					<include condition="Skin.HasSetting(autoscroll)">scrolltext</include>
					<visible>!IsEmpty(ListItem.Genre)</visible>
				</control>
				<control type="label">
					<description>Rating</description>
					<posx>0</posx>
					<posy>331</posy>
					<height>37</height>
					<font>font13</font>
					<label>[B]$LOCALIZE[563]:[/B] $INFO[ListItem.Rating]</label>
					<visible>!IsEmpty(ListItem.Rating)</visible>
				</control>
				<control type="label">
					<posx>0</posx>
					<posy>375</posy>
					<height>37</height>
					<font>font13</font>
					<label>$INFO[ListItem.Property(UnWatchedEpisodes)] $LOCALIZE[16101] $LOCALIZE[20360]</label>
					<visible>!IsEmpty(ListItem.Property(UnWatchedEpisodes))</visible>
				</control>
				<control type="image">
					<posx>0</posx>
					<posy>412</posy>
					<width>557</width>
					<height>2</height>
					<texture>separator.png</texture>
					<visible>!SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
				</control>
				<!-- Plot Outline -->
				<control type="textbox">
					<posx>8</posx>
					<posy>431</posy>
					<width>548</width>
					<height>150</height>
					<font>font13</font>
					<label fallback="161">$INFO[ListItem.PlotOutline]</label>
					<visible>!IsEmpty(ListItem.PlotOutline)</visible>
					<autoscroll time="4000" delay="6000" repeat="8000">Skin.HasSetting(autoscroll)</autoscroll>
				</control>
				<!-- Plot (Show if no outline available)-->
				<control type="textbox">
					<posx>8</posx>
					<posy>431</posy>
					<width>548</width>
					<height>150</height>
					<font>font13</font>
					<label fallback="161">$INFO[ListItem.Plot]</label>
					<visible>IsEmpty(ListItem.PlotOutline) + !IsEmpty(ListItem.Plot)</visible>
					<autoscroll time="4000" delay="6000" repeat="8000">Skin.HasSetting(autoscroll)</autoscroll>
				</control>
			</control>
			<control type="group">
				<include>SortLetterNotification</include>
				<!-- Scroll Bar -->
				<control type="scrollbar" id="29">
					<posx>1239</posx>
					<posy>105</posy>
					<width>22</width>
					<height>524</height>
					<onleft>59</onleft>
					<onright>9000</onright>
					<visible>Skin.HasSetting(sbar)</visible>
				</control>
			</control>
		</control>
	</include>
</includes>
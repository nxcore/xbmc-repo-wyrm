<window id="0">
	<defaultcontrol always="false">420</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<animation effect="fade" start="0" end="0" time="10000" condition="Window.Previous(Startup) + Skin.HasSetting(intro-vid)">WindowOpen</animation>
	<controls>
		<control type="button" id="420">
			<description>trigger playlist if selected</description>
			<posy>-12</posy>
			<posy>-12</posy>
			<width>1</width>
			<height>1</height>
			<include condition="Skin.HasSetting(startup-playlist)">StartupPlaylist</include>
			<onfocus>SetFocus(9000)</onfocus>
			<texturenofocus>-</texturenofocus>
			<texturefocus>-</texturefocus>
		</control>
		
		<include>background</include>
		
		<include>memory-low</include>
		
		<!-- Use Vertical Home menu-->
		<include condition="!Skin.HasSetting(horizontal-homemenu)">VertHomeMenu</include>
		
		<!-- Use Horizontal Home menu-->
		<include condition="Skin.HasSetting(horizontal-homemenu)">HorzHomeMenu</include>
		
		<!-- media infos (music) -->
		<control type="group">
			<visible>Skin.HasSetting(overlay) + Player.HasAudio + !Window.IsActive(PlayerControls)</visible>
			<control type="image">
				<description>cover image</description>
				<posx>17</posx>
				<posy>542</posy>
				<width>159</width>
				<height>112</height>
				<info>MusicPlayer.Cover</info>
				<include>homemediainfo</include>
				<aspectratio align="right">keep</aspectratio>
			</control>
			<control type="label">
				<description>Artist label</description>
				<posx>194</posx>
				<posy>537</posy>
				<width>460</width>
				<height>31</height>
				<info>MusicPlayer.Artist</info>
				<align>left</align>
				<font>font12</font>
				<scroll>true</scroll>
				<include>homemediainfo</include>
			</control>
			<control type="label">
				<description>Album label</description>
				<posx>194</posx>
				<posy>568</posy>
				<width>460</width>
				<height>31</height>
				<info>MusicPlayer.Album</info>
				<align>left</align>
				<font>font12</font>
				<scroll>true</scroll>
				<include>homemediainfo</include>
			</control>
			<control type="label">
				<description>Title label</description>
				<posx>194</posx>
				<posy>600</posy>
				<width>460</width>
				<height>31</height>
				<info>MusicPlayer.Title</info>
				<align>left</align>
				<font>font12</font>
				<scroll>true</scroll>
				<include>homemediainfo</include>
			</control>
			<control type="label">
				<description>Time label</description>
				<posx>194</posx>
				<posy>631</posy>
				<width>460</width>
				<height>31</height>
				<label>$INFO[MusicPlayer.Time]$INFO[MusicPlayer.Duration, / ]</label>
				<align>left</align>
				<font>font12</font>
				<include>homemediainfo</include>
			</control>
		</control>
		<!-- media infos (video) -->
		<control type="group">
			<visible>Skin.HasSetting(overlay) + Player.HasVideo + !Window.IsActive(PlayerControls)</visible>
			<control type="videowindow">
				<description>video preview window</description>
				<posx>44</posx>
				<posy>520</posy>
				<width>205</width>
				<height>123</height>
				<include>homemediainfo</include>
			</control>
			<control type="label">
				<description>Now playing</description>
				<posx>265</posx>
				<posy>537</posy>
				<width>398</width>
				<height>31</height>
				<label>13350</label>
				<align>left</align>
				<font>font12</font>
				<textcolor>listselectedtext</textcolor>
				<include>homemediainfo</include>
			</control>
			<control type="label">
				<description>Video Title label</description>
				<posx>265</posx>
				<posy>568</posy>
				<width>398</width>
				<height>31</height>
				<info>VideoPlayer.Title</info>
				<align>left</align>
				<font>font12</font>
				<scroll>true</scroll>
				<include>homemediainfo</include>
			</control>
			<control type="label">
				<description>Time label</description>
				<posx>265</posx>
				<posy>600</posy>
				<width>398</width>
				<height>31</height>
				<label>$INFO[VideoPlayer.Time]$INFO[VideoPlayer.Duration, / ]</label>
				<align>left</align>
				<font>font12</font>
				<scroll>true</scroll>
				<include>homemediainfo</include>
			</control>
		</control>
		
		<!-- RSS info -->
		<include>page-info</include>
	</controls>
</window>
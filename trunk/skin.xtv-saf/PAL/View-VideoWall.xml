<includes>
	<include name="VideoWallView">
		<control type="panel" id="58">
			<posx>90</posx>
			<posy>120</posy>
			<width>548</width>
			<height>330</height>
			<onleft>2</onleft>
			<onright>28</onright>
			<onup>58</onup>
			<ondown>58</ondown>
			<viewtype label="31945">Wall</viewtype>
			<scrolltime>100</scrolltime>
			<include>list-fade</include>
			<pagecontrol>28</pagecontrol>
			<preloaditems>8</preloaditems>
			<animation effect="rotatey" start="-15" end="-15" time="0" condition="Skin.HasSetting(tilted-videowall)">Conditional</animation>
			<itemlayout height="110" width="66">
				<control type="image">
					<width>66</width>
					<height>110</height>
					<posx>0</posx>
					<posy>0</posy>
					<texture>-</texture>
				</control>
				<control type="image">
					<posx>1</posx>
					<posy>1</posy>
					<width>64</width>
					<height>108</height>
				    <aspectratio>stretch</aspectratio>
					<colordiffuse>UnFocusedPosters</colordiffuse>
					<texture background="true" diffuse="mask-rect.png">DefaultVideo.png</texture>
					<visible>SubString(ListItem.Icon,DefaultFolder.png,Left)</visible>
				</control>
				<control type="image">
					<posx>1</posx>
					<posy>1</posy>
					<width>64</width>
					<height>108</height>
				    <aspectratio>stretch</aspectratio>
					<colordiffuse>UnFocusedPosters</colordiffuse>
					<texture fallback="DefaultVideo.png" background="true" diffuse="mask-rect.png">$INFO[ListItem.Icon]</texture>
					<visible>!SubString(ListItem.Icon,DefaultFolder.png,Left)</visible>
				</control>
			</itemlayout>
			<focusedlayout height="128" width="76">
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>66</width>
					<height>112</height>
				    <aspectratio>stretch</aspectratio>
					<animation type="Focus" reversible="false">
						<effect type="zoom" start="100" end="150" center="auto" time="600" tween="back" easing="out" />
					</animation>
					<texture background="true" diffuse="mask-rect.png">DefaultVideo.png</texture>
					<visible>SubString(ListItem.Icon,DefaultFolder.png,Left)</visible>
				</control>
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>66</width>
					<height>112</height>
					<texture background="true">$INFO[ListItem.Icon]</texture>
					<aspectratio align="center" aligny="center">stretch</aspectratio>
					<animation type="Focus" reversible="false">
						<effect type="zoom" start="100" end="150" center="auto" time="600" tween="back" easing="out" />
					</animation>
					<visible>SubString(ListItem.Icon,DefaultFolderBack,Left)</visible>
				</control>
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>66</width>
					<height>112</height>
					<texture background="true" diffuse="mask-rect.png">$INFO[ListItem.Icon]</texture>
					<aspectratio align="center" aligny="center">stretch</aspectratio>
					<bordertexture border="8">hi-lite.png</bordertexture>
					<bordersize>8</bordersize>
					<animation type="Focus" reversible="false">
						<effect type="zoom" start="100" end="150" center="auto" time="600" tween="back" easing="out" />
					</animation>
					<visible>!SubString(ListItem.Icon,DefaultFolder,Left)</visible>
				</control>
			</focusedlayout>
		</control>
		<control type="group">
			<visible>Control.IsVisible(58)</visible>
			<!-- Markers for excess menu items -->
			<control type="image">
				<posx>352</posx>
				<posy>86</posy>
				<height>17</height>
				<width>17</width>
				<texture>scroll-up.png</texture>
				<visible>Container(58).HasPrevious</visible>
			</control>
			<control type="image">
				<posx>352</posx>
				<posy>485</posy>
				<height>17</height>
				<width>17</width>
				<texture>scroll-down.png</texture>
				<visible>Container(58).HasNext</visible>
			</control>
			<!-- MPAA Rating -->
			<control type="group">
				<posx>10</posx>
				<posy>505</posy>
				<include>mpaa-ratings</include>
			</control>
			<control type="scrollbar" id="28">
				<posx>700</posx>
				<posy>82</posy>
				<width>14</width>
				<height>422</height>
				<texturesliderbackground border="0,8,0,8">scrollbar_background.png</texturesliderbackground>
				<texturesliderbar border="0,8,0,8">scrollbar_bar.png</texturesliderbar>
				<texturesliderbarfocus border="0,8,0,8">scrollbar_bar_focus.png</texturesliderbarfocus>
				<textureslidernib>-</textureslidernib>
				<textureslidernibfocus>-</textureslidernibfocus>
				<onleft>58</onleft>
				<onright>2</onright>
				<include>list-fade</include>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
				<colordiffuse>ScrollBarColor</colordiffuse>
				<visible>Skin.HasSetting(sbar) + Control.IsVisible(58)</visible>
			</control>
			<!-- Watched Overlay -->
			<control type="image">
				<posx>10</posx>
				<posy>470</posy>
				<width>32</width>
				<height>32</height>
				<info>ListItem.Overlay</info>
				<visible>Skin.HasSetting(watched-overlay)</visible>
			</control>
			<!-- Title -->
			<control type="image" id="7016">
				<posx>314</posx>
				<posy>495</posy>
				<width>134</width>
				<height>52</height>
				<texture background="true">$INFO[ListItem.path]logo.png</texture>
				<aligny>bottom</aligny>
				<aspectratio align="left">keep</aspectratio>
				<animation effect="fade" delay="100" start="0" end="100" time="200">Visible</animation>
				<visible>container.content(tvshows)</visible>
			</control>
			<control type="label">
				<posx>138</posx>
				<posy>505</posy>
				<width>454</width>
				<height>30</height>
				<font>font18</font>
				<align>center</align>
				<textcolor>button-text</textcolor>
				<shadowcolor>shadow-text</shadowcolor>
				<scroll>true</scroll>
				<info>ListItem.Label</info>
				<textoffsetx>0</textoffsetx>
				<visible>[IsEmpty(Control.GetLabel(7016))] + container.content(tvshows)</visible>
				<visible>!SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
				<animation effect="fade" delay="50" start="0" end="100" time="100">Visible</animation>
				<animation effect="fade" time="200">WindowClose</animation>
			</control>
			<control type="label">
				<posx>138</posx>
				<posy>505</posy>
				<width>454</width>
				<height>30</height>
				<font>font18</font>
				<align>center</align>
				<textcolor>button-text</textcolor>
				<shadowcolor>shadow-text</shadowcolor>
				<scroll>true</scroll>
				<info>ListItem.Label</info>
				<textoffsetx>0</textoffsetx>
				<visible>!container.content(tvshows)</visible>
				<visible>!SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
				<animation effect="fade" delay="50" start="0" end="100" time="100">Visible</animation>
				<animation effect="fade" time="200">WindowClose</animation>
			</control>
			<!-- Go Back -->
			<control type="label">
				<posx>138</posx>
				<posy>500</posy>
				<width>454</width>
				<height>30</height>
				<font>font18</font>
				<align>center</align>
				<textcolor>button-text</textcolor>
				<shadowcolor>shadow-text</shadowcolor>
				<scroll>true</scroll>
				<label>31688</label>
				<textoffsetx>0</textoffsetx>
				<visible>SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
			</control>
			<!-- Genre -->
			<control type="label">
				<posx>140</posx>
				<posy>545</posy>
				<width>450</width>
				<height>30</height>
				<font>font12</font>
				<align>center</align>
				<textcolor>button-text</textcolor>
				<shadowcolor>shadow-text</shadowcolor>
				<selectedcolor>listselectedtext</selectedcolor>
				<scroll>true</scroll>
				<info>ListItem.Genre</info>
				<textoffsetx>0</textoffsetx>
			</control>
			<!-- Star Rating -->
			<control type="image">
				<posx>605</posx>
				<posy>515</posy>
				<width>100</width>
				<height>20</height>
				<info>ListItem.StarRating</info>
				<colordiffuse>StarDiffuse</colordiffuse>
				<visible>!IsEmpty(ListItem.StarRating)</visible>
			</control>
		</control>
	</include>
</includes>

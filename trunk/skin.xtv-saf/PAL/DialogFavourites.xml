<window id="105">
	<defaultcontrol always="true">450</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<controls>
		<include>fadebackground</include>
		<include>background</include>
		<include>Fake-Overlay</include>
		
		<control type="image">
			<description>Favourites Logo</description>
			<include>icon-header-commons</include>
			<animation effect="zoom" start="470,14,64,64" end="140,145,230,230" time="175">WindowClose</animation>
			<animation effect="zoom" start="140,145,230,230" end="470,14,64,64" time="175">WindowOpen</animation>
			<texture>icon-fav-sml.png</texture>
		</control>
		<control type="image">
			<description>Favourites Logo Reflection</description>
			<include>icon-header-reflect-commons</include>
			<include>icon-reflection-ani</include>
			<texture flipy="true" diffuse="fade.png">icon-fav-sml.png</texture>
		</control>

		<control type="label">
			<description>Favourites Label</description>
			<posx>535</posx>
			<posy>40</posy>
			<width>170</width>
			<label>$LOCALIZE[1036]</label>
			<font>font20</font>
			<style>bold</style>
			<textcolor>button-text</textcolor>
			<shadowcolor>shadow-text</shadowcolor>
			<include>list-fade</include>
		</control>

		<control type="group">
			<control type="list" id="450">
				<posx>405</posx>
				<posy>90</posy>
				<width>285</width>
				<height>420</height>
				<onleft>1</onleft>
				<onright>10</onright>
				<onup>450</onup>
				<ondown>450</ondown>
				<scrolltime>200</scrolltime>
				<pagecontrol>23</pagecontrol>
				<itemlayout height="32">
					<control type="label">
						<posx>10</posx>
						<posy>0</posy>
						<width>254</width>
						<height>37</height>
						<font>font12</font>
						<align>left</align>
						<aligny>center</aligny>
						<textcolor>button-text</textcolor>
						<selectedcolor>listselectedtext</selectedcolor>
						<info>ListItem.Label</info>
					</control>
				</itemlayout>
				<focusedlayout height="32">
					<control type="image">
						<width>285</width>
						<height>37</height>
						<posx>0</posx>
						<posy>0</posy>
						<texture>default-button.png</texture>
					</control>
					<control type="label">
						<posx>10</posx>
						<posy>0</posy>
						<width>254</width>
						<height>37</height>
						<font>font12</font>
						<align>left</align>
						<aligny>center</aligny>
						<textcolor>button-text</textcolor>
						<selectedcolor>listselectedtext</selectedcolor>
						<info>ListItem.Label</info>
						<scroll>true</scroll>
					</control>
				</focusedlayout>
			</control>
		</control>
		<control type="group">
			<animation type="TYPE" condition="Skin.HasSetting(tilted-icons)" reversible="false">
				<effect type="rotatey" start="-20" end="-20" time="0"/>
				<effect type="slide" end="10,0" time="0"/>
			</animation>
			<control type="image">
				<description>list item icon</description>
				<posx>20</posx>
				<posy>125</posy>
				<width>345</width>
				<height>345</height>
				<texture fallback="shut-fav.png" background="true" diffuse="RndVideoMask.png" border="3">$INFO[ListItem.Icon]</texture>
				<aspectratio>keep</aspectratio>
				<include>list-fade</include>
			</control>
			<control type="image">
				<description>list item icon reflection</description>
				<posx>20</posx>
				<posy>470</posy>
				<width>345</width>
				<height>345</height>
				<texture fallback="shut-fav.png" background="true" flipy="true" diffuse="RndVideoMaskFade.png" border="3">$INFO[ListItem.Icon]</texture>
				<aspectratio>keep</aspectratio>
				<include>list-fade</include>
			</control>
		</control>
		<control type="label" id="12">
			<description>number of files text label</description>
			<posx>600</posx>
			<posy>546</posy>
			<align>left</align>
			<label>$INFO[Container(450).NumItems] $LOCALIZE[127]</label>
			<font>font13</font>
			<textcolor>button-text</textcolor>
			<shadowcolor>shadow-text</shadowcolor>
			<include>list-fade</include>
		</control>
		<control type="scrollbar" id="23">
			<posx>700</posx>
			<posy>90</posy>
			<width>14</width>
			<height>448</height>
			<texturesliderbackground border="0,8,0,8">scrollbar_background.png</texturesliderbackground>
			<texturesliderbar border="0,8,0,8">scrollbar_bar.png</texturesliderbar>
			<texturesliderbarfocus border="0,8,0,8">scrollbar_bar_focus.png</texturesliderbarfocus>
			<textureslidernib>-</textureslidernib>
			<textureslidernibfocus>-</textureslidernibfocus>
			<onleft>50</onleft>
			<onright>2</onright>
			<include>list-fade</include>
			<showonepage>false</showonepage>
			<orientation>vertical</orientation>
			<colordiffuse>ScrollBarColor</colordiffuse>
			<visible>Skin.HasSetting(sbar)</visible>
		</control>
	</controls>
</window>
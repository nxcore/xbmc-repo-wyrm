	<!-- Begin fade background image include -->
	<include name="fadebackground">
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<texture>black.png</texture>
			<aspectratio>scale</aspectratio>
		</control>
	</include>
	
	<!-- Begin background image include -->
	<include name="background">
		<control type="image">
			<description>solid background</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<colordiffuse>solid-background</colordiffuse>
			<texture>background.png</texture>
		</control>
		<control type="visualisation">
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<aspectratio>scale</aspectratio>
			<visible>Skin.HasSetting(HomeViewToggle) + !(Window(videolibrary).Property(TvTunesIsAlive))</visible>
		</control>
		<control type="videowindow">
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<aspectratio>scale</aspectratio>
			<visible>Skin.HasSetting(HomeViewToggle)</visible>
		</control>
		<control type="image">
			<description>background to cover video and visualisation backgrounds</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<colordiffuse>mask-background</colordiffuse>
			<texture>background.png</texture>
			<visible>Skin.HasSetting(HomeViewToggle)</visible>
		</control>
		<control type="image">
			<description>custom background</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<colordiffuse>fanart-background</colordiffuse>
			<info>Skin.String(custom-background)</info>
			<visible>INFO$(Skin.String(custom-background))</visible>
		</control>
		<control type="group">
			<visible>Skin.HasSetting(background-fanart) + !Player.HasVideo</visible>
			<control type="image">
				<description>Fanart background</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>720</width>
				<height>576</height>
				<colordiffuse>fanart-background</colordiffuse>
				<aspectratio>scale</aspectratio>
				<fadetime>300</fadetime>
				<include>background-fade</include>
				<texture background="true">$INFO[ListItem.Property(Fanart_Image)]</texture>
				<visible>!IsEmpty(ListItem.Property(Fanart_Image))</visible>
			</control>
			<!-- Following fanart hacks modified from Ronie's hacks in T! -->
			<control type="image">
				<description>hack for (inside folder) fanart in programs pictures scripts</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>720</width>
				<height>576</height>
				<colordiffuse>fanart-background</colordiffuse>
				<texture background="true">$INFO[Container.FolderPath,,fanart.jpg]</texture>
				<aspectratio>scale</aspectratio>
				<fadetime>300</fadetime>
				<include>background-fade</include>
				<visible>IsEmpty(ListItem.Property(Fanart_Image)) + IsEmpty(Fanart.Image) + ![substring(ListItem.Path,plugin://) | substring(ListItem.Path,special://) | substring(Container.FolderPath,plugin://) | substring(Container.FolderPath,special://) | substring(Container.FolderPath,addon://)]</visible>
			</control>
			<control type="image">
				<description>hack for (inside folder) fanart in programs pictures scripts</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>720</width>
				<height>576</height>
				<colordiffuse>fanart-background</colordiffuse>
				<texture background="true">$INFO[ListItem.Path,,fanart.jpg]</texture>
				<aspectratio>scale</aspectratio>
				<fadetime>300</fadetime>
				<include>background-fade</include>
				<visible>IsEmpty(ListItem.Property(Fanart_Image)) + IsEmpty(Fanart.Image) + ![substring(ListItem.Path,plugin://) | substring(ListItem.Path,special://) | substring(Container.FolderPath,plugin://) | substring(Container.FolderPath,special://) | substring(Container.FolderPath,addon://)]</visible>
			</control>
			<control type="image">
				<description>hack for (folder) fanart in programs pictures scripts</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>720</width>
				<height>576</height>
				<colordiffuse>fanart-background</colordiffuse>
				<texture background="true">$INFO[ListItem.FilenameAndPath,,fanart.jpg]</texture>
				<aspectratio>scale</aspectratio>
				<fadetime>300</fadetime>
				<include>background-fade</include>
				<visible>IsEmpty(ListItem.Property(Fanart_Image)) + IsEmpty(Fanart.Image) + ![substring(ListItem.Path,plugin://) | substring(ListItem.Path,special://) | substring(Container.FolderPath,plugin://) | substring(Container.FolderPath,special://) | substring(Container.FolderPath,addon://)]</visible>
			</control>
		</control>
	</include>


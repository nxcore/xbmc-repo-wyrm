<window id="20">
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<controls>
		<include>background</include>
		<include>#files</include>
		<include>Fake-Overlay</include>
		<control type="image">
			<description>Settings Logo</description>
			<include>icon-header-commons</include>
			<texture>icon-settings.png</texture>
		</control>
		<control type="label">
			<description>Addons Label</description>
			<posx>535</posx>
			<posy>40</posy>
			<label>24001</label>
			<font>font20</font>
			<textcolor>button-text</textcolor>
		</control>

		<!-- Show Addon Status -->
		<control type="fadelabel">
			<posx>80</posx>
			<posy>65</posy>
			<width>256</width>
			<height>20</height>
			<font>font13</font>
			<textcolor>button-text</textcolor>
			<shadowcolor>shadow-text</shadowcolor>
			<scrollout>false</scrollout>
			<pauseatend>2000</pauseatend>
			<align>center</align>
			<aligny>center</aligny>
			<label>$INFO[ListItem.Property(Addon.Status)]</label>
		</control>
		
		<!-- Show Addons icon -->
		<control type="image">
			<description>list item icon</description>
			<posx>80</posx>
			<posy>90</posy>
			<width>256</width>
			<height>256</height>
			<texture background="true">DefaultAddon.png</texture>
			<info>ListItem.Icon</info>
			<fadetime>200</fadetime>
			<aspectratio>keep</aspectratio>
			<visible>Control.IsVisible(50) + !SubString(ListItem.Icon,DefaultFolder.png,Left)</visible>
			<include>list-fade</include>
		</control>
		<control type="image">
			<description>list item icon reflection</description>
			<posx>80</posx>
			<posy>347</posy>
			<width>256</width>
			<height>256</height>
			<texture background="true" flipy="true" diffuse="mask-fade.png">DefaultAddon.png</texture>
			<info>ListItem.Icon</info>
			<fadetime>200</fadetime>
			<aspectratio>keep</aspectratio>
			<visible>Control.IsVisible(50) + !SubString(ListItem.Icon,DefaultFolder.png,Left)</visible>
			<include>list-fade</include>
		</control>

		<!-- Show Addons icon as the Default icon -->
		<control type="image">
			<description>list item icon</description>
			<posx>80</posx>
			<posy>90</posy>
			<width>256</width>
			<height>256</height>
			<texture background="true">DefaultAddon.png</texture>
			<fadetime>200</fadetime>
			<aspectratio>keep</aspectratio>
			<visible>Control.IsVisible(50) + SubString(ListItem.Icon,DefaultFolder.png,Left)</visible>
			<include>list-fade</include>
		</control>
		<control type="image">
			<description>list item icon reflection</description>
			<posx>80</posx>
			<posy>347</posy>
			<width>256</width>
			<height>256</height>
			<texture background="true" flipy="true" diffuse="mask-fade.png">DefaultAddon.png</texture>
			<fadetime>200</fadetime>
			<aspectratio>keep</aspectratio>
			<visible>Control.IsVisible(50) + SubString(ListItem.Icon,DefaultFolder.png,Left)</visible>
			<include>list-fade</include>
		</control>

		<include>ListView</include>
		<include>PageControl</include>

		<control type="group">
			<visible>!Skin.HasSetting(view-as-lock)</visible>
			<control type="image">
				<description>Background shadow</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>720</width>
				<height>576</height>
				<texture>black.png</texture>
				<include>button-fade</include>
				<include>View-as</include>
			</control>
			<control type="image">
				<description>Button Background</description>
				<posx>260</posx>
				<posy>170</posy>
				<width>225</width>
				<height>205</height>
				<texture border="8" diffuse="mask-square.png">button-menu-background.png</texture>
				<include>button-fade</include>
				<include>View-as</include>
			</control>
			<control type="grouplist" id="420">
				<posx>270</posx>
				<posy>180</posy>
				<width>205</width>
				<height>205</height>
				<itemgap>2</itemgap>
				<onup>420</onup>
				<ondown>420</ondown>
				<onleft>50</onleft>
				<onright>50</onright>
				<control type="button" id="2">
					<description>View As Icons button</description>
					<width>205</width>
					<font>font12</font>
					<label>100</label>
					<textoffsetx>10</textoffsetx>
					<aligny>center</aligny>
					<texturefocus>default-button.png</texturefocus>
					<texturenofocus>-</texturenofocus>
					<textcolor>button-text</textcolor>
					<include>button-fade</include>
					<include>View-as</include>
				</control>
				<control type="group" id="999">
					<posx>0</posx>
					<posy>0</posy>
					<width>205</width>
					<height>37</height>
					<include>View-as</include>
					<control type="image">
						<description>Button image</description>
						<posx>0</posx>
						<posy>0</posy>
						<width>205</width>
						<height>37</height>
						<texture>default-button.png</texture>
						<include>button-fade</include>
						<visible>Control.HasFocus(3) | Control.HasFocus(4)</visible>
					</control>
					<control type="button" id="3">
						<description>Sort by button</description>
						<posx>0</posx>
						<posy>0</posy>
						<width>205</width>
						<font>font12</font>
						<label>103</label>
						<textoffsetx>10</textoffsetx>
						<texturefocus>-</texturefocus>
						<texturenofocus>-</texturenofocus>
						<onleft>50</onleft> 
						<onright>4</onright>
						<textcolor>button-text</textcolor>
						<include>button-fade</include>
						<!--<include>View-as</include>-->
					</control>
					<control type="togglebutton" id="4">
						<description>Sort asc/dsc</description>
						<posx>180</posx>
						<posy>10</posy>
						<width>15</width>
						<height>15</height>
						<label>-</label>
						<onleft>3</onleft> 
						<onright>50</onright>
						<include>button-fade</include>
						<!--<include>View-as</include>-->
					</control>
				</control>
				<control type="radiobutton" id="5">
					<description>Enable auto-updates</description>
					<width>205</width>
					<font>font12</font>
					<textoffsetx>10</textoffsetx>
					<label>24063</label>
					<textcolor>button-text</textcolor>
					<include>button-fade</include>
					<include>View-as</include>
				</control>
				<control type="radiobutton" id ="6"> 
					<description>No notifications</description>
					<width>205</width>
					<font>font12</font>
					<textoffsetx>10</textoffsetx>
					<label>25000</label> 
					<textcolor>button-text</textcolor>
					<include>button-fade</include>
					<!--<include>View-as</include>-->
					<visible>!IsEmpty($LOCALIZE[25000])</visible>
				</control>
			</control>
		</control>
	</controls>
</window>

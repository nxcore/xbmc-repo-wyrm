		<control type="group">
			<visible>!Skin.HasSetting(view-as-lock)</visible>
			<control type="image">
				<description>Background shadow</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>720</width>
				<height>576</height>
				<texture>black.png</texture>

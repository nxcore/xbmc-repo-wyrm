<window id="2600">
	<defaultcontrol always="true">7050</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<controls>
		<include>background</include>
		<control type="button" id="7050">
			<texturefocus>-</texturefocus>
			<texturenofocus>-</texturenofocus>
			<onleft>6000</onleft>
			<onright>6000</onright>
			<onup>9000</onup>
			<ondown>9000</ondown>
		</control>
		<control type="image">
			<description>Weather Logo</description>
			<include>icon-header-commons</include>
			<include>icon-ani</include>
			<texture>icon-weather.png</texture>
			<visible>Skin.HasSetting(home-weather)</visible>
		</control>
		<control type="label">
			<description>Weather Label</description>
			<posx>535</posx>
			<posy>40</posy>
			<label>31032</label>
			<font>font20</font>
			<textcolor>button-text</textcolor>
		</control>
		
		<!-- Current location and last updated labels -->
		<control type="label">
			<description>weather location label</description>
			<posx>10</posx>
			<posy>5</posy>
			<width>360</width>
			<height>30</height>
			<font>font18</font>
			<textcolor>button-text</textcolor>
			<shadowcolor>shadow-text</shadowcolor>
			<scroll>false</scroll>
			<align>left</align>
			<aligny>center</aligny>
			<label>$INFO[Weather.Location]</label>
		</control>
		<control type="label">
			<description>update label</description>
			<posx>10</posx>
			<posy>30</posy>
			<width>300</width>
			<height>35</height>
			<font>font11</font>
			<label>$LOCALIZE[31531] - $INFO[Window.Property(Updated)]</label>
			<align>left</align>
			<aligny>center</aligny>
			<textcolor>button-text</textcolor>
			<shadowcolor>shadow-text</shadowcolor>
		</control>
		
		<!-- Display a particular weather screen based on what plugin selected -->
		<include condition="!StringCompare(Weather.Plugin,weather.weatherplus)">weather</include>
		<include condition="StringCompare(Weather.Plugin,weather.weatherplus)">weatherplus</include>
		
		<!-- Weather+ forecast type selection -->
		<control type="group" id="995">
			<visible allowhiddenfocus="true">ControlGroup(995).HasFocus + Skin.HasSetting(showforecasttypes)</visible>
			<posx>270</posx>
			<posy>195</posy>
			<control type="image">
				<description>Progess Dialog background</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>176</width>
				<height>300</height>
				<texture border="8" diffuse="mask-squ.png">button-menu-background.png</texture>
				<colordiffuse>dialog-background</colordiffuse>
			</control>
			<control type="label">
				<description>heading label</description>
				<posx>8</posx>
				<posy>9</posy>
				<width>160</width>
				<font>font13</font>
				<label>Forecast Type</label>
				<align>center</align>
				<textcolor>button-text</textcolor>
				<shadowcolor>shadow-text</shadowcolor>
			</control>
			<control type="image">
				<description>separator image</description>
				<posx>8</posx>
				<posy>39</posy>
				<width>160</width>
				<height>5</height>
				<texture>separator.png</texture>
			</control>
			<control type="grouplist" id="996">
				<description>Group Get Extras Images Buttons</description>
				<posx>8</posx>
				<posy>49</posy>
				<width>160</width>
				<height>290</height>
				<itemgap>0</itemgap>
				<scrolltime>200</scrolltime>
				<orientation>vertical</orientation>
				<usecontrolcoords>false</usecontrolcoords>
				<onleft>9000</onleft>
				<onright>9000</onright>
				<onup>996</onup>
				<ondown>996</ondown>
				<control type="button" id="101">
					<description>Current button</description>
					<width>160</width>
					<label>33006</label>
					<align>center</align>
					<onclick>Skin.SetString(WeatherPlus,1)</onclick>
					<onclick>Skin.Reset(showforecasttypes)</onclick>
					<onclick>SetFocus(9000)</onclick>
				</control>
				<control type="button" id="102">
					<description>Hourly button</description>
					<width>160</width>
					<label>33036</label>
					<align>center</align>
					<onclick>Skin.SetString(WeatherPlus,2)</onclick>
					<onclick>Skin.Reset(showforecasttypes)</onclick>
					<onclick>SetFocus(9000)</onclick>
				</control>
				<control type="button" id="103">
					<description>36 hour button</description>
					<width>160</width>
					<label>33034</label>
					<align>center</align>
					<onclick>Skin.SetString(WeatherPlus,3)</onclick>
					<onclick>Skin.Reset(showforecasttypes)</onclick>
					<onclick>SetFocus(9000)</onclick>
				</control>
				<control type="button" id="104">
					<description>weekend button</description>
					<width>160</width>
					<label>33037</label>
					<align>center</align>
					<onclick>Skin.SetString(WeatherPlus,4)</onclick>
					<onclick>Skin.Reset(showforecasttypes)</onclick>
					<onclick>SetFocus(9000)</onclick>
				</control>
				<control type="button" id="105">
					<description>10 day button</description>
					<width>160</width>
					<label>10 Day</label>
					<align>center</align>
					<onclick>Skin.SetString(WeatherPlus,5)</onclick>
					<onclick>Skin.Reset(showforecasttypes)</onclick>
					<onclick>SetFocus(9000)</onclick>
				</control>
				<control type="button" id="106">
					<description>alerts button</description>
					<width>160</width>
					<label>33050</label>
					<align>center</align>
					<onclick>Skin.SetString(WeatherPlus,6)</onclick>
					<onclick>Skin.Reset(showforecasttypes)</onclick>
					<onclick>SetFocus(9000)</onclick>
					<visible>!IsEmpty(Window.Property(Alerts.RSS))</visible>
				</control>
			</control>
		</control>
		<!--Button Group -->
		<control type="group" id="9000">
			<animation effect="slide" start="0,0" end="98,0" time="0" condition="!StringCompare(Weather.Plugin,weather.weatherplus)">Conditional</animation>

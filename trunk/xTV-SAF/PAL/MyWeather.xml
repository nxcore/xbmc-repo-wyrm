			</control>
			<control type="label">
				<description>conditions label</description>
				<posx>15</posx>
				<posy>530</posy>
				<width>115</width>
				<height>40</height>
				<label>31530</label>
				<font>font13</font>
				<align>left</align>
				<aligny>center</aligny>
				<textcolor>button-text</textcolor>
				<shadowcolor>shadow-text</shadowcolor>
			</control>
			<control type="button" id="2">
				<description>Refresh button</description>
				<posx>185</posx>
				<posy>530</posy>
				<width>175</width>
				<height>40</height>
				<label>103</label>
				<font>font13</font>
				<align>center</align>
				<onleft>3</onleft>
				<onright>4</onright>
				<onup>7050</onup>
				<ondown>7050</ondown>
			</control>
			<control type="button" id="4">
				<description>Settings button</description>
				<posx>360</posx>
				<posy>530</posy>
				<width>175</width>
				<height>40</height>
				<label>5</label>
				<font>font13</font>
				<align>center</align>
				<onclick>ActivateWindow(MyWeatherSettings)</onclick>
				<onleft>2</onleft>
				<onright>1115</onright>
				<onup>7050</onup>
				<ondown>7050</ondown>

<includes>
	<include name="BannerView">
		<control type="list" id="59">
			<viewtype label="31947">Banner List</viewtype>
			<visible>[Container.Content(TVShows) | Container.Content(Seasons)]</visible>
			<posx>0</posx>
			<posy>140</posy>
			<width>1280</width>
			<height>424</height>
			<pagecontrol>29</pagecontrol>
			<onup>59</onup>
			<ondown>59</ondown>
			<onleft>9000</onleft>
			<onright>29</onright>
			<itemlayout height="90">
				<control type="image">
					<description>Cover</description>
					<posx>672</posx>
					<posy>6</posy>
					<width>531</width>
					<height>87</height>
					<texture background="true">$INFO[ListItem.Icon]</texture>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<visible>!IsEmpty(ListItem.Thumb)</visible>
				</control>
				<control type="image">
					<posx>672</posx>
					<posy>6</posy>
					<width>531</width>
					<height>87</height>
					<texture diffuse="mask-rect.png">DefaultVideo.png</texture>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<visible>SubString(ListItem.Icon,DefaultFolder.png,Left)</visible>
				</control>
				<control type="image">
					<description>Go Back Image</description>
					<posx>672</posx>
					<posy>6</posy>
					<width>531</width>
					<height>87</height>
					<texture background="true">$INFO[ListItem.Icon]</texture>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<visible>SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
				</control>
			</itemlayout>
			<focusedlayout height="154">
				<animation effect="zoom" start="90" end="110" center="auto" time="500" tween="back" easing="inout" reversible="false">Focus</animation>
				<control type="image">
					<description>Cover</description>
					<posx>672</posx>
					<posy>0</posy>
					<width>531</width>
					<height>150</height>
					<texture background="true">$INFO[ListItem.Icon]</texture>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<bordertexture border="9">mask-hilite.png</bordertexture>
					<bordersize>9</bordersize>
					<visible>!IsEmpty(ListItem.Thumb)</visible>
				</control>
				<control type="image">
					<posx>672</posx>
					<posy>0</posy>
					<width>531</width>
					<height>150</height>
					<texture diffuse="mask-rect.png">DefaultVideo.png</texture>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<visible>SubString(ListItem.Icon,DefaultFolder.png,Left)</visible>
				</control>
				<control type="image">
					<posx>672</posx>
					<posy>0</posy>
					<width>531</width>
					<height>150</height>
					<texture background="true">$INFO[ListItem.Icon]</texture>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<visible>SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
				</control>
			</focusedlayout>
		</control>
		<control type="group">
			<visible>Control.IsVisible(59)</visible>
			<visible>Window.IsActive(VideoLibrary) + [Container.Content(TVShows) | Container.Content(Seasons)]</visible>
			<control type="label">
				<description>Go Back</description>
				<posx>70</posx>
				<posy>312</posy>
				<width>557</width>
				<height>50</height>
				<font>font28</font>
				<textcolor>button-text</textcolor>
				<shadowcolor>shadow-text</shadowcolor>
				<align>center</align>
				<aligny>center</aligny>
				<label>31688</label>
				<scroll>true</scroll>
				<visible>SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
			</control>
			<control type="grouplist">
				<posx>35</posx>
				<posy>118</posy>
				<width>557</width>
				<height>600</height>
				<itemgap>2</itemgap>
				<orientation>vertical</orientation>
				<visible>!IsEmpty(ListItem.Icon)</visible>
				<control type="group">
					<posx>0</posx>
					<posy>0</posy>
					<width>531</width>
					<height>237</height>
					<visible>!IsEmpty(Listitem.Property(Fanart_Image))</visible>
					<control type="image">
						<description>Mini Fanart</description>
						<width>531</width>
						<height>225</height>
						<texture background="true">$INFO[Listitem.Property(Fanart_Image)]</texture>
						<aspectratio align="center" aligny="bottom">keep</aspectratio>
						<fadetime>600</fadetime>
					</control>
				</control>
				<control type="label">
					<description>Title</description>
					<posx>0</posx>
					<posy>225</posy>
					<width>557</width>
					<height>37</height>
					<font>font18</font>
					<textcolor>button-text</textcolor>
					<shadowcolor>shadow-text</shadowcolor>
					<align>left</align>
					<aligny>center</aligny>
					<label>[B]$INFO[ListItem.Label][/B]</label>
					<scroll>true</scroll>
					<visible>!SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
				</control>
				<control type="label">
					<description>First Aired</description>
					<posx>0</posx>
					<posy>268</posy>
					<height>25</height>
					<font>font13</font>
					<textcolor>button-text</textcolor>
					<shadowcolor>shadow-text</shadowcolor>
					<label>[B]$LOCALIZE[20416]:[/B] $INFO[ListItem.Premiered]</label>
					<visible>!IsEmpty(ListItem.Premiered)</visible>
				</control>
				<control type="label">
					<description>Genre</description>
					<posx>0</posx>
					<posy>300</posy>
					<width>557</width>
					<height>25</height>
					<font>font13</font>
					<textcolor>button-text</textcolor>
					<shadowcolor>shadow-text</shadowcolor>
					<label>[B]$LOCALIZE[515]:[/B] $INFO[ListItem.Genre]</label>
					<scroll>true</scroll>
					<visible>!IsEmpty(ListItem.Genre)</visible>
				</control>
				<control type="label">
					<description>Rating</description>
					<posx>0</posx>
					<posy>331</posy>
					<height>37</height>
					<font>font13</font>
					<textcolor>button-text</textcolor>
					<shadowcolor>shadow-text</shadowcolor>
					<label>[B]$LOCALIZE[563]:[/B] $INFO[ListItem.Rating]</label>
					<visible>!IsEmpty(ListItem.Rating)</visible>
				</control>
				<control type="label">
					<posx>0</posx>
					<posy>375</posy>
					<height>37</height>
					<font>font13</font>
					<textcolor>button-text</textcolor>
					<shadowcolor>shadow-text</shadowcolor>
					<label>$INFO[ListItem.Property(UnWatchedEpisodes)] $LOCALIZE[16101] $LOCALIZE[20360]</label>
					<visible>!IsEmpty(ListItem.Property(UnWatchedEpisodes))</visible>
				</control>
				<control type="image">
					<posx>0</posx>
					<posy>412</posy>
					<width>557</width>
					<height>2</height>
					<texture>separator.png</texture>
					<visible>!SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
				</control>
				<!-- Plot Outline -->
				<control type="textbox">
					<posx>8</posx>
					<posy>431</posy>
					<width>548</width>
					<height>150</height>
					<font>font13</font>
					<textcolor>button-text</textcolor>
					<shadowcolor>shadow-text</shadowcolor>
					<label fallback="161">$INFO[ListItem.PlotOutline]</label>
					<visible>!IsEmpty(ListItem.PlotOutline)</visible>
					<autoscroll time="4000" delay="6000" repeat="8000">true</autoscroll>
				</control>
				<!-- Plot (Show if no outline available)-->
				<control type="textbox">
					<posx>8</posx>
					<posy>431</posy>
					<width>548</width>
					<height>150</height>
					<font>font13</font>
					<textcolor>button-text</textcolor>
					<shadowcolor>shadow-text</shadowcolor>
					<label fallback="161">$INFO[ListItem.Plot]</label>
					<visible>IsEmpty(ListItem.PlotOutline) + !IsEmpty(ListItem.Plot)</visible>
					<autoscroll time="4000" delay="6000" repeat="8000">true</autoscroll>
				</control>
			</control>
			<control type="group">
				<include>SortLetterNotification</include>
				<!-- Scroll Bar -->
				<control type="scrollbar" id="29">
					<posx>1239</posx>
					<posy>137</posy>
					<width>24</width>
					<height>432</height>
					<texturesliderbackground border="0,8,0,8">scrollbar_background.png</texturesliderbackground>
					<texturesliderbar border="0,8,0,8">scrollbar_bar.png</texturesliderbar>
					<texturesliderbarfocus border="0,8,0,8">scrollbar_bar_focus.png</texturesliderbarfocus>
					<textureslidernib>-</textureslidernib>
					<textureslidernibfocus>-</textureslidernibfocus>
					<onleft>59</onleft>
					<onright>9000</onright>
					<include>list-fade</include>
					<showonepage>false</showonepage>
					<orientation>vertical</orientation>
					<colordiffuse>ScrollBarColor</colordiffuse>
					<visible>Skin.HasSetting(sbar)</visible>
				</control>
			</control>
		</control>
	</include>
</includes>
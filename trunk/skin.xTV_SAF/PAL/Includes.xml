<includes>
	<include file="CommonViewTypes.xml">-</include>
	<include file="Defaults.xml">-</include>
	<include file="View-VideoBanner.xml">-</include>
	<include file="View-Icon.xml">-</include>
	<include file="View-List2.xml">-</include>
	<include file="View-Wall.xml">-</include>
	<include file="View-VideoWall.xml">-</include>
	<include file="View-AlbumWall.xml">-</include>
	<include file="View-PhotoWall.xml">-</include>
	<include file="View-Wrap.xml">-</include>
	<include file="View-VideoWrap.xml">-</include>
	<include file="View-AlbumWrap.xml">-</include>
	<include file="View-PhotoWrap.xml">-</include>
	<include file="View-Coverflow.xml">-</include>
	<include file="View-AlbumCoverflow.xml">-</include>
	<include file="View-VideoCoverflow.xml">-</include>

	<!-- Begin iTV string includes -->
	<!-- Begin background image include -->
	<include name="background">
		<control type="image">
			<description>solid background</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<colordiffuse>solid-background</colordiffuse>
			<texture>background.png</texture>
		</control>
		<control type="visualisation">
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<aspectratio>scale</aspectratio>
			<visible>Skin.HasSetting(HomeViewToggle)</visible>
		</control>
		<control type="videowindow">
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<aspectratio>scale</aspectratio>
			<visible>Skin.HasSetting(HomeViewToggle)</visible>
		</control>
		<control type="image">
			<description>background to cover video and visualisation backgrounds</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<colordiffuse>mask-background</colordiffuse>
			<texture>background.png</texture>
			<visible>Skin.HasSetting(HomeViewToggle)</visible>
		</control>
		<control type="image">
			<description>custom background</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<colordiffuse>fanart-background</colordiffuse>
			<info>Skin.String(custom-background)</info>
			<visible>INFO$(Skin.String(custom-background))</visible>
		</control>
		<control type="image">
			<description>Fanart background</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<colordiffuse>fanart-background</colordiffuse>
			<aspectratio>scale</aspectratio>
			<texture background="true">$INFO[ListItem.Property(Fanart_Image)]</texture>
			<visible>Skin.HasSetting(background-fanart) + ![IsEmpty(ListItem.Property(Fanart_Image))] + ![Skin.HasSetting(HomeViewToggle) + [Player.HasVideo]]</visible>
		</control>
	</include>

	<!-- Start xTV box image include -->
	<include name="xtv-box">
		<control type="image">
			<description>Xtv Logo</description>
			<posx>-30</posx>
			<posy>70</posy>
			<width>440</width>
			<height>440</height>
			<aspectratio>keep</aspectratio>
			<texture>Xtv-Logo-Big.png</texture>
			<animation effect="fade" start="0" delay="150" time="50" condition="Window.Previous(Home) + !Window.Previous(Settings)">WindowOpen</animation>
			<animation effect="fade" start="10" time="0" condition="Window.Next(Home)">WindowClose</animation>
		</control>
	</include>

	<!-- Begin Page info Includes -->
	<include name="page-info">
		<control type="rss">
			<description>rss feed</description>
			<posx>0</posx>
			<posy>545</posy>
			<width>720</width>
			<font>font12</font>
			<urlset>1</urlset>
			<textcolor>info-text</textcolor>
			<titlecolor>rss-title-text</titlecolor>
			<headlinecolor>rss-headline-text</headlinecolor>
		</control>
	</include>

	<!-- Start Home Media Overlay -->
	<include name="homemediainfo">
		<visible>!Skin.HasSetting(homepageMusicinfo)</visible>
		<animation effect="fade" time="200">VisibleChange</animation>
		<animation effect="slide" time="500" start="-400,0" end="0,0" acceleration="-1.1" delay="0">WindowOpen</animation>
		<animation effect="slide" time="300" start="0,0" end="-400,0" acceleration="-1.3" delay="0">WindowClose</animation>
	</include>

	<!-- Start Number of Files Include -->
	<include name="#files">
		<control type="label" id="12">
			<description>number of files text label</description>
			<posx>600</posx>
			<posy>548</posy>
			<align>left</align>
			<label>-</label>
			<font>font10</font>
			<textcolor>button-text</textcolor>
			<shadowcolor>shadow-text</shadowcolor>
			<include>list-fade</include>
		</control>
	</include>

	<!-- Start Current Sort Letter -->
	<include name="SortLetterNotification">
		<control type="group">
			<posy>40</posy>
			<posx>330</posx>
			<visible>Container.Scrolling</visible>
			<animation effect="fade" start="0" end="100" time="50">Visible</animation>
			<animation effect="fade" start="100" end="0" time="300">Hidden</animation>
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>46</width>
				<height>52</height>
				<texture border="8" diffuse="RndSquMask.png">button-menu-background.png</texture>
			</control>
			<control type="label">
				<posx>0</posx>
				<posy>0</posy>
				<width>45</width>
				<height>45</height>
				<font>font28</font>
				<textcolor>button-text</textcolor>
				<shadowcolor>shadow-text</shadowcolor>
				<align>center</align>
				<aligny>center</aligny>
				<label>$INFO[ListItem.SortLetter]</label>
			</control>
		</control>
	</include>

	<!-- Start List Item Icon Include -->
	<include name="ListView-Icon">
		<control type="group">
			<visible>Control.IsVisible(50)</visible>
			<animation type="TYPE" condition="Skin.HasSetting(tilted-icons)" reversible="false">
				<effect type="rotatey" start="-20" end="-20" time="0"/>
				<effect type="slide" end="10,0" time="0"/>
			</animation>

			<!-- No Fanart available -->
			<control type="image">
				<description>list item icon</description>
				<posx>20</posx>
				<posy>125</posy>
				<width>345</width>
				<height>345</height>
				<texture background="true" diffuse="RndVideoMask.png" border="3">-</texture>
				<info>ListItem.Icon</info>
				<aspectratio>keep</aspectratio>
				<include>list-fade</include>
				<visible>Skin.HasSetting(Fanart) + IsEmpty(Listitem.Property(Fanart_Image))</visible>
			</control>
			<control type="image">
				<description>list item icon reflection</description>
				<posx>20</posx>
				<posy>470</posy>
				<width>345</width>
				<height>345</height>
				<info>ListItem.Icon</info>
				<texture background="true" flipy="true" diffuse="RndVideoMaskFade.png" border="3">-</texture>
				<aspectratio>keep</aspectratio>
				<include>list-fade</include>
				<visible>Skin.HasSetting(Fanart) + IsEmpty(Listitem.Property(Fanart_Image))</visible>
			</control>

			<!-- User has selected NO fanart -->
			<control type="image">
				<description>list item icon</description>
				<posx>20</posx>
				<posy>125</posy>
				<width>345</width>
				<height>345</height>
				<texture background="true" diffuse="RndVideoMask.png" border="3">$INFO[ListItem.Icon]</texture>
				<aspectratio>keep</aspectratio>
				<visible>![Skin.HasSetting(Fanart)]</visible>
				<include>list-fade</include>
			</control>
			<control type="image">
				<description>list item icon reflection</description>
				<posx>20</posx>
				<posy>470</posy>
				<width>345</width>
				<height>345</height>
				<texture background="true" flipy="true" diffuse="RndVideoMaskFade.png" border="3">$INFO[ListItem.Icon]</texture>
				<aspectratio>keep</aspectratio>
				<visible>![Skin.HasSetting(Fanart)]</visible>
				<include>list-fade</include>
			</control>

			<!-- Show Icon For TV SEASON/EPISODES even if Fanart selected -->
			<control type="image">
				<description>list item icon</description>
				<posx>20</posx>
				<posy>125</posy>
				<width>345</width>
				<height>345</height>
				<texture fallback="DefaultTvshows.png" background="true" diffuse="RndVideoMask.png" border="3">$INFO[ListItem.Icon]</texture>
				<aspectratio>keep</aspectratio>
				<visible>[Container.Content(seasons) | Container.Content(episodes)] + !SubString(ListItem.Icon,DefaultFolder.png,Left)</visible>
				<include>list-fade</include>
			</control>
			<control type="image">
				<description>list item icon reflection</description>
				<posx>20</posx>
				<posy>470</posy>
				<width>345</width>
				<height>345</height>
				<texture fallback="DefaultTvshows.png" background="true" flipy="true" diffuse="RndVideoMaskFade.png" border="3">$INFO[ListItem.Icon]</texture>
				<aspectratio>keep</aspectratio>
				<visible>[Container.Content(seasons) | Container.Content(episodes)] + !SubString(ListItem.Icon,DefaultFolder.png,Left)</visible>
				<include>list-fade</include>
			</control>

			<!-- Show TV icon as the Default icon -->
			<control type="image">
				<description>list item icon</description>
				<posx>20</posx>
				<posy>125</posy>
				<width>345</width>
				<height>345</height>
				<texture background="true" diffuse="RndVideoMask.png" border="3">DefaultTvshows.png</texture>
				<aspectratio>keep</aspectratio>
				<visible>[Container.Content(seasons) | Container.Content(episodes)] + SubString(ListItem.Icon,DefaultFolder.png,Left)</visible>
				<include>list-fade</include>
			</control>
			<control type="image">
				<description>list item icon reflection</description>
				<posx>20</posx>
				<posy>470</posy>
				<width>345</width>
				<height>345</height>
				<texture background="true" flipy="true" diffuse="RndVideoMaskFade.png" border="3">DefaultTvshows.png</texture>
				<aspectratio>keep</aspectratio>
				<visible>[Container.Content(seasons) | Container.Content(episodes)] + SubString(ListItem.Icon,DefaultFolder.png,Left)</visible>
				<include>list-fade</include>
			</control>

			<!-- Fanart image -->
			<control type="image">
				<posx>20</posx>
				<posy>125</posy>
				<width>345</width>
				<height>345</height>
				<animation effect="fade" end="0" time="200">WindowClose</animation>
				<animation effect="fade" start="0" end="100" time="200">VisibleChange</animation>
				<texture background="true" diffuse="RndVideoMask.png" border="2,2,0,0">$INFO[ListItem.Property(Fanart_Image)]</texture>
				<visible>Skin.HasSetting(Fanart) + !IsEmpty(ListItem.Property(Fanart_Image)) + ![Container.Content(seasons) | Container.Content(episodes)]</visible>
			</control>
			<control type="image">
				<posx>20</posx>
				<posy>470</posy>
				<width>345</width>
				<height>345</height>
				<animation effect="fade" end="0" time="200">WindowClose</animation>
				<animation effect="fade" start="0" end="100" time="200">VisibleChange</animation>
				<texture background="true" flipy="true" diffuse="RndVideoMaskFade.png" border="2,2,0,0">$INFO[ListItem.Property(Fanart_Image)]</texture>
				<visible>Skin.HasSetting(Fanart) + !IsEmpty(ListItem.Property(Fanart_Image)) + ![Container.Content(seasons) | Container.Content(episodes)]</visible>
			</control>
		</control>
	</include>

	<!-- Start Fake Overlay Include -->
	<include name="Fake-Overlay">
		<!-- Video Stuff -->
		<control type="videowindow">
			<description>video preview window</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>116</width>
			<height>99</height>
			<aspectratio>keep</aspectratio>
			<visible>Skin.HasSetting(overlay) + Player.HasVideo + ![Skin.HasSetting(HomeViewToggle)]</visible>
		</control>
			<control type="label">
			<description>Now playing</description>
			<posx>118</posx>
			<posy>5</posy>
			<width>230</width>
			<height>25</height>
			<label>13350</label>
			<align>left</align>
			<font>font12</font>
			<textcolor>listselectedtext</textcolor>
			<visible>Skin.HasSetting(overlay) + Player.HasVideo + ![Skin.HasSetting(HomeViewToggle)]</visible>
		</control>
		<control type="label">
			<description>Video Title label</description>
			<posx>118</posx>
			<posy>30</posy>
			<width>230</width>
			<height>25</height>
			<info>VideoPlayer.Title</info>
			<align>left</align>
			<font>font12</font>
			<scroll>true</scroll>
			<visible>Skin.HasSetting(overlay) + Player.HasVideo + ![Skin.HasSetting(HomeViewToggle)]</visible>
		</control>
		<control type="label">
			<description>Time label</description>
			<posx>118</posx>
			<posy>55</posy>
			<width>230</width>
			<height>25</height>
			<label>$INFO[Player.Time]$INFO[Player.Duration, / ]</label>
			<align>left</align>
			<font>font10</font>
			<visible>Skin.HasSetting(overlay) + Player.HasVideo + ![Skin.HasSetting(HomeViewToggle)]</visible>
		</control>
		<!-- Audio Stuff -->
		<control type="image">
			<description>cover image</description>
			<posx>25</posx>
			<posy>5</posy>
			<width>80</width>
			<height>80</height>
			<info>MusicPlayer.Cover</info>
			<aspectratio>keep</aspectratio>
			<visible>Player.HasAudio + Skin.HasSetting(overlay)</visible>
		</control>
		<control type="label">
			<description>Artist label</description>
			<posx>118</posx>
			<posy>2</posy>
			<width>235</width>
			<height>20</height>
			<info>MusicPlayer.Artist</info>
			<align>left</align>
			<font>font10</font>
			<scroll>true</scroll>
			<shadowcolor>shadow-text</shadowcolor>
			<visible>Player.HasAudio + Skin.HasSetting(overlay)</visible>
		</control>
		<control type="label">
			<description>Album label</description>
			<posx>118</posx>
			<posy>22</posy>
			<width>235</width>
			<height>20</height>
			<info>MusicPlayer.Album</info>
			<align>left</align>
			<font>font10</font>
			<scroll>true</scroll>
			<shadowcolor>shadow-text</shadowcolor>
			<visible>Player.HasAudio + Skin.HasSetting(overlay)</visible>
		</control>
		<control type="label">
			<description>Title label</description>
			<posx>118</posx>
			<posy>42</posy>
			<width>235</width>
			<height>20</height>
			<info>MusicPlayer.Title</info>
			<align>left</align>
			<font>font12</font>
			<scroll>true</scroll>
			<shadowcolor>shadow-text</shadowcolor>
			<visible>Player.HasAudio + Skin.HasSetting(overlay)</visible>
		</control>
		<control type="label">
			<description>Time label</description>
			<posx>118</posx>
			<posy>62</posy>
			<width>235</width>
			<height>20</height>
			<label>$INFO[MusicPlayer.Time]$INFO[MusicPlayer.Duration, / ]</label>
			<align>left</align>
			<font>font10</font>
			<shadowcolor>shadow-text</shadowcolor>
			<visible>Player.HasAudio + Skin.HasSetting(overlay)</visible>
		</control>
	</include>
	<!-- End Fake Overlay Include -->
	<include name="icon-header-commons">
		<posx>476</posx>
		<posy>14</posy>
		<width>64</width>
		<height>64</height>
		<aspectratio aligny="bottom">keep</aspectratio>
	</include>
	<include name="icon-header-reflect-commons">
		<posx>140</posx>
		<posy>375</posy>
		<width>230</width>
		<height>230</height>
		<aspectratio aligny="top">keep</aspectratio>
		<visible>Window.Next(Home)</visible>
	</include>
	<!-- Start Animation Includes -->
	<include name="button-fade">
		<animation effect="fade" start="0" time="300">Visible</animation>
	</include>
	<include name="shutdown-ani">
		<animation effect="slide" start="0,450" time="200">WindowOpen</animation>
		<animation effect="slide" end="0,450" time="200">WindowClose</animation>
	</include>
	<include name="list-fade">
		<animation effect="fade" start="0" delay="150" time="50" condition="Window.Previous(Home)">WindowOpen</animation>
		<animation effect="fade" start="0" time="10" condition="Window.Next(Home)">WindowClose</animation>
	</include>
	<include name="screen-fade">
		<animation effect="fade" time="1000">WindowOpen</animation>
		<animation effect="fade" time="1000">WindowClose</animation>
	</include>
	<include name="icon-ani">
		<animation effect="zoom" start="476,14,64,64" end="140,145,230,230" time="175" condition="Window.Next(Home)">WindowClose</animation>
		<animation effect="zoom" start="140,145,230,230"  end="476,14,64,64" time="175" condition="Window.Previous(Home)">WindowOpen</animation>
	</include>
	<include name="icon-reflection-ani">
		<animation effect="fade" start="0" end="100" time="25" delay="150" condition="Window.Next(Home)">Visible</animation>
	</include>
	<!-- End Animation Includes -->
	<!-- Start Visibility Includes -->
	<include name="View-as">
		<visible allowhiddenfocus="true">![Window.Next(Home) | Control.HasFocus(50) | Control.HasFocus(51) | Control.HasFocus(52) | Control.HasFocus(53) | Control.HasFocus(54) | Control.HasFocus(55) | Control.HasFocus(56) | Control.HasFocus(57) | Control.HasFocus(58) | Control.HasFocus(59) | Control.HasFocus(22) | Control.HasFocus(23) | Control.HasFocus(100)]</visible>
	</include>
	<!-- End Visibility Includes -->
	<!-- Start Autoscroll Includes -->
	<include name="AutoScroll1x">
		<align>justify</align>
		<autoscroll time="3000" delay="3000">Skin.HasSetting(AutoScroll)</autoscroll>
	</include>
	<include name="AutoScroll2x">
		<align>justify</align>
		<autoscroll time="2000" delay="3000">Skin.HasSetting(AutoScroll)</autoscroll>
	</include>
	<include name="AutoScroll3x">
		<align>justify</align>
		<autoscroll time="1000" delay="3000">Skin.HasSetting(AutoScroll)</autoscroll>
	</include>
	<!-- End Autoscroll Includes -->
</includes>

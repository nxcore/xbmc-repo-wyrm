<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<previouswindow>Home</previouswindow>
	<controls>
		<include>background</include>
		<include>Fake-Overlay</include>
		<include>#files</include>

		<control type="image">
			<description>Music Logo</description>
			<include>icon-header-commons</include>
			<texture>icon-music-sml.png</texture>
		</control>
		<control type="grouplist">
			<posx>946</posx>
			<posy>50</posy>
			<width>360</width>
			<height>72</height>
			<align>left</align>
			<aligny>center</aligny>
			<orientation>horizontal</orientation>
			<control type="label">
				<description>Music screen headings</description>
				<width min="40" max="250">auto</width>
				<height>72</height>
				<label>$VAR[MusicHeadings]</label>
				<font>font18</font>
				<wrapmultiline>true</wrapmultiline>
				<aligny>top</aligny>
			</control>
			<control type="label">
				<description>Number of files</description>
				<visible>Skin.HasSetting(homemenu-horizontal) | [!Skin.HasSetting(homemenu-vertical) + !Skin.HasSetting(homemenu-horizontal)]</visible>
				<posy>13</posy>
				<width min="40" max="110">auto</width>
				<height>38</height>
				<label>$INFO[Container.NumItems,(,)]</label>
			</control>
		</control>

		<include>memory-low</include>

		<include>AlbumListView</include>
		<include>AlbumWrapView</include>
		<include>AudioWallView</include>
		<include>AlbumCoverflow</include>

		<control type="group">
			<posy>720</posy>
			<include>View-as</include>
			<control type="group">
				<visible>ControlGroup(9000).HasFocus() + !Skin.HasSetting(view-as-lock)</visible>
				<control type="image"><!-- Background shadow -->
					<posx>0</posx>
					<posy>0</posy>
					<width>1280</width>
					<height>720</height>
					<texture>colours/black.png</texture>
					<colordiffuse>osd-background</colordiffuse>
				</control>
				<control type="image"><!-- Button background -->
					<posx>460</posx>
					<posy>140</posy>
					<width>396</width>
					<height>448</height>
					<texture border="8">button-menu-background.png</texture>
				</control>
			</control>
			<control type="grouplist" id="9000">
				<posx>472</posx>
				<posy>150</posy>
				<width>372</width>
				<height>432</height>
				<onleft>noop</onleft>
				<onright condition="Control.IsVisible(50)">50</onright>
				<onright condition="Control.IsVisible(58)">58</onright>
				<onright condition="Control.IsVisible(54) | Control.IsVisible(57)">noop</onright>
				<onup>noop</onup>
				<ondown condition="Control.IsVisible(54)">54</ondown>
				<ondown condition="Control.IsVisible(57)">57</ondown>
				<ondown condition="Control.IsVisible(50) | Control.IsVisible(58)">noop</ondown>
				<itemgap>0</itemgap>
				<visible>!Skin.HasSetting(view-as-lock)</visible>
				<control type="button" id="2"><!-- View type -->
					<width>372</width>
					<height>48</height>
					<font>font12</font>
					<label>$LOCALIZE[100]</label>
					<textoffsetx>10</textoffsetx>
				</control>
				<control type="radiobutton" id="1198"><!-- Tilt icon list view -->
					<width>372</width>
					<height>48</height>
					<label>$LOCALIZE[31886]</label>
					<font>font11</font>
					<onclick>Skin.ToggleSetting(tiltmusiclisticon)</onclick>
					<selected>Skin.HasSetting(tiltmusiclisticon)</selected>
					<textoffsetx>10</textoffsetx>
					<radioposx>330</radioposx>
					<visible>SubString(Control.GetLabel(2),$LOCALIZE[31941],Right)</visible>
				</control>
				<control type="radiobutton" id="1197"><!-- Tilt icon wall view -->
					<width>372</width>
					<height>48</height>
					<label>$LOCALIZE[31886]</label>
					<font>font11</font>
					<onclick>Skin.ToggleSetting(tiltmusicwallicon)</onclick>
					<selected>Skin.HasSetting(tiltmusicwallicon)</selected>
					<textoffsetx>10</textoffsetx>
					<radioposx>330</radioposx>
					<visible>SubString(Control.GetLabel(2),$LOCALIZE[31944],Right)</visible>
				</control>
				<control type="button" id="3"><!-- Sort by -->
					<width>372</width>
					<height>48</height>
					<font>font12</font>
					<label>$LOCALIZE[103]</label>
					<textoffsetx>10</textoffsetx>
				</control>
				<control type="togglebutton" id="4"><!-- Sort direction -->
					<width>372</width>
					<height>48</height>
					<label>$LOCALIZE[21429]: $LOCALIZE[21430]</label>
					<altlabel>$LOCALIZE[21429]: $LOCALIZE[21431]</altlabel>
					<textoffsetx>10</textoffsetx>
				</control>
				<control type="radiobutton" id="5"><!-- Library -->
					<width>372</width>
					<height>48</height>
					<font>font12</font>
					<textoffsetx>10</textoffsetx>
					<label>$LOCALIZE[14022] $LOCALIZE[456]</label>
					<onclick>ReplaceWindow(mymusiclibrary)</onclick>
					<selected>Window.IsVisible(musiclibrary)</selected>
					<radioposx>330</radioposx>
				</control>
				<control type="edit" id="19"><!-- Filter -->
					<width>372</width>
					<height>48</height>
					<font>font12</font>
					<label>$LOCALIZE[587]</label>
					<textwidth>340</textwidth>
					<texturenofocus>-</texturenofocus>
					<aligny>center</aligny>
					<textoffsetx>10</textoffsetx>
					<visible>!Container.CanFilterAdvanced</visible>
				</control>
				<control type="radiobutton" id="20"><!-- Advanced filter -->
					<width>372</width>
					<height>48</height>
					<label>$LOCALIZE[587]</label>
					<font>font12</font>
					<selected>Container.Filtered</selected>
					<onclick>Filter</onclick>
					<textoffsetx>10</textoffsetx>
					<radioposx>330</radioposx>
					<visible>Container.CanFilterAdvanced</visible>
				</control>
				<control type="button" id="11"><!-- Rip CD -->
					<width>372</width>
					<height>48</height>
					<font>font12</font>
					<label>$LOCALIZE[600]</label>
				</control>
				<control type="button" id="1200"><!-- Player controls -->
					<width>372</width>
					<height>48</height>
					<font>font12</font>
					<label>$LOCALIZE[16003] $LOCALIZE[478]</label>
					<onclick>ActivateWindow(playercontrols)</onclick>
					<onclick>SetFocus(50)</onclick>
					<enable>Player.HasAudio | Player.HasVideo</enable>
				</control>
			</control>
		</control>
	</controls>
</window>
<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>50</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<previouswindow>Home</previouswindow>
	<controls>
		<include>backgroundvideo</include>
		<control type="image">
			<description>TV Logo</description>
			<include>icon-header-commons</include>
			<texture>icon-tv.png</texture>
		</control>
		<control type="label">
			<description>header label</description>
			<posx>946</posx>
			<posy>50</posy>
			<width>309</width>
			<height>36</height>
			<font>font20</font>
			<label>$VAR[PVRHeading]</label>
		</control>
		
		<!-- Current Icon/Channel playing -->
		<control type="group">
			<control type="grouplist">
				<visible>Control.IsVisible(11) | Control.IsVisible(12) | Control.IsVisible(13) | Control.IsVisible(15) | Control.IsVisible(16)</visible>
				<animation effect="fade" start="0" end="100" time="200" delay="100">Visible</animation>
				<posx>20</posx>
				<posy>116</posy>
				<width>628</width>
				<height>578</height>
				<itemgap>2</itemgap>
				<orientation>vertical</orientation>
				<control type="group">
					<visible>!Player.HasVideo | [Player.HasVideo + Skin.HasSetting(HomeViewToggle)]</visible>
					<posx>0</posx>
					<width>256</width>
					<height>256</height>
					<control type="image">
						<posx>186</posx>
						<width>256</width>
						<height>256</height>
						<texture fallback="DefaultTvshows.png" background="true" diffuse="mask-rect.png">$INFO[ListItem.Thumb]</texture>
						<aspectratio>keep</aspectratio>
						<align>center</align>
						<aligny>top</aligny>
						<visible>!IsEmpty(ListItem.Thumb)</visible>
					</control>
					<control type="image">
						<posx>186</posx>
						<width>256</width>
						<height>256</height>
						<texture fallback="DefaultTvshows.png" background="true">$INFO[ListItem.Icon]</texture>
						<aspectratio>keep</aspectratio>
						<align>center</align>
						<aligny>top</aligny>
						<visible>IsEmpty(ListItem.Thumb) + !IsEmpty(ListItem.Icon)</visible>
					</control>
				</control>
				<control type="group">
					<posx>0</posx>
					<width>512</width>
					<height>256</height>
					<animation effect="fade" start="0" end="100" time="200" delay="100">Visible</animation>
					<animation effect="zoom" start="100" end="0" time="0">WindowClose</animation>
					<visible>Player.HasVideo + !Skin.HasSetting(HomeViewToggle)</visible>
					<control type="videowindow">
						<posx>58</posx>
						<width>512</width>
						<height>256</height>
						<aspectratio>keep</aspectratio>
						<align>center</align>
						<aligny>top</aligny>
					</control>
				</control>	
				<control type="label">
					<info>ListItem.Title</info>
					<width>628</width>
					<height>34</height>
					<font>font18</font>
					<align>center</align>
					<aligny>center</aligny>
					<wrapmultiline>true</wrapmultiline>
				</control>
				<control type="label">
					<description>StartTime value</description>
					<visible>!IsEmpty(ListItem.Plot) + !IsEmpty(ListItem.StartTime) + !IsEmpty(ListItem.EndTime)+ !Control.IsVisible(13)</visible>
					<width>628</width>
					<height>30</height>
					<align>center</align>
					<aligny>center</aligny>
					<label>$LOCALIZE[31134] $INFO[ListItem.StartTime] - $LOCALIZE[31129] $INFO[ListItem.EndTime]</label>
					<font>font13</font>
				</control>
				<control type="image">
					<visible>!IsEmpty(ListItem.Title)</visible>
					<width>628</width>
					<height>5</height>
					<texture>separator.png</texture>
				</control>
				<control type="textbox">
					<description>plot</description>
					<width>628</width>
					<height>214</height>
					<font>font12</font>
					<align>left</align>
					<info>ListItem.Plot</info>
					<visible>!IsEmpty(ListItem.Plot)</visible>
				</control>
				<control type="image">
					<visible>!IsEmpty(ListItem.Plot)</visible>
					<width>628</width>
					<height>5</height>
					<texture>separator.png</texture>
				</control>
			</control>
		</control>
			
		<control type="group" id="50">
			<include>PVRTVListView</include>
			<include>PVRRadioListView</include>
			<include>PVRTimelineView</include>
			<include>PVRRecordListView</include>
			<include>PVRTimerListView</include>
			<include>PVRChannelListView</include>
			<include>PVRNowNextListView</include>
			<include>PVRSearchListView</include>
		</control>
		
		<control type="group">
			<posy>720</posy>
			<include>View-as</include>
			<control type="image">
				<description>Button Background</description>
				<posx>440</posx>
				<posy>202</posy>
				<width>398</width>
				<height>328</height>
				<texture border="8" diffuse="mask-squ.png">button-menu-background.png</texture>
			</control>
			<control type="grouplist" id="9000">
				<posx>458</posx>
				<posy>214</posy>
				<width>362</width>
				<height>300</height>
				<onleft>50</onleft>
				<onright>50</onright>
				<onup>9000</onup>
				<ondown>9000</ondown>
				<itemgap>0</itemgap>
				<control type="button" id="32">
					<description>TV Channels</description>
					<posx>0</posx>
					<posy>0</posy>
					<width>362</width>
					<height>50</height>
					<font>font12</font>
					<label>19023</label>
					<textoffsetx>20</textoffsetx>
				</control>
				<control type="button" id="33">
					<description>Radio Channels</description>
					<posx>0</posx>
					<posy>50</posy>
					<width>362</width>
					<height>50</height>
					<font>font12</font>
					<label>19024</label>
					<textoffsetx>20</textoffsetx>
				</control>
				<control type="button" id="31">
					<description>TV Guide</description>
					<posx>0</posx>
					<posy>100</posy>
					<width>362</width>
					<height>50</height>
					<label>$LOCALIZE[19222]: $LOCALIZE[19030]</label>
					<font>font12</font>
					<textoffsetx>20</textoffsetx>
				</control>
				<control type="button" id="34">
					<description>Recordings</description>
					<posx>0</posx>
					<posy>150</posy>
					<width>362</width>
					<height>50</height>
					<label>19163</label>
					<font>font12</font>
					<textoffsetx>20</textoffsetx>
				</control>
				<control type="button" id="35">
					<description>Timers</description>
					<posx>0</posx>
					<posy>200</posy>
					<width>362</width>
					<height>50</height>
					<label>19040</label>
					<textoffsetx>20</textoffsetx>
				</control>
				<control type="button" id="36">
					<description>Search</description>
					<posx>0</posx>
					<posy>250</posy>
					<width>362</width>
					<height>50</height>
					<label>137</label>
					<font>font12</font>
					<textoffsetx>20</textoffsetx>
				</control>
			</control>
		</control>
	</controls>
</window>
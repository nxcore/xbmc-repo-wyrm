<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<previouswindow>Home</previouswindow>
	<visible>!Window.IsActive(139)</visible>
	<controls>
		<include>background</include>
		<include>#files</include>
		<include>Fake-Overlay</include>
		<control type="image">
			<description>Photos Logo</description>
			<include>icon-header-commons</include>
			<texture>icon-photo-sml.png</texture>
		</control>
		<control type="grouplist">
			<posx>946</posx>
			<posy>50</posy>
			<width>360</width>
			<height>37</height>
			<align>left</align>
			<aligny>center</aligny>
			<orientation>horizontal</orientation>
			<control type="label">
				<description>Heading label</description>
				<width min="60" max="250">auto</width>
				<height>37</height>
				<label>$LOCALIZE[1]</label>
				<font>font20</font>
			</control>
			<control type="label">
				<description>Number of files</description>
				<visible>Skin.HasSetting(homemenu-horizontal) | [!Skin.HasSetting(homemenu-vertical) + !Skin.HasSetting(homemenu-horizontal)]</visible>
				<posy>13</posy>
				<width min="40" max="110">auto</width>
				<height>38</height>
				<label>$INFO[Container.NumItems, (,)]</label>
			</control>
		</control>

		<include>memory-low</include>

		<!-- Various Views of Pictures library -->
		<control type="group">
			<include>ListView</include>
			<include>IconView</include>
			<include>PhotoWrap</include>
			<include>PhotoWall</include>
		</control>

		<control type="group">
			<posy>720</posy>
			<include>View-as</include>
			<control type="group">
				<visible>ControlGroup(9000).HasFocus() + !Skin.HasSetting(view-as-lock)</visible>
				<control type="image"><!-- Background shadow -->
					<posx>0</posx>
					<posy>0</posy>
					<width>1280</width>
					<height>720</height>
					<texture>colours/black.png</texture>
					<colordiffuse>osd-background</colordiffuse>
				</control>
				<control type="image"><!-- Button background -->
					<posx>440</posx>
					<posy>142</posy>
					<width>396</width>
					<height>466</height>
					<texture border="8">button-menu-background.png</texture>
				</control>
			</control>
			<control type="grouplist" id="9000">
				<posx>450</posx>
				<posy>154</posy>
				<width>376</width>
				<height>432</height>
				<onleft>50</onleft>
				<onright>50</onright>
				<onup>9000</onup>
				<ondown>9000</ondown>
				<onback>50</onback>
				<itemgap>0</itemgap>
				<control type="button" id="2"><!-- View type -->
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<label>$LOCALIZE[100]</label>
					<textoffsetx>10</textoffsetx>
				</control>
				<control type="radiobutton" id="1198"><!-- Tilt icon list view -->
					<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[31886]</label>
					<font>font11</font>
					<onclick>Skin.ToggleSetting(tiltmisclisticon)</onclick>
					<selected>Skin.HasSetting(tiltmisclisticon)</selected>
					<textoffsetx>10</textoffsetx>
					<radioposx>330</radioposx>
					<visible>SubString(Control.GetLabel(2),$LOCALIZE[31941],Right)</visible>
				</control>
				<control type="radiobutton" id="1197"><!-- Tilt icon wall view -->
					<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[31886]</label>
					<font>font11</font>
					<onclick>Skin.ToggleSetting(tiltmiscwallicon)</onclick>
					<selected>Skin.HasSetting(tiltmiscwallicon)</selected>
					<textoffsetx>10</textoffsetx>
					<radioposx>330</radioposx>
					<visible>SubString(Control.GetLabel(2),$LOCALIZE[31944],Right)</visible>
				</control>
				<control type="button" id="3"><!-- Sort by -->
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<label>$LOCALIZE[103]</label>
					<textoffsetx>10</textoffsetx>
				</control>
				<control type="togglebutton" id="4"><!-- Sort direction -->
					<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[21429]: $LOCALIZE[21430]</label>
					<altlabel>$LOCALIZE[21429]: $LOCALIZE[21431]</altlabel>
					<font>font11</font>
					<textoffsetx>10</textoffsetx>
				</control>
				<control type="edit" id="19"><!-- Filter -->
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<label>$LOCALIZE[587]</label>
					<disabledcolor>disabled-text</disabledcolor>
					<textwidth>340</textwidth>
					<textoffsetx>10</textoffsetx>
				</control>
				<control type="button" id="6"><!-- Slideshow -->
					<width>376</width>
					<height>48</height>
					<textoffsetx>10</textoffsetx>
					<label>$LOCALIZE[108]</label>
					<font>font11</font>
				</control>
				<control type="button" id="7"><!-- Recursive slideshow -->
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<textoffsetx>10</textoffsetx>
					<label>$LOCALIZE[361]</label>
				</control>
				<control type="radiobutton" id="9"><!-- Randomize -->
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<textoffsetx>10</textoffsetx>
					<label>$LOCALIZE[13319]</label>
					<radioposx>330</radioposx>
				</control>
				<control type="button" id="1200"><!-- Player controls -->
					<description>PlayerControls</description>
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<textoffsetx>10</textoffsetx>
					<label>$LOCALIZE[16003] $LOCALIZE[478]</label>
					<onclick>ActivateWindow(playercontrols)</onclick>
					<onclick>SetFocus(50)</onclick>
					<enable>Player.HasAudio | Player.HasVideo</enable>
				</control>
			</control>
		</control>
	</controls>
</window>
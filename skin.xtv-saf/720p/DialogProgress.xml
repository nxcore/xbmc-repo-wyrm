<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>10</defaultcontrol>
	<coordinates>
		<system>1</system>
		<posx>0</posx>
		<posy>0</posy>
	</coordinates>
	<include>shutdown-ani</include>
	<controls>
		<control type="group">
			<visible>!Window.IsVisible(selectdialog)</visible>
			<animation effect="fade" start="0" end="100" time="300">Visible</animation>
			<control type="image"><!-- Dialog background image -->
				<posx>292</posx>
				<posy>256</posy>
				<width>690</width>
				<height>256</height>
				<texture border="8">button-menu-background.png</texture>
				<colordiffuse>dialog-background</colordiffuse>
			</control>
			<control type="label" id="1"><!-- Dialog heading -->
				<posx>318</posx>
				<posy>272</posy>
				<width>637</width>
				<height>25</height>
				<label>-</label>
				<align>center</align>
			</control>
			<control type="textbox" id="9"><!-- Dialog info prompt -->
				<posx>318</posx>
				<posy>310</posy>
				<width>637</width>
				<height>75</height>
				<align>center</align>
				<label>-</label>
				<font>font11</font>
				<autoscroll time="2000" delay="8000" repeat="5000">Skin.HasSetting(AutoScroll)</autoscroll>
			</control>
			<control type="progress">
				<posx>336</posx>
				<posy>418</posy>
				<width>601</width>
				<height>16</height>
				<info>System.Progressbar</info>
			</control>
			<control type="button" id="10"><!-- Cancel -->
				<posx>558</posx>
				<posy>450</posy>
				<width>160</width>
				<height>50</height>
				<label>$LOCALIZE[222]</label>
				<font>font12</font>
				<align>center</align>
				<onleft>10</onleft>
				<onright>10</onright>
				<onup>10</onup>
				<ondown>10</ondown>
			</control>
		</control>
	</controls>
</window>
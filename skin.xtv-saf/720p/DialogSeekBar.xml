<?xml version="1.0" encoding="utf-8"?>
<window>
	<visible>Player.Seeking | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding </visible>
	<animation effect="fade" end="0" time="200">WindowClose</animation>
	<animation effect="fade" end="0" time="200" condition="[Window.IsVisible(SliderDialog) | Window.IsVisible(OSDVideoSettings) | Window.IsVisible(OSDAudioSettings) | Window.IsVisible(SubtitleSearch) | Window.IsVisible(VideoBookmarks)]">Conditional</animation>
	<coordinates>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<control type="group">
			<visible>![Window.IsVisible(fullscreeninfo) | Window.IsVisible(SliderDialog) | Window.IsVisible(OSDVideoSettings) | Window.IsVisible(OSDAudioSettings) | Window.IsVisible(VideoBookmarks)]</visible>
			<control type="image"><!-- Seekbar Dialog background image -->
				<left>0</left>
				<top>646</top>
				<height>80</height>
				<width>1280</width>
				<texture>background.png</texture>
				<colordiffuse>osd-background</colordiffuse>
				<visible>[Window.IsActive(fullscreenvideo)] + ![Window.IsActive(MusicOSD)]</visible>
			</control>
			<include>player-mediaicon</include>
		</control>

		<!-- Player action labels -->
		<control type="group">
			<visible>[Window.IsVisible(FullscreenVideo) | Window.IsVisible(Visualisation)]</visible>
			<control type="grouplist">
				<left>408</left>
				<top>657</top>
				<width>464</width>
				<height>64</height>
				<align>center</align>
				<aligny>center</aligny>
				<orientation>horizontal</orientation>
				<control type="image">
					<width>64</width>
					<height>64</height>
					<texture>$VAR[PlayStateImage]</texture>
				</control>
				<control type="label"><!-- Video screen headings -->
					<width min="150" max="400">auto</width>
					<height>64</height>
					<label>$VAR[PlayStateTxt]</label>
					<font>font22</font>
				</control>
			</control>
		</control>

		<control type="group">
			<visible>[Window.IsVisible(FullscreenVideo)] + ![Window.IsVisible(SliderDialog) | Window.IsVisible(OSDVideoSettings) | Window.IsVisible(OSDAudioSettings) | Window.IsVisible(SubtitleSearch) | Window.IsVisible(VideoBookmarks)]</visible>
			<!-- Player info labels -->
			<control type="label">
				<left>8</left>
				<top>644</top>
				<width>220</width>
				<height>26</height>
				<font>font10</font>
				<label>[COLOR=disabled-text]($INFO[System.Time])[/COLOR] $INFO[VideoPlayer.Time]</label>
				<align>right</align>
			</control>
			<control type="label">
				<left>1048</left>
				<top>644</top>
				<width>230</width>
				<height>26</height>
				<font>font10</font>
				<label>-$INFO[VideoPlayer.TimeRemaining] [COLOR=disabled-text]($INFO[Player.FinishTime])[/COLOR]</label>
			</control>

			<control type="group">
				<visible>!Window.IsVisible(fullscreeninfo)</visible>
				<!-- Progress bar -->
				<control type="progress">
					<left>238</left>
					<top>652</top>
					<width>800</width>
					<height>16</height>
					<info>Player.ProgressCache</info>
					<colordiffuse>FF777777</colordiffuse>
				</control>
				<control type="progress">
					<left>238</left>
					<top>652</top>
					<width>800</width>
					<height>16</height>
					<info>Player.Progress</info>
					<colordiffuse>ProgressBarColor</colordiffuse>
				</control>
				
				<control type="slider" id="401"><!-- Seek Slider -->
					<left>238</left>
					<top>650</top>
					<width>800</width>
					<height>20</height>
					<action>seek</action>
				</control>
			</control>
		</control>
		<!-- Start Progress Control for all Windows Except VideoFullScreen , KaraokeVisualisation, MusicVisualisation, MyMusicPlaylist and PlayerControls-->
		<control type="group">
			<visible>![Window.IsActive(FullscreenVideo) | Window.IsActive(karaoke) | Window.IsActive(Visualisation) | Window.IsActive(musicplaylist) | Window.IsActive(PlayerControls)]</visible>
			<control type="image"><!-- Dialog background image -->
				<left>463</left>
				<top>22</top>
				<width>354</width>
				<height>87</height>
				<texture border="8">button-menu-background.png</texture>
			</control>
			<control type="label">
				<left>432</left>
				<top>45</top>
				<width>177</width>
				<height>20</height>
				<font>font12</font>
				<align>right</align>
				<label>$INFO[Player.Time]</label>
				<visible>!Player.Seeking</visible>
			</control>
			<control type="label">
				<left>432</left>
				<top>45</top>
				<width>177</width>
				<height>20</height>
				<font>font12</font>
				<align>right</align>
				<label>$INFO[Player.SeekTime]</label>
				<visible>Player.Seeking</visible>
			</control>
			<control type="label">
				<left>619</left>
				<top>45</top>
				<width>177</width>
				<height>20</height>
				<label>$INFO[Player.Duration,/ ]</label>
				<font>font12</font>
			</control>
			<control type="progress">
				<left>481</left>
				<top>86</top>
				<width>300</width>
				<height>8</height>
				<info>Player.ProgressCache</info>
				<colordiffuse>FF777777</colordiffuse>
			</control>
			<control type="progress">
				<left>481</left>
				<top>86</top>
				<width>300</width>
				<height>8</height>
				<info>Player.Progress</info>
				<colordiffuse>ProgressBarColor</colordiffuse>
			</control>
		</control>
	</controls>
</window>
<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<controls>
		<include>background</include>
		<include>#files</include>
		<include>Fake-Overlay</include>
		<control type="image">
			<description>Settings Logo</description>
			<include>icon-header-commons</include>
			<texture>DefaultAddon.png</texture>
		</control>
		<control type="grouplist">
			<posx>946</posx>
			<posy>50</posy>
			<width>360</width>
			<height>37</height>
			<align>left</align>
			<aligny>center</aligny>
			<orientation>horizontal</orientation>
			<control type="label">
				<description>Addons Label</description>
				<width min="60" max="250">auto</width>
				<height>38</height>
				<label>$LOCALIZE[24001]</label>
				<font>font20</font>
				<aligny>center</aligny>
			</control>
			<control type="label">
				<description>Number of files</description>
				<visible>Skin.HasSetting(homemenu-horizontal) | [!Skin.HasSetting(homemenu-vertical) + !Skin.HasSetting(homemenu-horizontal)]</visible>
				<posy>13</posy>
				<width min="40" max="110">auto</width>
				<height>38</height>
				<aligny>center</aligny>
				<label>$INFO[Container.NumItems, (,)]</label>
			</control>
		</control>

		<!-- Display warning if free memory is low -->
		<include>memory-low</include>

		<!-- Various Views of Addons Browser -->
		<control type="group">
			<include>ListView</include>
			<include>IconView</include>
			<include>WrapView</include>
			<include>WallView</include>
			<include>Coverflow</include>
		</control>

		<control type="group">
			<posy>720</posy>
			<include>View-as</include>
			<control type="group">
				<visible>ControlGroup(9000).HasFocus() + !Skin.HasSetting(view-as-lock)</visible>
				<control type="image">
					<description>Background shadow</description>
					<posx>0</posx>
					<posy>0</posy>
					<width>1280</width>
					<height>720</height>
					<texture>colours/black.png</texture>
					<colordiffuse>osd-background</colordiffuse>
				</control>
				<control type="image">
					<description>Button Background</description>
					<posx>440</posx>
					<posy>212</posy>
					<width>396</width>
					<height>360</height>
					<texture border="8" diffuse="mask-squ.png">button-menu-background.png</texture>
				</control>
			</control>
			<control type="grouplist" id="9000">
				<posx>450</posx>
				<posy>224</posy>
				<width>376</width>
				<height>336</height>
				<onleft>50</onleft>
				<onright>50</onright>
				<onup>9000</onup>
				<ondown>9000</ondown>
				<onback>50</onback>
				<itemgap>0</itemgap>
				<control type="button" id="2">
					<description>View As Icons button</description>
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<label>$LOCALIZE[100]</label>
					<textoffsetx>10</textoffsetx>
					<textoffsety>8</textoffsety>
					<aligny>top</aligny>
				</control>
				<control type="radiobutton" id="1198">
					<description>Tilt Icon List view</description>
					<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[31886]</label>
					<font>font11</font>
					<onclick>Skin.ToggleSetting(tiltmisclisticon)</onclick>
					<selected>Skin.HasSetting(tiltmisclisticon)</selected>
					<textoffsetx>10</textoffsetx>
					<radioposx>330</radioposx>
					<visible>SubString(Control.GetLabel(2),$LOCALIZE[31941],Right)</visible>
				</control>
				<control type="radiobutton" id="1197">
					<description>Tilt Icon Wall view</description>
					<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[31886]</label>
					<font>font11</font>
					<onclick>Skin.ToggleSetting(tiltmiscwallicon)</onclick>
					<selected>Skin.HasSetting(tiltmiscwallicon)</selected>
					<textoffsetx>10</textoffsetx>
					<radioposx>330</radioposx>
					<visible>SubString(Control.GetLabel(2),$LOCALIZE[31944],Right)</visible>
				</control>
				<control type="button" id="3">
					<description>Sort by button</description>
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<label>$LOCALIZE[103]</label>
					<textoffsetx>10</textoffsetx>
				</control>
				<control type="togglebutton" id="4">
					<description>Sort direction</description>
					<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[21429]: $LOCALIZE[21430]</label>
					<altlabel>$LOCALIZE[21429]: $LOCALIZE[21431]</altlabel>
					<font>font11</font>
					<textoffsetx>10</textoffsetx>
				</control>
				<control type="radiobutton" id="5">
					<description>Enable auto-updates</description>
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<textoffsetx>10</textoffsetx>
					<label>$LOCALIZE[24063]</label>
					<radioposx>330</radioposx>
				</control>
				<control type="radiobutton" id ="6">
					<description>No notifications</description>
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<textoffsetx>10</textoffsetx>
					<label>$LOCALIZE[25000]</label>
					<radioposx>330</radioposx>
				</control>
				<control type="radiobutton" id ="7">
					<description>Hide foreign</description>
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<textoffsetx>10</textoffsetx>
					<label>$LOCALIZE[25001]</label>
					<radioposx>330</radioposx>
				</control>
			</control>
		</control>
	</controls>
</window>

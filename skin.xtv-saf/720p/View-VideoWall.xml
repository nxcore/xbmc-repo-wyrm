<includes>
	<include name="VideoWallView">
		<control type="panel" id="58">
			<posx>505</posx>
			<posy>120</posy>
			<width>720</width>
			<height>507</height>
			<onleft>9000</onleft>
			<onright>28</onright>
			<onup>58</onup>
			<ondown>58</ondown>
			<viewtype label="31944">Wall</viewtype>
			<scrolltime>100</scrolltime>
			<include>list-fade</include>
			<pagecontrol>28</pagecontrol>
			<preloaditems>6</preloaditems>
			<animation effect="rotatey" start="-15" end="-15" time="0" condition="Skin.HasSetting(tilted-videowall)">Conditional</animation>
			<animation effect="slide" end="70,0" time="0" condition="Skin.HasSetting(tilted-videowall)">Conditional</animation>
			<animation effect="zoom" start="100" end="120" center="auto" time="0" tween="back" easing="out" condition="Skin.HasSetting(tilted-videowall)">Conditional</animation>
			<itemlayout height="169" width="120">
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>120</width>
					<height>169</height>
					<texture>-</texture>
				</control>
				<control type="image">
					<posx>1</posx>
					<posy>1</posy>
					<width>119</width>
					<height>169</height>
					<aspectratio>stretch</aspectratio>
					<colordiffuse>UnFocusedPosters</colordiffuse>
					<texture background="true" diffuse="mask-rect.png">DefaultVideo.png</texture>
					<visible>SubString(ListItem.Icon,DefaultFolder.png,Left)</visible>
				</control>
				<control type="image">
					<posx>1</posx>
					<posy>1</posy>
					<width>119</width>
					<height>169</height>
					<aspectratio>stretch</aspectratio>
					<colordiffuse>UnFocusedPosters</colordiffuse>
					<texture fallback="DefaultVideo.png" background="true" diffuse="mask-rect.png">$VAR[IconPoster]</texture>
					<visible>!SubString(ListItem.Icon,DefaultFolder.png,Left)</visible>
				</control>
			</itemlayout>
			<focusedlayout height="169" width="120">
				<control type="image">
					<posx>1</posx>
					<posy>1</posy>
					<width>119</width>
					<height>169</height>
					<aspectratio>stretch</aspectratio>
					<animation type="Focus" reversible="false">
						<effect type="zoom" start="100" end="130" center="auto" time="600" tween="back" easing="out" />
					</animation>
					<texture background="true" diffuse="mask-rect.png">$VAR[IconPoster]</texture>
					<visible>SubString(ListItem.Icon,Default,Left) + !SubString(ListItem.Icon,DefaultFolder.png,Left)</visible>
				</control>
				<control type="image">
					<posx>1</posx>
					<posy>1</posy>
					<width>119</width>
					<height>169</height>
					<aspectratio align="center" aligny="center">stretch</aspectratio>
					<animation type="Focus" reversible="false">
						<effect type="zoom" start="100" end="130" center="auto" time="600" tween="back" easing="out" />
					</animation>
					<texture background="true" diffuse="mask-rect.png">DefaultVideo.png</texture>
					<visible>SubString(ListItem.Icon,DefaultFolder.png,Left)</visible>
				</control>
				<control type="image">
					<posx>1</posx>
					<posy>1</posy>
					<width>119</width>
					<height>169</height>
					<aspectratio align="center" aligny="center">stretch</aspectratio>
					<animation type="Focus" reversible="false">
						<effect type="zoom" start="100" end="130" center="auto" time="600" tween="back" easing="out" />
					</animation>
					<texture fallback="DefaultVideo.png" background="true" diffuse="mask-rect.png">$VAR[IconPoster]</texture>
					<bordertexture border="10">mask-hilite.png</bordertexture>
					<bordersize>9</bordersize>
					<visible>!SubString(ListItem.Icon,Default,Left)</visible>
				</control>
				<!-- Watched Overlay -->
				<control type="image">
					<posx>80</posx>
					<posy>-10</posy>
					<width>32</width>
					<height>32</height>
					<animation type="Focus" reversible="false">
						<effect type="zoom" start="100" end="130" center="auto" time="600" tween="back" easing="out" />
					</animation>
					<texture>$VAR[Overlay]</texture>
					<visible>Skin.HasSetting(watched-overlay)</visible>
				</control>
			</focusedlayout>
		</control>
		<control type="group">
			<visible>Control.IsVisible(58)</visible>
			<include>SortLetterNotification</include>
			<!-- Show logo -->
			<control type="image" id="7016">
				<posx>17</posx>
				<posy>112</posy>
				<width>354</width>
				<height>97</height>
				<texture background="true">$INFO[ListItem.path]logo.png</texture>
				<aligny>bottom</aligny>
				<aspectratio align="left">keep</aspectratio>
				<animation effect="fade" delay="100" start="0" end="100" time="200">Visible</animation>
				<visible>Container.Content(movies) | Container.Content(tvshows)</visible>
			</control>
			<!-- Title -->
			<control type="label">
				<posx>17</posx>
				<posy>168</posy>
				<width>460</width>
				<height>37</height>
				<font>font18</font>
				<align>left</align>
				<textcolor>button-text</textcolor>
				<shadowcolor>shadow-text</shadowcolor>
				<selectedcolor>listselectedtext</selectedcolor>
				<scroll>true</scroll>
				<info>ListItem.Label</info>
				<textoffsetx>0</textoffsetx>
				<visible>!SubString(ListItem.Icon,DefaultFolderBack.png,Left) + [Container.Content(seasons) | Container.Content(episodes) | container.content(musicvideos) | IsEmpty(Control.GetLabel(7016))]</visible>
				<animation effect="fade" delay="100" start="0" end="100" time="200">Visible</animation>
			</control>
			<!-- Go Back -->
			<control type="label">
				<posx>17</posx>
				<posy>300</posy>
				<width>460</width>
				<height>37</height>
				<font>font28</font>
				<align>center</align>
				<textcolor>button-text</textcolor>
				<shadowcolor>shadow-text</shadowcolor>
				<scroll>true</scroll>
				<label>31688</label>
				<textoffsetx>0</textoffsetx>
				<visible>SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
			</control>
			<!-- Genre -->
			<control type="label">
				<posx>17</posx>
				<posy>212</posy>
				<width>460</width>
				<height>37</height>
				<font>font11</font>
				<align>left</align>
				<textcolor>button-text</textcolor>
				<shadowcolor>shadow-text</shadowcolor>
				<selectedcolor>listselectedtext</selectedcolor>
				<scroll>true</scroll>
				<info>ListItem.Genre</info>
				<textoffsetx>0</textoffsetx>
			</control>
			<!-- Watched TV episodes -->
			<control type="label">
				<posx>17</posx>
				<posy>246</posy>
				<width>354</width>
				<height>31</height>
				<aligny>center</aligny>
				<font>font18</font>
				<textcolor>button-text</textcolor>
				<shadowcolor>shadow-text</shadowcolor>
				<label>$LOCALIZE[20360]: $INFO[ListItem.Property(TotalEpisodes)]</label>
				<visible>Container.Content(TVShows) + !IsEmpty(ListItem.Property(TotalEpisodes))</visible>
			</control>
			<control type="group">
				<visible>!IsEmpty(listitem.Duration)</visible>
				<!-- Duration -->
				<control type="label">
					<posx>17</posx>
					<posy>250</posy>
					<width>200</width>
					<height>25</height>
					<aligny>center</aligny>
					<font>font13</font>
					<textcolor>button-text</textcolor>
					<shadowcolor>shadow-text</shadowcolor>
					<info>ListItem.Duration</info>
					<visible>substring(listitem.Duration,hrs)</visible>
				</control>
				<control type="label">
					<posx>17</posx>
					<posy>250</posy>
					<width>200</width>
					<height>25</height>
					<aligny>center</aligny>
					<font>font13</font>
					<textcolor>button-text</textcolor>
					<shadowcolor>shadow-text</shadowcolor>
					<info>ListItem.Duration</info>
					<visible>substring(listitem.Duration,min)</visible>
					<visible>!substring(listitem.Duration,hrs)</visible>
				</control>
				<control type="label">
					<posx>17</posx>
					<posy>250</posy>
					<width>200</width>
					<height>25</height>
					<aligny>center</aligny>
					<font>font13</font>
					<textcolor>button-text</textcolor>
					<shadowcolor>shadow-text</shadowcolor>
					<label>$INFO[ListItem.Duration,, mins]</label>
					<visible>!substring(listitem.Duration,min)</visible>
				</control>
			</control>
			<!-- MPAA Rating -->
			<control type="image">
				<posx>17</posx>
				<posy>280</posy>
				<width>212</width>
				<height>62</height>
				<aligny>bottom</aligny>
				<texture>$VAR[VideoRating]</texture>
				<aspectratio>keep</aspectratio>
			</control>
			<!-- Star Rating -->
			<control type="image">
				<posx>300</posx>
				<posy>292</posy>
				<width>177</width>
				<height>25</height>
				<info>ListItem.StarRating</info>
				<align>right</align>
				<colordiffuse>StarDiffuse</colordiffuse>
				<visible>!IsEmpty(ListItem.StarRating)</visible>
			</control>
			<!-- Plot Outline -->
			<control type="textbox">
				<posx>17</posx>
				<posy>350</posy>
				<width>460</width>
				<height>298</height>
				<font>font13</font>
				<textcolor>button-text</textcolor>
				<shadowcolor>shadow-text</shadowcolor>
				<label fallback="161">$INFO[ListItem.PlotOutline]</label>
				<align>left</align>
				<visible>!IsEmpty(ListItem.PlotOutline)</visible>
				<autoscroll time="4000" delay="6000" repeat="8000">true</autoscroll>
			</control>
			<!-- Plot (Show if no outline available)-->
			<control type="textbox">
				<posx>17</posx>
				<posy>350</posy>
				<width>460</width>
				<height>298</height>
				<font>font13</font>
				<textcolor>button-text</textcolor>
				<shadowcolor>shadow-text</shadowcolor>
				<label fallback="161">$INFO[ListItem.Plot]</label>
				<align>left</align>
				<visible>IsEmpty(ListItem.PlotOutline) + !IsEmpty(ListItem.Plot)</visible>
				<autoscroll time="4000" delay="6000" repeat="8000">true</autoscroll>
			</control>
			<control type="scrollbar" id="28">
				<posx>1244</posx>
				<posy>120</posy>
				<width>22</width>
				<height>510</height>
				<onleft>58</onleft>
				<onright>9000</onright>
				<include>list-fade</include>
				<visible>Skin.HasSetting(sbar)</visible>
			</control>
		</control>
	</include>
</includes>

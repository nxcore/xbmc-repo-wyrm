<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="VideoWallView">
		<control type="panel" id="58">
			<left>505</left>
			<top>120</top>
			<width>720</width>
			<height>507</height>
			<onleft>9000</onleft>
			<onright>28</onright>
			<onup>58</onup>
			<ondown>58</ondown>
			<viewtype label="31944">Wall</viewtype>
			<scrolltime>100</scrolltime>
			<pagecontrol>28</pagecontrol>
			<preloaditems>2</preloaditems>
			<animation type="TYPE" condition="Skin.HasSetting(tiltvideowallicon)" reversible="false">
				<effect type="rotatey" start="-15" end="-15" time="0"/>
				<effect type="slide" end="70,0" time="0"/>
				<effect type="zoom" start="100" end="120" center="auto" time="0" tween="back" easing="out"/>
			</animation>
			<itemlayout height="169" width="120" condition="!Container.Content(addons)">
				<control type="image">
					<left>1</left>
					<top>1</top>
					<width>119</width>
					<height>169</height>
					<aspectratio>stretch</aspectratio>
					<colordiffuse>UnFocusedPosters</colordiffuse>
					<texture background="true">$INFO[ListItem.Icon]</texture>
					<visible>SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
				</control>
				<control type="image">
					<left>1</left>
					<top>1</top>
					<width>119</width>
					<height>169</height>
					<aspectratio scalediffuse="false">stretch</aspectratio>
					<colordiffuse>UnFocusedPosters</colordiffuse>
					<texture fallback="DefaultVideo.png" diffuse="mask-rect.png" background="true">$VAR[IconPoster]</texture>
					<visible>!SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
				</control>
				<control type="image"><!-- Watched Overlay -->
					<left>94</left>
					<top>-6</top>
					<width>32</width>
					<height>32</height>
					<texture>$VAR[Overlay]</texture>
					<visible>Skin.HasSetting(watched-overlay)</visible>
				</control>
				<control type="image"><!-- Extras Overlay -->
					<left>4</left>
					<top>4</top>
					<width>16</width>
					<height>16</height>
					<texture fallback="blank.png">$VAR[ExtrasOverlay]</texture>
					<visible>System.HasAddon(script.videoextras)</visible>
				</control>
			</itemlayout>
			<itemlayout height="169" width="120" condition="Container.Content(addons)">
				<control type="image">
					<left>1</left>
					<top>1</top>
					<width>119</width>
					<height>169</height>
					<aspectratio>stretch</aspectratio>
					<colordiffuse>UnFocusedPosters</colordiffuse>
					<texture background="true">$INFO[ListItem.Icon]</texture>
					<visible>SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
				</control>
				<control type="image">
					<left>1</left>
					<top>1</top>
					<width>119</width>
					<height>169</height>
					<aspectratio scalediffuse="false">stretch</aspectratio>
					<colordiffuse>UnFocusedPosters</colordiffuse>
					<texture fallback="DefaultAddon.png" diffuse="mask-rect.png" background="true">$VAR[IconPoster]</texture>
					<visible>!SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
				</control>
			</itemlayout>
			<focusedlayout height="169" width="120" condition="!Container.Content(addons)">
				<control type="group">
					<animation effect="zoom" start="90" end="140" center="auto" time="400" tween="back" easing="out" reversible="false">focus</animation>
					<control type="image">
						<left>1</left>
						<top>1</top>
						<width>119</width>
						<height>169</height>
						<aspectratio>stretch</aspectratio>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<visible>SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
					</control>
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>120</width>
						<height>169</height>
						<texture>mask-hilite.png</texture>
						<aspectratio>stretch</aspectratio>
						<animation effect="fade" start="0" end="100" time="300" delay="300">Visible</animation>
						<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
						<visible>![Container().OnScrollNext | Container().OnScrollPrevious] + !SubString(ListItem.Icon,Default,Left)</visible>
					</control>
					<control type="image">
						<left>9</left>
						<top>12</top>
						<width>101</width>
						<height>144</height>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<texture fallback="DefaultVideo.png" diffuse="mask-rect.png" background="true">$VAR[IconPoster]</texture>
						<visible>!SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
					</control>
					<control type="image"><!-- Watched Overlay -->
						<left>85</left>
						<top>4</top>
						<width>32</width>
						<height>32</height>
						<texture>$VAR[Overlay]</texture>
						<visible>Skin.HasSetting(watched-overlay)</visible>
					</control>
					<control type="image"><!-- Extras Overlay -->
						<left>10</left>
						<top>14</top>
						<width>16</width>
						<height>16</height>
						<texture fallback="blank.png">$VAR[ExtrasOverlay]</texture>
						<visible>System.HasAddon(script.videoextras)</visible>
					</control>
				</control>
			</focusedlayout>
			<focusedlayout height="169" width="120" condition="Container.Content(addons)">
				<control type="group">
					<animation effect="zoom" start="90" end="140" center="auto" time="400" tween="back" easing="out" reversible="false">focus</animation>
					<control type="image">
						<left>1</left>
						<top>1</top>
						<width>119</width>
						<height>169</height>
						<aspectratio>stretch</aspectratio>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<visible>SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
					</control>
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>120</width>
						<height>169</height>
						<texture>mask-hilite.png</texture>
						<aspectratio>stretch</aspectratio>
						<animation effect="fade" start="0" end="100" time="300" delay="300">Visible</animation>
						<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
						<visible>![Container().OnScrollNext | Container().OnScrollPrevious] + !SubString(ListItem.Icon,Default,Left)</visible>
					</control>
					<control type="image">
						<left>9</left>
						<top>12</top>
						<width>101</width>
						<height>144</height>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<texture fallback="DefaultAddon.png" diffuse="mask-rect.png" background="true">$VAR[IconPoster]</texture>
						<visible>!SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
					</control>
				</control>
			</focusedlayout>
		</control>
		<control type="group">
			<visible>Control.IsVisible(58)</visible>
			<include>SortLetterNotification</include>
			<control type="image" id="7116"><!-- Show logo -->
				<left>17</left>
				<top>112</top>
				<width>354</width>
				<height>97</height>
				<texture fallback="blank.png">$VAR[VideoLogo]</texture>
				<aspectratio align="left" aligny="bottom">keep</aspectratio>
				<animation effect="fade" delay="200" start="0" end="100" time="200">Visible</animation>
				<visible>!IsEmpty(ListItem.Title)</visible>
			</control>
			<control type="label"><!-- Title -->
				<left>17</left>
				<top>112</top>
				<width>460</width>
				<height>74</height>
				<font>font20</font>
				<include condition="Skin.HasSetting(autoscroll)">scrolltext</include>
				<label>$INFO[ListItem.Label]</label>
				<wrapmultiline>true</wrapmultiline>
				<textoffsetx>0</textoffsetx>
				<animation effect="fade" delay="200" start="0" end="100" time="200">Visible</animation>
				<visible>!SubString(ListItem.Icon,DefaultFolderBack.png,Left) + SubString(Control.GetLabel(7116),blank.png,Left)</visible>
			</control>
			<control type="label"><!-- Go Back -->
				<left>17</left>
				<top>300</top>
				<width>460</width>
				<height>38</height>
				<font>font22</font>
				<align>center</align>
				<include condition="Skin.HasSetting(autoscroll)">scrolltext</include>
				<label>$LOCALIZE[31688]</label>
				<textoffsetx>0</textoffsetx>
				<visible>SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
			</control>
			<control type="group">
				<visible>!IsEmpty(ListItem.Title)</visible>
				<control type="label"><!-- Genre -->
					<left>17</left>
					<top>212</top>
					<width>460</width>
					<height>37</height>
					<font>font11</font>
					<include condition="Skin.HasSetting(autoscroll)">scrolltext</include>
					<label>$INFO[ListItem.Genre]</label>
					<textoffsetx>0</textoffsetx>
					<visible>!IsEmpty(ListItem.Genre)</visible>
				</control>
				<control type="label"><!-- Watched TV episodes -->
					<left>17</left>
					<top>246</top>
					<width>354</width>
					<height>31</height>
					<font>font12</font>
					<label>$LOCALIZE[20360]: $INFO[ListItem.Property(NumEpisodes)]</label>
					<visible>Container.Content(tvshows) + !IsEmpty(ListItem.Property(NumEpisodes))</visible>
				</control>
				<control type="label"><!-- Duration -->
					<left>17</left>
					<top>250</top>
					<width>200</width>
					<height>25</height>
					<font>font12</font>
					<label>$VAR[VideoDuration]</label>
					<visible>!IsEmpty(ListItem.Duration) + !Container.Content(tvshows) + !Container.Content(seasons)</visible>
				</control>
				<control type="image"><!-- MPAA Rating -->
					<left>17</left>
					<top>280</top>
					<width>212</width>
					<height>62</height>
					<aligny>bottom</aligny>
					<texture>$VAR[VideoRating]</texture>
					<aspectratio>keep</aspectratio>
				</control>
				<control type="image"><!-- Star Rating -->
					<left>300</left>
					<top>292</top>
					<width>177</width>
					<height>25</height>
					<texture>$VAR[MediaRating]</texture>
					<align>right</align>
					<colordiffuse>StarDiffuse</colordiffuse>
					<visible>!IsEmpty(ListItem.StarRating)</visible>
				</control>
				<control type="textbox"><!-- Plot Outline -->
					<left>17</left>
					<top>350</top>
					<width>460</width>
					<height>316</height>
					<font>font12</font>
					<label fallback="161">$INFO[ListItem.PlotOutline]</label>
					<visible>!IsEmpty(ListItem.PlotOutline)</visible>
					<autoscroll time="4000" delay="6000" repeat="8000">Skin.HasSetting(autoscroll)</autoscroll>
				</control>
				<control type="textbox"><!-- Plot (Show if no outline available)-->
					<left>17</left>
					<top>350</top>
					<width>460</width>
					<height>316</height>
					<font>font12</font>
					<label fallback="161">$INFO[ListItem.Plot]</label>
					<visible>IsEmpty(ListItem.PlotOutline) + !IsEmpty(ListItem.Plot)</visible>
					<autoscroll time="4000" delay="6000" repeat="8000">Skin.HasSetting(autoscroll)</autoscroll>
				</control>
			</control>
			<control type="scrollbar" id="28">
				<left>1244</left>
				<top>120</top>
				<width>18</width>
				<height>510</height>
				<onleft>58</onleft>
				<animation condition="!Control.HasFocus(28) + !Container.Scrolling" effect="fade" start="100" end="0" time="200" reversible="true">Conditional</animation>
				<visible>Skin.HasSetting(sbar)</visible>
			</control>
		</control>
	</include>
</includes>

<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="VideoWallView">
		<control type="panel" id="58">
			<posx>505</posx>
			<posy>120</posy>
			<width>720</width>
			<height>507</height>
			<onleft>9000</onleft>
			<onright>28</onright>
			<onup>58</onup>
			<ondown>58</ondown>
			<viewtype label="31944">Wall</viewtype>
			<scrolltime>100</scrolltime>
			<pagecontrol>28</pagecontrol>
			<preloaditems>2</preloaditems>
			<animation effect="rotatey" start="-15" end="-15" time="0" condition="Skin.HasSetting(tilted-videowall)">Conditional</animation>
			<animation effect="slide" end="70,0" time="0" condition="Skin.HasSetting(tilted-videowall)">Conditional</animation>
			<animation effect="zoom" start="100" end="120" center="auto" time="0" tween="back" easing="out" condition="Skin.HasSetting(tilted-videowall)">Conditional</animation>
			<itemlayout height="169" width="120" condition="!Container.Content(addons)">
				<control type="image">
					<posx>1</posx>
					<posy>1</posy>
					<width>119</width>
					<height>169</height>
					<aspectratio>stretch</aspectratio>
					<colordiffuse>UnFocusedPosters</colordiffuse>
					<texture background="true">$INFO[ListItem.Icon]</texture>
					<visible>SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
				</control>
				<control type="image">
					<posx>1</posx>
					<posy>1</posy>
					<width>119</width>
					<height>169</height>
					<aspectratio>stretch</aspectratio>
					<colordiffuse>UnFocusedPosters</colordiffuse>
					<texture fallback="DefaultVideo.png" diffuse="mask-rect.png" background="true">$VAR[IconPoster]</texture>
					<visible>!SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
				</control>
			</itemlayout>
			<itemlayout height="169" width="120" condition="Container.Content(addons)">
				<control type="image">
					<posx>1</posx>
					<posy>1</posy>
					<width>119</width>
					<height>169</height>
					<aspectratio>stretch</aspectratio>
					<colordiffuse>UnFocusedPosters</colordiffuse>
					<texture background="true">$INFO[ListItem.Icon]</texture>
					<visible>SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
				</control>
				<control type="image">
					<posx>1</posx>
					<posy>1</posy>
					<width>119</width>
					<height>169</height>
					<aspectratio>stretch</aspectratio>
					<colordiffuse>UnFocusedPosters</colordiffuse>
					<texture fallback="DefaultAddon.png" diffuse="mask-rect.png" background="true">$VAR[IconPoster]</texture>
					<visible>!SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
				</control>
			</itemlayout>
			<focusedlayout height="169" width="120" condition="!Container.Content(addons)">
				<control type="group">
					<animation effect="zoom" start="90" end="140" center="auto" time="400" tween="back" easing="out" reversible="false">focus</animation>
					<control type="image">
						<posx>1</posx>
						<posy>1</posy>
						<width>119</width>
						<height>169</height>
						<aspectratio>stretch</aspectratio>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<visible>SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>120</width>
						<height>169</height>
						<texture>mask-hilite.png</texture>
						<aspectratio aligny="center" align="center">stretch</aspectratio>
						<animation effect="fade" start="0" end="100" time="300" delay="300">Visible</animation>
						<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
						<visible>![Container().OnScrollNext | Container().OnScrollPrevious] + !SubString(ListItem.Icon,Default,Left)</visible>
					</control>
					<control type="image">
						<posx>9</posx>
						<posy>12</posy>
						<width>101</width>
						<height>144</height>
						<aspectratio>stretch</aspectratio>
						<texture fallback="DefaultVideo.png" diffuse="mask-rect.png" background="true">$VAR[IconPoster]</texture>
						<visible>!SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
					</control>
				</control>
				<!-- Watched Overlay -->
				<control type="image">
					<posx>80</posx>
					<posy>-10</posy>
					<width>32</width>
					<height>32</height>
					<animation effect="zoom" start="100" end="130" center="auto" time="600" tween="back" easing="out" reversible="false">focus</animation>
					<texture>$VAR[Overlay]</texture>
					<visible>Skin.HasSetting(watched-overlay) + !IsEmpty(ListItem.Title)</visible>
				</control>
			</focusedlayout>
			<focusedlayout height="169" width="120" condition="Container.Content(addons)">
				<control type="group">
					<animation effect="zoom" start="90" end="140" center="auto" time="400" tween="back" easing="out" reversible="false">focus</animation>
					<control type="image">
						<posx>1</posx>
						<posy>1</posy>
						<width>119</width>
						<height>169</height>
						<aspectratio>stretch</aspectratio>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<visible>SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>120</width>
						<height>169</height>
						<texture>mask-hilite.png</texture>
						<aspectratio aligny="center" align="center">stretch</aspectratio>
						<animation effect="fade" start="0" end="100" time="300" delay="300">Visible</animation>
						<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
						<visible>![Container().OnScrollNext | Container().OnScrollPrevious] + !SubString(ListItem.Icon,Default,Left)</visible>
					</control>
					<control type="image">
						<posx>9</posx>
						<posy>12</posy>
						<width>101</width>
						<height>144</height>
						<aspectratio>stretch</aspectratio>
						<texture fallback="DefaultAddon.png" diffuse="mask-rect.png" background="true">$VAR[IconPoster]</texture>
						<visible>!SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
					</control>
				</control>
			</focusedlayout>
		</control>
		<control type="group">
			<visible>Control.IsVisible(58)</visible>
			<include>SortLetterNotification</include>
			<!-- Show logo -->
			<control type="group">
				<visible>!Skin.HasSetting(hide-chrome) + !IsEmpty(ListItem.Title)</visible>
				<control type="image" id="7116">
					<posx>17</posx>
					<posy>112</posy>
					<width>354</width>
					<height>97</height>
					<texture fallback="blank.png">$VAR[VideoLogo]</texture>
					<aligny>bottom</aligny>
					<aspectratio align="left">keep</aspectratio>
					<animation effect="fade" delay="200" start="0" end="100" time="200">Visible</animation>
				</control>
				<!-- Title -->
				<control type="label">
					<posx>17</posx>
					<posy>112</posy>
					<width>460</width>
					<height>74</height>
					<font>font20</font>
					<align>left</align>
					<aligny>center</aligny>
					<include condition="Skin.HasSetting(autoscroll)">scrolltext</include>
					<label>$INFO[ListItem.Label]</label>
					<wrapmultiline>true</wrapmultiline>
					<textoffsetx>0</textoffsetx>
					<animation effect="fade" delay="200" start="0" end="100" time="200">Visible</animation>
					<visible>SubString(Control.GetLabel(7116),blank.png,Left)</visible>
				</control>
			</control>
			<control type="group">
				<visible>Skin.HasSetting(hide-chrome)</visible>
				<!-- Title -->
				<control type="label">
					<posx>17</posx>
					<posy>112</posy>
					<width>460</width>
					<height>74</height>
					<font>font20</font>
					<align>left</align>
					<aligny>center</aligny>
					<include condition="Skin.HasSetting(autoscroll)">scrolltext</include>
					<label>$INFO[ListItem.Label]</label>
					<wrapmultiline>true</wrapmultiline>
					<textoffsetx>0</textoffsetx>
					<visible>!SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
				</control>
			</control>
			<!-- Go Back -->
			<control type="label">
				<posx>17</posx>
				<posy>300</posy>
				<width>460</width>
				<height>37</height>
				<font>font28</font>
				<align>center</align>
				<include condition="Skin.HasSetting(autoscroll)">scrolltext</include>
				<label>31688</label>
				<textoffsetx>0</textoffsetx>
				<visible>SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
			</control>
			<control type="group">
				<visible>!IsEmpty(ListItem.Title)</visible>
				<!-- Genre -->
				<control type="label">
					<posx>17</posx>
					<posy>212</posy>
					<width>460</width>
					<height>37</height>
					<font>font11</font>
					<align>left</align>
					<include condition="Skin.HasSetting(autoscroll)">scrolltext</include>
					<info>ListItem.Genre</info>
					<textoffsetx>0</textoffsetx>
					<visible>!IsEmpty(ListItem.Genre)</visible>
				</control>
				<!-- Watched TV episodes -->
				<control type="label">
					<posx>17</posx>
					<posy>246</posy>
					<width>354</width>
					<height>31</height>
					<aligny>center</aligny>
					<font>font12</font>
					<label>$LOCALIZE[20360]: $INFO[ListItem.Property(NumEpisodes)]</label>
					<visible>Container.Content(tvshows) + !IsEmpty(ListItem.Property(NumEpisodes))</visible>
				</control>
				<!-- Duration -->
				<control type="label">
					<posx>17</posx>
					<posy>250</posy>
					<width>200</width>
					<height>25</height>
					<aligny>center</aligny>
					<font>font12</font>
					<label>$VAR[VideoDuration]</label>
					<visible>!IsEmpty(ListItem.Duration) + !Container.Content(tvshows) + !Container.Content(seasons)</visible>
				</control>
				<!-- MPAA Rating -->
				<control type="image">
					<posx>17</posx>
					<posy>280</posy>
					<width>212</width>
					<height>62</height>
					<aligny>bottom</aligny>
					<texture>$VAR[VideoRating]</texture>
					<aspectratio>keep</aspectratio>
				</control>
				<!-- Star Rating -->
				<control type="image">
					<posx>300</posx>
					<posy>292</posy>
					<width>177</width>
					<height>25</height>
					<info>ListItem.StarRating</info>
					<align>right</align>
					<colordiffuse>StarDiffuse</colordiffuse>
					<visible>!IsEmpty(ListItem.StarRating)</visible>
				</control>
				<!-- Plot Outline -->
				<control type="textbox">
					<posx>17</posx>
					<posy>350</posy>
					<width>460</width>
					<height>316</height>
					<font>font12</font>
					<label fallback="161">$INFO[ListItem.PlotOutline]</label>
					<align>left</align>
					<visible>!IsEmpty(ListItem.PlotOutline)</visible>
					<autoscroll time="4000" delay="6000" repeat="8000">Skin.HasSetting(autoscroll)</autoscroll>
				</control>
				<!-- Plot (Show if no outline available)-->
				<control type="textbox">
					<posx>17</posx>
					<posy>350</posy>
					<width>460</width>
					<height>316</height>
					<font>font12</font>
					<label fallback="161">$INFO[ListItem.Plot]</label>
					<align>left</align>
					<visible>IsEmpty(ListItem.PlotOutline) + !IsEmpty(ListItem.Plot)</visible>
					<autoscroll time="4000" delay="6000" repeat="8000">Skin.HasSetting(autoscroll)</autoscroll>
				</control>
			</control>
			<control type="scrollbar" id="28">
				<posx>1244</posx>
				<posy>120</posy>
				<width>18</width>
				<height>510</height>
				<onleft>58</onleft>
				<onright>9000</onright>
				<animation condition="!Control.HasFocus(28) + !Container.Scrolling" effect="fade" start="100" end="0" time="200" reversible="true">Conditional</animation>
				<visible>Skin.HasSetting(sbar)</visible>
			</control>
		</control>
	</include>
</includes>

<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>23</defaultcontrol>
	<controls>
		<include>screen-fade</include>
		<control type="group">
			<control type="image"><!-- Use solid background image -->
				<include>fullscreenimage</include>
				<texture>background.png</texture>
				<visible>IsEmpty(Skin.String(custom-background))</visible>
			</control>
			<control type="image"><!-- Custom background image -->
				<include>fullscreenimage</include>
				<aspectratio>stretch</aspectratio>
				<texture>$INFO[Skin.String(custom-background)]</texture>
				<visible>!IsEmpty(Skin.String(custom-background))</visible>
			</control>
			<control type="label" id="1"><!-- Screen heading -->
				<left>35</left>
				<top>37</top>
				<width>1203</width>
				<height>37</height>
				<font>font28</font>
				<align>center</align>
			</control>
			<control type="textbox" id="5"><!-- Text area -->
				<left>35</left>
				<top>112</top>
				<width>1185</width>
				<height>530</height>
				<label>-</label>
				<align>justify</align>
				<pagecontrol>23</pagecontrol>
				<autoscroll delay="3000" time="1000" repeat="6000">Skin.HasSetting(autoscroll)</autoscroll>
			</control>
			<control type="scrollbar" id="23">
				<left>1244</left>
				<top>112</top>
				<width>20</width>
				<height>530</height>
				<onleft>noop</onleft>
				<onright>noop</onright>
				<ondown>noop</ondown>
				<onup>noop</onup>
			</control>
		</control>
	</controls>
</window>

<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="VideoWrapView">
		<control type="wraplist" id="54">
			<viewtype label="31942">Wraplist</viewtype>
			<posx>0</posx>
			<posy>187</posy>
			<width>1258</width>
			<height>525</height>
			<onleft>54</onleft>
			<onright>54</onright>
			<onup>9000</onup>
			<ondown>24</ondown>
			<focusposition>0</focusposition>
			<orientation>horizontal</orientation>
			<preloaditems>2</preloaditems>
			<scrolltime>0</scrolltime>
			<pagecontrol>24</pagecontrol>
			<itemlayout height="292" width="90">
				<control type="image">
					<posx>-5</posx>
					<posy>336</posy>
					<height>128</height>
					<width>79</width>
					<texture>case-dvd.png</texture>
					<colordiffuse>UnFocusedCovers</colordiffuse>
					<aspectratio>stretch</aspectratio>
					<visible>Skin.HasSetting(DVDcase) + !SubString(ListItem.Icon,Default,Left)</visible>
				</control>
				<control type="image">
					<posx>-5</posx>
					<posy>340</posy>
					<height>120</height>
					<width>77</width>
					<texture background="true" diffuse="mask-rect.png">$VAR[IconPoster]</texture>
					<colordiffuse>UnFocusedCovers</colordiffuse>
					<aspectratio scalediffuse="false">stretch</aspectratio>
				</control>
				<control type="image">
					<posx>-10</posx>
					<posy>320</posy>
					<height>18</height>
					<width>26</width>
					<texture>$VAR[Overlay]</texture>
					<colordiffuse>UnFocusedCovers</colordiffuse>
					<visible>Skin.HasSetting(watched-overlay)</visible>
				</control>
			</itemlayout>
			<focusedlayout height="405" width="276">
				<control type="group">
					<visible>!SubString(ListItem.Icon,Default,Left)</visible>
					<control type="image">
						<posx>-5</posx>
						<posy>122</posy>
						<height>364</height>
						<width>270</width>
						<texture>mask-hilite.png</texture>
						<aspectratio>stretch</aspectratio>
					</control>
					<control type="image">
						<posx>26</posx>
						<posy>144</posy>
						<height>321</height>
						<width>207</width>
						<texture>case-dvd.png</texture>
						<aspectratio>stretch</aspectratio>
						<visible>Skin.HasSetting(DVDcase)</visible>
					</control>
				</control>
				<control type="image">
					<posx>26</posx>
					<posy>148</posy>
					<height>312</height>
					<width>203</width>
					<aspectratio scalediffuse="false">stretch</aspectratio>
					<texture diffuse="mask-rect.png" background="true" fallback="DefaultVideo.png">$VAR[IconPoster]</texture>
				</control>
				<control type="image">
					<posx>230</posx>
					<posy>140</posy>
					<height>48</height>
					<width>48</width>
					<texture>$VAR[Overlay]</texture>
					<visible>Skin.HasSetting(watched-overlay)</visible>
				</control>
			</focusedlayout>
		</control>
		<control type="group">
			<visible>Control.IsVisible(54)</visible>
			<include>SortLetterNotification</include>
			<!-- Scroll Bar -->
			<control type="scrollbar" id="24">
				<posx>18</posx>
				<posy>660</posy>
				<width>1240</width>
				<height>18</height>
				<onup>54</onup>
				<ondown>9000</ondown>
				<orientation>horizontal</orientation>
				<animation condition="!Control.HasFocus(24) + !Container.Scrolling" effect="fade" start="100" end="0" time="200" reversible="true">Conditional</animation>
				<visible>Skin.HasSetting(sbar)</visible>
			</control>
			<!-- Show logo -->
			<control type="group">
				<visible>!Skin.HasSetting(hide-chrome)</visible>
				<control type="image" id="7216">
					<posx>272</posx>
					<posy>424</posy>
					<width>314</width>
					<height>86</height>
					<texture fallback="blank.png">$VAR[VideoLogo]</texture>
					<aspectratio align="left" aligny="bottom">keep</aspectratio>
					<animation effect="fade" delay="100" start="0" end="100" time="200">Visible</animation>
					<visible>!IsEmpty(ListItem.Title)</visible>
				</control>
				<!-- Title -->
				<control type="label">
					<posx>272</posx>
					<posy>460</posy>
					<width>929</width>
					<height>38</height>
					<font>font22</font>
					<include condition="Skin.HasSetting(autoscroll)">scrolltext</include>
					<label>$INFO[ListItem.Label]</label>
					<wrapmultiline>true</wrapmultiline>
					<textoffsetx>0</textoffsetx>
					<visible>!SubString(ListItem.Icon,DefaultFolderBack.png,Left) + SubString(Control.GetLabel(7216),blank.png,Left) + !IsEmpty(ListItem.Title)</visible>
					<animation effect="fade" delay="100" start="0" end="100" time="200">Visible</animation>
				</control>
			</control>
			<!-- Title -->
			<control type="label">
				<posx>272</posx>
				<posy>460</posy>
				<width>929</width>
				<height>38</height>
				<font>font22</font>
				<include condition="Skin.HasSetting(autoscroll)">scrolltext</include>
				<label>$INFO[ListItem.Label]</label>
				<wrapmultiline>true</wrapmultiline>
				<textoffsetx>0</textoffsetx>
				<visible>!SubString(ListItem.Icon,DefaultFolderBack.png,Left) + [IsEmpty(ListItem.Title) | Skin.HasSetting(hide-chrome)]</visible>
				<animation effect="fade" delay="100" start="0" end="100" time="200">Visible</animation>
			</control>
			<!-- Go Back -->
			<control type="label">
				<posx>272</posx>
				<posy>460</posy>
				<width>929</width>
				<height>37</height>
				<font>font22</font>
				<include condition="Skin.HasSetting(autoscroll)">scrolltext</include>
				<label>$LOCALIZE[31688]</label>
				<textoffsetx>0</textoffsetx>
				<visible>stringcompare(ListItem.Icon,DefaultFolderBack.png)</visible>
			</control>
			<control type="group">
				<visible>!IsEmpty(ListItem.Title)</visible>
				<!-- Duration -->
				<control type="label">
					<posx>26</posx>
					<posy>284</posy>
					<width>204</width>
					<height>31</height>
					<align>center</align>
					<font>font18</font>
					<label>$VAR[VideoDuration]</label>
					<visible>!IsEmpty(ListItem.Duration) + !Container.Content(tvshows) + !Container.Content(seasons)</visible>
				</control>
				<!-- Star Rating -->
				<control type="image">
					<posx>234</posx>
					<posy>335</posy>
					<width>200</width>
					<height>25</height>
					<texture>$INFO[ListItem.StarRating]</texture>
					<colordiffuse>StarDiffuse</colordiffuse>
					<visible>!IsEmpty(ListItem.StarRating)</visible>
				</control>
				<!-- MPAA Rating -->
				<control type="image">
					<posx>272</posx>
					<posy>364</posy>
					<width>212</width>
					<height>62</height>
					<aligny>bottom</aligny>
					<texture>$VAR[VideoRating]</texture>
					<aspectratio>keep</aspectratio>
				</control>
			</control>
		</control>
	</include>
</includes>

<?xml version="1.0" encoding="utf-8"?>
<window>
	<onload condition="Skin.HasSetting(background-slideshow)">RunScript(script.artistslideshow,daemon=True)</onload>
	<defaultcontrol always="true">420</defaultcontrol>
	<backgroundcolor>0</backgroundcolor>
	<allowoverlay>yes</allowoverlay>
	<animation effect="fade" start="0" end="0" time="10000" condition="Window.Previous(Startup) + Skin.HasSetting(intro-vid)">WindowOpen</animation>
	<controls>
		<!-- Use Vertical Home menu-->
		<include condition="Skin.HasSetting(homemenu-vertical)">VertHomeMenu</include>
		<!-- Use Horizontal Home menu-->
		<include condition="Skin.HasSetting(homemenu-horizontal) | !Skin.HasSetting(homemenu-vertical)">HorzHomeMenu</include>
	</controls>
</window>
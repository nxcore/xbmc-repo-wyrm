<window id="0">
	<defaultcontrol always="false">420</defaultcontrol>
	<backgroundcolor>0</backgroundcolor>
	<allowoverlay>yes</allowoverlay>
	<include condition="Skin.HasSetting(background-slideshow) + IsEmpty(Window(Visualisation).Property(ArtistSlideshowRunning))">StartArtistSlideshow</include>
	<animation effect="fade" start="0" end="0" time="10000" condition="Window.Previous(Startup) + Skin.HasSetting(intro-vid)">WindowOpen</animation>
	<controls>
		<control type="button" id="420">
			<description>trigger playlist if selected</description>
			<posy>-12</posy>
			<posy>-12</posy>
			<width>1</width>
			<height>1</height>
			<include condition="[Skin.HasSetting(startup-playlist) + !Skin.HasSetting(home-changed)]">StartupPlaylist</include>
			<onfocus>Skin.Reset(home-changed)</onfocus>
			<onfocus>Skin.Reset(home-reloaded)</onfocus>
			<onfocus>SetFocus(9000)</onfocus>
			<texturenofocus>-</texturenofocus>
			<texturefocus>-</texturefocus>
		</control>

		<!-- Use Vertical Home menu-->
		<include condition="!Skin.HasSetting(horizontal-homemenu)">VertHomeMenu</include>
		
		<!-- Use Horizontal Home menu-->
		<include condition="Skin.HasSetting(horizontal-homemenu)">HorzHomeMenu</include>
		
		<!-- Low memory warning -->
		<include>memory-low</include>
		
		<!-- RSS info -->
		<include>page-info</include>
	</controls>
</window>
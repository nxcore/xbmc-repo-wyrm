<window>
	<defaultcontrol always="false">420</defaultcontrol>
	<backgroundcolor>0</backgroundcolor>
	<allowoverlay>yes</allowoverlay>
	<onload condition="Window.Previous(settings) + Skin.HasSetting(horizontal-homemenu)">Control.SetFocus(9900,9)</onload>
	<onload condition="Window.Previous(settings) + Skin.HasSetting(horizontal-homemenu)">Control.SetFocus(9450,1)</onload>
	<include condition="Skin.HasSetting(background-slideshow) + IsEmpty(Window(Visualisation).Property(ArtistSlideshowRunning))">StartArtistSlideshow</include>
	<animation effect="fade" start="0" end="0" time="10000" condition="Window.Previous(Startup) + Skin.HasSetting(intro-vid)">WindowOpen</animation>
	<controls>
		<control type="button" id="420">
			<description>trigger playlist if selected</description>
			<posx>-12</posx>
			<posy>-12</posy>
			<width>1</width>
			<height>1</height>
			<include condition="Skin.HasSetting(startup-playlist)">StartupPlaylist</include>
			<onfocus>Control.SetFocus(9000)</onfocus>
			<onclick>Control.SetFocus(9000)</onclick>
			<texturenofocus>-</texturenofocus>
			<texturefocus>-</texturefocus>
		</control>

		<!-- Use Vertical Home menu-->
		<include condition="Skin.HasSetting(homemenu-vertical)">VertHomeMenu</include>
		
		<!-- Use Horizontal Home menu-->
		<include condition="Skin.HasSetting(homemenu-horizontal) | !Skin.HasSetting(homemenu-vertical)">HorzHomeMenu</include>
		
		<!-- Low memory warning -->
		<include>memory-low</include>
		
		<!-- RSS info -->
		<include>page-info</include>
	</controls>
</window>
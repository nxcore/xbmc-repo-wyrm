<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">9000</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<include>screen-fade</include>
	<controls>
		<!-- Use Vertical Home menu-->
		<include condition="Skin.HasSetting(homemenu-vertical)">VertHomeMenu</include>
		<!-- Use Horizontal Home menu-->
		<include condition="Skin.HasSetting(homemenu-horizontal) | [!Skin.HasSetting(homemenu-vertical) + !Skin.HasSetting(homemenu-icon)]">HorzHomeMenu</include>
		<!-- Use Icon Home menu-->
		<include condition="Skin.HasSetting(homemenu-icon)">IconHomeMenu</include>
	</controls>
</window>
<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="BannerView">
		<control type="list" id="59">
			<viewtype label="31946">Banner List</viewtype>
			<visible>[Container.Content(tvshows) | Container.Content(seasons)]</visible>
			<posx>662</posx>
			<posy>110</posy>
			<width>556</width>
			<height>514</height>
			<pagecontrol>29</pagecontrol>
			<onup>59</onup>
			<ondown>59</ondown>
			<onleft>9000</onleft>
			<onright>29</onright>
			<itemlayout width="556" height="100">
				<control type="group">
					<visible>!SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
					<control type="image"><!-- Banner image -->
						<posx>7</posx>
						<posy>4</posy>
						<width>542</width>
						<height>100</height>
						<texture background="true">$VAR[IconBanner]</texture>
						<aspectratio>keep</aspectratio>
						<colordiffuse>UnFocusedPosters</colordiffuse>
						<visible>!IsEmpty(ListItem.Art(banner))</visible>
					</control>
					<control type="image"><!-- Otherwise try TV logo if available -->
						<posx>7</posx>
						<posy>4</posy>
						<width>542</width>
						<height>100</height>
						<texture fallback="DefaultTvshows.png">$INFO[ListItem.path]logo.png</texture>
						<aspectratio>keep</aspectratio>
						<colordiffuse>UnFocusedPosters</colordiffuse>
						<visible>IsEmpty(ListItem.Art(banner))</visible>
					</control>
				</control>
				<control type="image"><!-- Go Back image -->
					<posx>7</posx>
					<posy>4</posy>
					<width>542</width>
					<height>100</height>
					<texture background="true">$INFO[ListItem.Icon]</texture>
					<aspectratio>keep</aspectratio>
					<colordiffuse>UnFocusedPosters</colordiffuse>
					<visible>SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
				</control>
			</itemlayout>
			<focusedlayout width="556" height="114">
				<control type="image"><!-- Item hi-lite -->
					<posx>0</posx>
					<posy>0</posy>
					<width>556</width>
					<height>114</height>
					<texture border="7" background="true">button-menu-background.png</texture>
				</control>
				<control type="group">
					<visible>!SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
					<control type="image"><!-- Banner image -->
						<posx>7</posx>
						<posy>7</posy>
						<width>542</width>
						<height>100</height>
						<texture background="true">$VAR[IconBanner]</texture>
						<aspectratio>keep</aspectratio>
						<visible>!IsEmpty(ListItem.Art(banner))</visible>
					</control>
					<control type="image"><!-- Otherwise try TV Logo if available -->
						<posx>7</posx>
						<posy>7</posy>
						<width>542</width>
						<height>100</height>
						<texture fallback="DefaultTvshows.png">$INFO[ListItem.path]logo.png</texture>
						<aspectratio>keep</aspectratio>
						<visible>IsEmpty(ListItem.Art(banner))</visible>
					</control>
				</control>
				<control type="image"><!-- Go Back image -->
					<posx>7</posx>
					<posy>7</posy>
					<width>542</width>
					<height>100</height>
					<texture background="true">$INFO[ListItem.Icon]</texture>
					<aspectratio>keep</aspectratio>
					<visible>SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
				</control>
			</focusedlayout>
		</control>
		<control type="group">
			<visible>Control.IsVisible(59)</visible>
			<animation effect="fade" delay="300" start="0" end="100" time="200">Visible</animation>
			<visible>Window.IsActive(VideoLibrary) + [Container.Content(tvshows) | Container.Content(seasons)]</visible>
			<control type="label"><!-- Go Back -->
				<posx>30</posx>
				<posy>312</posy>
				<width>600</width>
				<height>50</height>
				<font>font28</font>
				<align>center</align>
				<label>$LOCALIZE[31688]</label>
				<visible>SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
			</control>
			<control type="image"><!-- Mini Fanart -->
				<posx>130</posx>
				<posy>114</posy>
				<width>400</width>
				<height>225</height>
				<texture background="true">$INFO[ListItem.Art(fanart)]</texture>
				<aspectratio aligny="top">keep</aspectratio>
				<fadetime>0</fadetime>
				<visible>!Container().Scrolling + !IsEmpty(ListItem.Art(fanart))</visible>
			</control>
			<control type="grouplist">
				<posx>30</posx>
				<posy>355</posy>
				<width>600</width>
				<height>600</height>
				<itemgap>2</itemgap>
				<visible>!IsEmpty(ListItem.Icon)</visible>
				<control type="label"><!-- Title -->
					<posx>0</posx>
					<posy>225</posy>
					<width>600</width>
					<height>37</height>
					<font>font18</font>
					<label>[B]$INFO[ListItem.Label][/B]</label>
					<include condition="Skin.HasSetting(autoscroll)">scrolltext</include>
					<visible>!SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
				</control>
				<control type="label"><!-- First Aired -->
					<posx>0</posx>
					<posy>268</posy>
					<width>600</width>
					<height>25</height>
					<label>[B]$LOCALIZE[20416]:[/B] $INFO[ListItem.Premiered]</label>
					<visible>!IsEmpty(ListItem.Premiered)</visible>
				</control>
				<control type="label"><!-- Genre -->
					<posx>0</posx>
					<posy>300</posy>
					<width>600</width>
					<height>25</height>
					<label>[B]$LOCALIZE[515]:[/B] $INFO[ListItem.Genre]</label>
					<include condition="Skin.HasSetting(autoscroll)">scrolltext</include>
					<visible>!IsEmpty(ListItem.Genre)</visible>
				</control>
				<control type="label"><!-- Rating -->
					<posx>0</posx>
					<posy>331</posy>
					<width>600</width>
					<height>37</height>
					<label>[B]$LOCALIZE[563]:[/B] $INFO[ListItem.Rating]</label>
					<visible>!IsEmpty(ListItem.Rating)</visible>
				</control>
				<control type="label">
					<posx>0</posx>
					<posy>375</posy>
					<width>600</width>
					<height>37</height>
					<label>$INFO[ListItem.Property(UnWatchedEpisodes)] $LOCALIZE[16101] $LOCALIZE[20360]</label>
					<visible>!IsEmpty(ListItem.Property(UnWatchedEpisodes))</visible>
				</control>
				<control type="image">
					<posx>0</posx>
					<posy>412</posy>
					<width>600</width>
					<height>2</height>
					<texture>separator.png</texture>
					<visible>!SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
				</control>
				<control type="textbox"><!-- Plot Outline -->
					<posx>8</posx>
					<posy>431</posy>
					<width>600</width>
					<height>150</height>
					<label fallback="161">$INFO[ListItem.PlotOutline]</label>
					<align>justify</align>
					<visible>!IsEmpty(ListItem.PlotOutline)</visible>
					<autoscroll time="4000" delay="6000" repeat="8000">Skin.HasSetting(autoscroll)</autoscroll>
				</control>
				<control type="textbox"><!-- Plot (Show if no outline available)-->
					<posx>8</posx>
					<posy>431</posy>
					<width>600</width>
					<height>150</height>
					<label fallback="161">$INFO[ListItem.Plot]</label>
					<align>justify</align>
					<visible>IsEmpty(ListItem.PlotOutline) + !IsEmpty(ListItem.Plot)</visible>
					<autoscroll time="4000" delay="6000" repeat="8000">Skin.HasSetting(autoscroll)</autoscroll>
				</control>
			</control>
			<control type="group">
				<include>SortLetterNotification</include>
				<control type="scrollbar" id="29"><!-- Scroll Bar -->
					<posx>1244</posx>
					<posy>105</posy>
					<width>18</width>
					<height>524</height>
					<onleft>59</onleft>
					<onright>noop</onright>
					<animation condition="!Control.HasFocus(29) + !Container.Scrolling" effect="fade" start="100" end="0" time="200" reversible="true">Conditional</animation>
					<visible>Skin.HasSetting(sbar)</visible>
				</control>
			</control>
		</control>
	</include>
</includes>
<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">52</defaultcontrol>
	<visible>!Window.IsActive(startup)</visible>
	<allowoverlay>no</allowoverlay>
	<controls>
		<include>screen-fade</include>
		<include>background</include>
		<control type="image"><!-- Settings logo -->
			<include>icon-header-commons</include>
			<texture>icon-settings.png</texture>
		</control>
		<control type="label"><!-- Number of files (show if using vertical hame menu) -->
			<posx>1062</posx>
			<posy>682</posy>
			<width>203</width>
			<height>37</height>
			<label>$INFO[Container(52).NumItems] $LOCALIZE[127]</label>
			<visible>Skin.HasSetting(homemenu-vertical)</visible>
		</control>
		<control type="grouplist">
			<posx>946</posx>
			<posy>50</posy>
			<width>360</width>
			<height>37</height>
			<align>left</align>
			<aligny>center</aligny>
			<orientation>horizontal</orientation>
			<control type="label"><!-- Load profile heading label -->
				<width min="60" max="250">auto</width>
				<height>37</height>
				<label>$LOCALIZE[20092]</label>
				<font>font20</font>
			</control>
			<control type="label"><!-- Number of files -->
				<visible>Skin.HasSetting(homemenu-horizontal) | [!Skin.HasSetting(homemenu-vertical) + !Skin.HasSetting(homemenu-horizontal)]</visible>
				<posy>13</posy>
				<width min="40" max="110">auto</width>
				<height>38</height>
				<label>$INFO[Container(52).NumItems, (,)]</label>
			</control>
		</control>
		<control type="fixedlist" id="52">
			<viewtype label="31941">List</viewtype>
			<posx>240</posx>
			<posy>116</posy>
			<width>800</width>
			<height>456</height>
			<focusposition>1</focusposition>
			<movement>2</movement>
			<onleft>52</onleft>
			<onright>52</onright>
			<onup>52</onup>
			<ondown>52</ondown>
			<scrolltime>200</scrolltime>
			<preloaditems>2</preloaditems>
			<pagecontrol>-</pagecontrol>
			<itemlayout width="800" height="114">
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>114</width>
					<height>114</height>
					<texture background="true">$INFO[ListItem.Icon]</texture>
					<colordiffuse>UnFocusedPosters</colordiffuse>
					<aspectratio>keep</aspectratio>
				</control>
				<control type="label">
					<posx>150</posx>
					<posy>16</posy>
					<width>626</width>
					<height>31</height>
					<font>font18</font>
					<label>$INFO[ListItem.Label]</label>
				</control>
				<control type="label">
					<posx>150</posx>
					<posy>72</posy>
					<width>626</width>
					<height>25</height>
					<textcolor>disabled-text</textcolor>
					<label>$INFO[ListItem.Label2]</label>
				</control>
			</itemlayout>
			<focusedlayout width="800" height="114">
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>114</width>
					<height>114</height>
					<texture background="true">$INFO[ListItem.Icon]</texture>
					<aspectratio>keep</aspectratio>
				</control>
				<control type="label">
					<posx>150</posx>
					<posy>16</posy>
					<width>626</width>
					<height>31</height>
					<font>font18</font>
					<selectedcolor>listselected-text</selectedcolor>
					<label>$INFO[ListItem.Label]</label>
					<include condition="Skin.HasSetting(autoscroll)">scrolltext</include>
				</control>
				<control type="label">
					<posx>150</posx>
					<posy>72</posy>
					<width>626</width>
					<height>25</height>
					<textcolor>disabled-text</textcolor>
					<label>$INFO[ListItem.Label2]</label>
					<include condition="Skin.HasSetting(autoscroll)">scrolltext</include>
				</control>
			</focusedlayout>
		</control>
		<control type="group">
			<posy>66</posy>
			<visible>Control.IsVisible(52)</visible>
			<control type="group">
				<control type="image"><!-- Slider -->
					<posx>374</posx>
					<posy>278</posy>
					<width>658</width>
					<height>114</height>
					<texture border="8">default-button.png</texture>
					<aspectratio>stretch</aspectratio>
				</control>
				<animation condition="Container(52).Position(0)" effect="slide" start="0,0" end="0,-228"
					time="0" easing="inout" reversible="true">Conditional</animation>
				<animation condition="Container(52).Position(1)" effect="slide" start="0,0" end="0,-114"
					time="0" easing="inout" reversible="true">Conditional</animation>
				<!-- Animation for postion 2 does nothing, so remove -->
				<animation condition="Container(52).Position(3)" effect="slide" start="0,0" end="0,114"
					time="0" easing="inout" reversible="true">Conditional</animation>
			</control>
		</control>
		<control type="label"><!-- Current Profile name -->
			<posx>228</posx>
			<posy>677</posy>
			<width>824</width>
			<height>31</height>
			<align>center</align>
			<label>$LOCALIZE[13204] $INFO[System.ProfileName]</label>
			<font>font18</font>
		</control>
	</controls>
</window>
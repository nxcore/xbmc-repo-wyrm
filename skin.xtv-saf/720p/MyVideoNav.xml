<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<previouswindow>Home</previouswindow>
	<views>50,52,54,57,58,59,560</views>
	<onload condition="Skin.HasSetting(tv_theme) + !SubString(Window(Videos).Property(CinemaExperienceRunning),True)">RunScript(script.tvtunes,backend=True&amp;loop=False)</onload>
	<controls>
		<visible>!Window.IsVisible(movieinformation)</visible>
		<include>screen-fade</include>
		<include>backgroundvideo</include>
		<include>Fake-Overlay</include>
		<include>#files</include>
		<control type="image"><!-- Movies/General video logo -->
			<include>icon-header-commons</include>
			<texture>icon-video-sml.png</texture>
			<visible>!Container.Content(tvshows) + !Container.Content(seasons) + !Container.Content(episodes) + !Container.Content(musicvideos)</visible>
		</control>
		<control type="image"><!-- TV shows logo -->
			<include>icon-header-commons</include>
			<texture>icon-tv.png</texture>
			<visible>Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes)</visible>
		</control>
		<control type="image"><!-- Music videos logo -->
			<include>icon-header-commons</include>
			<texture>icon-musicvideo-sml.png</texture>
			<visible>Container.Content(musicvideos)</visible>
		</control>
		<control type="grouplist">
			<posx>946</posx>
			<posy>35</posy>
			<width>365</width>
			<height>80</height>
			<align>left</align>
			<aligny>center</aligny>
			<orientation>horizontal</orientation>
			<control type="label"><!-- Video screen heading -->
				<width min="40" max="275">auto</width>
				<height>80</height>
				<label>$VAR[VideoHeadings]</label>
				<font>font18</font>
				<wrapmultiline>true</wrapmultiline>
				<aligny>top</aligny>
			</control>
			<control type="label"><!-- Number of file (Use if home menu type is not vertical) -->
				<visible>Skin.HasSetting(homemenu-horizontal) | [!Skin.HasSetting(homemenu-vertical) + !Skin.HasSetting(homemenu-horizontal)]</visible>
				<width min="40" max="90">auto</width>
				<height>46</height>
				<label>$INFO[Container.NumItems,(,)]</label>
			</control>
		</control>

		<include>memory-low</include><!-- Display warning if free memory is low -->

		<control type="group"><!-- Various Views of Video library node -->
			<visible>![IsEmpty(ListItem.Label) + IsEmpty(Container().ListItem(1).Label)]</visible>
			<include>VideoListView</include>
			<include>VideoIconView</include>
			<include>BannerView</include>
			<include>VideoWrapView</include>
			<include>VideoWallView</include>
			<include>VideoCoverflow</include>
			<include>PVRLiveTVView</include>
		</control>

		<control type="group"><!-- No Label tag means video addon is busy pulling in content, so show a busy animation -->
			<visible>IsEmpty(ListItem.Label) + IsEmpty(Container().ListItem(1).Label) + System.IdleTime(1) + !Window.IsVisible(busydialog)</visible>
			<include>fadebackground</include>
			<control type="image"><!-- Busy animation -->
				<posx>576</posx>
				<posy>290</posy>
				<width>128</width>
				<height>128</height>
				<texture>busy.png</texture>
				<aspectratio>keep</aspectratio>
				<animation effect="rotate" start="360" end="0" center="auto" time="5400" loop="true" condition="true">conditional</animation>
			</control>
		</control>

		<control type="group"><!-- View-As Menu -->
			<posy>720</posy>
			<include>View-as</include>
			<control type="group">
				<visible>ControlGroup(9000).HasFocus() + !Skin.HasSetting(view-as-lock)</visible>
				<control type="image"><!-- Background shadow -->
					<posx>0</posx>
					<posy>0</posy>
					<width>1280</width>
					<height>720</height>
					<texture>colours/black.png</texture>
					<colordiffuse>osd-background</colordiffuse>
				</control>
				<control type="image"><!-- Button background -->
					<posx>440</posx>
					<posy>32</posy>
					<width>396</width>
					<height>640</height>
					<texture border="8">button-menu-background.png</texture>
				</control>
			</control>
			<control type="grouplist" id="9000">
				<posx>450</posx>
				<posy>40</posy>
				<width>376</width>
				<height>624</height>
				<onleft>noop</onleft>
				<onright>50</onright>
				<onup>9000</onup>
				<ondown>9000</ondown>
				<onback>50</onback>
				<itemgap>0</itemgap>
				<control type="button" id="2"><!-- View as button -->
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<label>$LOCALIZE[100]</label>
				</control>
				<control type="radiobutton" id="1198"><!-- Tilt list view icons button  -->
					<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[31886]</label>
					<font>font11</font>
					<onclick>Skin.ToggleSetting(tiltvideolisticon)</onclick>
					<selected>Skin.HasSetting(tiltvideolisticon)</selected>
					<radioposx>330</radioposx>
					<visible>SubString(Control.GetLabel(2),$LOCALIZE[31941],Right)</visible>
				</control>
				<control type="radiobutton" id="1197"><!-- Tilt wall view icons button -->
					<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[31886]</label>
					<font>font11</font>
					<onclick>Skin.ToggleSetting(tiltvideowallicon)</onclick>
					<selected>Skin.HasSetting(tiltvideowallicon)</selected>
					<radioposx>330</radioposx>
					<visible>SubString(Control.GetLabel(2),$LOCALIZE[31944],Right)</visible>
				</control>
				<control type="button" id="3"><!-- Sort by button -->
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<label>$LOCALIZE[103]</label>
				</control>
				<control type="togglebutton" id="4"><!-- Sort direction button -->
					<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[21429]: $LOCALIZE[21430]</label>
					<altlabel>$LOCALIZE[21429]: $LOCALIZE[21431]</altlabel>
					<font>font11</font>
				</control>
				<control type="radiobutton" id="7"><!-- Stack button -->
					<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[346]</label>
					<font>font11</font>
					<radioposx>330</radioposx>
				</control>
				<control type="button" id="10"><!-- Show button -->
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<visible>!Skin.HasSetting(watched_filtering_toggle)</visible>
				</control>
				<control type="button" id="14"><!-- Watched video toggle button -->
					<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[20367]</label>
					<font>font11</font>
					<visible>Skin.HasSetting(watched_filtering_toggle)</visible>
				</control>
				<control type="button" id="8"><!-- Search button -->
					<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[137]</label>
					<font>font11</font>
				</control>
				<control type="edit" id="19"><!-- Filter button -->
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<label>$LOCALIZE[587]</label>
					<textwidth>340</textwidth>
					<visible>!Container.CanFilterAdvanced</visible>
				</control>
				<control type="radiobutton" id="98"><!-- Advanced filter button -->
					<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[587]</label>
					<font>font11</font>
					<selected>Container.Filtered</selected>
					<onclick>Filter</onclick>
					<radioposx>330</radioposx>
					<visible>Container.CanFilterAdvanced</visible>
				</control>
				<control type="button" id="16"><!-- Party mode button -->
					<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[589]</label>
					<font>font11</font>
					<visible>Container.Content(MusicVideos)</visible>
				</control>
				<control type="button" id="17"><!-- Flatten library button -->
					<width>376</width>
					<height>48</height>
					<label>$LOCALIZE[20411]</label>
					<font>font11</font>
				</control>
				<control type="radiobutton" id="11"><!-- Unlock shares button -->
					<label>$LOCALIZE[20336]</label>
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<onclick>xbmc.mastermode</onclick>
					<selected>system.ismaster</selected>
					<radioposx>330</radioposx>
					<visible>system.haslocks</visible>
				</control>
				<control type="button" id="1199"><!-- Goto playlist button -->
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<label>$LOCALIZE[13350]</label>
					<onclick>$VAR[PlayList]</onclick>
					<visible>Player.HasMedia</visible>
					<visible>!VideoPlayer.Content(LiveTV)</visible>
					<visible>!Window.IsVisible(MusicPlaylist) + !Window.IsVisible(VideoPlaylist)</visible>
				</control>
				<control type="togglebutton" id="20"><!-- Update library button -->
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<label>$LOCALIZE[653]</label>
					<altlabel>$LOCALIZE[13353]</altlabel>
					<onclick condition="SubString(System.BuildVersion,12.,Left)">UpdateLibrary(video)</onclick>
				</control>
				<control type="button" id="1200"><!-- player controls button -->
					<width>376</width>
					<height>48</height>
					<font>font11</font>
					<label>$LOCALIZE[16003] $LOCALIZE[478]</label>
					<onclick>ActivateWindow(playercontrols)</onclick>
					<onclick>SetFocus(50)</onclick>
					<visible>Player.HasAudio | Player.HasVideo</visible>
				</control>
			</control>
		</control>
	</controls>
</window>
		</control>
		<!-- Display warning if free memory is low -->
		<include>memory-low</include>

		<!-- Various Views of Video library node -->
		<control type="group">
			<visible>![IsEmpty(ListItem.Label) + IsEmpty(Container().ListItem(1).Label)]</visible>

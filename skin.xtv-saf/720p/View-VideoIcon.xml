<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="VideoIconView">
		<control type="panel" id="52">
			<posx>20</posx>
			<posy>100</posy>
			<width>1200</width>
			<height>575</height>
			<onleft>9000</onleft>
			<onright>29</onright>
			<onup>52</onup>
			<ondown>52</ondown>
			<viewtype label="31943">Icons</viewtype>
			<scrolltime>200</scrolltime>
			<pagecontrol>29</pagecontrol>
			<itemlayout height="234" width="300">
				<control type="image">
					<posx>90</posx>
					<posy>5</posy>
					<width>120</width>
					<height>168</height>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<colordiffuse>UnFocusedPosters</colordiffuse>
					<texture background="true" diffuse="mask-rect.png">DefaultVideo.png</texture>
					<visible>SubString(ListItem.Icon,DefaultFolder.png,Left)</visible>
				</control>
				<control type="image">
					<posx>90</posx>
					<posy>5</posy>
					<width>120</width>
					<height>168</height>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<colordiffuse>UnFocusedPosters</colordiffuse>
					<texture background="true" diffuse="mask-rect.png">$VAR[IconPoster]</texture>
					<visible>!SubString(ListItem.Icon,DefaultFolder.png,Left)</visible>
				</control>
				<control type="image">
					<posx>224</posx>
					<posy>10</posy>
					<width>32</width>
					<height>32</height>
					<texture>$VAR[Overlay]</texture>
					<visible>Skin.HasSetting(watched-overlay)</visible>
				</control>
				<control type="label">
					<posx>150</posx>
					<posy>185</posy>
					<width>280</width>
					<height>22</height>
					<font>font11</font>
					<align>center</align>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</itemlayout>
			<focusedlayout height="234" width="300">
				<control type="image">
					<posx>90</posx>
					<posy>5</posy>
					<width>120</width>
					<height>168</height>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<animation effect="zoom" start="100" end="124" center="auto" time="600" tween="back" easing="out" reversible="false">focus</animation>
					<texture background="true" diffuse="mask-rect.png">$VAR[IconPoster]</texture>
					<visible>SubString(ListItem.Icon,Default,Left) + !SubString(ListItem.Icon,DefaultFolder.png,Left)</visible>
				</control>
				<control type="image">
					<posx>90</posx>
					<posy>5</posy>
					<width>120</width>
					<height>168</height>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<animation effect="zoom" start="100" end="124" center="auto" time="600" tween="back" easing="out" reversible="false">focus</animation>
					<texture background="true" diffuse="mask-rect.png">DefaultVideo.png</texture>
					<visible>SubString(ListItem.Icon,DefaultFolder.png,Left)</visible>
				</control>
				<control type="image">
					<posx>90</posx>
					<posy>5</posy>
					<width>120</width>
					<height>168</height>
					<texture fallback="DefaultVideo.png" background="true" diffuse="mask-rect.png">$VAR[IconPoster]</texture>
					<bordertexture border="10">mask-hilite.png</bordertexture>
					<bordersize>9</bordersize>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<animation effect="zoom" start="100" end="124" center="auto" time="600" tween="back" easing="out" reversible="false">focus</animation>
					<visible>!SubString(ListItem.Icon,Default,Left)</visible>
				</control>
				<control type="image">
					<posx>224</posx>
					<posy>10</posy>
					<width>32</width>
					<height>32</height>
					<texture>$VAR[Overlay]</texture>
					<visible>Skin.HasSetting(watched-overlay)</visible>
				</control>
				<control type="label">
					<posx>150</posx>
					<posy>185</posy>
					<width>280</width>
					<height>22</height>
					<font>font11</font>
					<align>center</align>
					<include condition="Skin.HasSetting(autoscroll)">scrolltext</include>
					<label>$INFO[ListItem.Label]</label>
					<textoffsetx>0</textoffsetx>
				</control>
			</focusedlayout>
		</control>
		<control type="scrollbar" id="29">
			<posx>1244</posx>
			<posy>100</posy>
			<width>18</width>
			<height>588</height>
			<onleft>52</onleft>
			<onright>9000</onright>
			<animation condition="!Control.HasFocus(29) + !Container.Scrolling" effect="fade" start="100" end="0" time="200" reversible="true">Conditional</animation>
			<visible>Skin.HasSetting(sbar) + Control.IsVisible(52)</visible>
		</control>
	</include>
</includes>

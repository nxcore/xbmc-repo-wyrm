<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<controls>
		<include>background</include>
		<include>#files</include>
		<control type="image">
			<description>Music Logo</description>
			<include>icon-header-commons</include>
			<texture>icon-music-sml.png</texture>
		</control>
		<control type="label">
			<description>Music Label</description>
			<posx>946</posx>
			<posy>25</posy>
			<width>310</width>
			<height>50</height>
			<label>$LOCALIZE[10517]</label>
			<font>font18</font>
			<wrapmultiline>true</wrapmultiline>
		</control>

		<include>ListView</include>

		<control type="image">
			<description>cover image</description>
			<posx>180</posx>
			<posy>112</posy>
			<width>384</width>
			<height>384</height>
			<texture>$INFO[MusicPlayer.Cover]</texture>
			<colordiffuse>FlagDiffuse</colordiffuse>
			<aspectratio aligny="bottom">keep</aspectratio>
		</control>

		<control type="group">
			<visible>Player.HasAudio</visible>
			<control type="progress">
				<posx>35</posx>
				<posy>568</posy>
				<width>661</width>
				<height>10</height>
				<info>Player.Progress</info>
				<colordiffuse>ProgressBarColor</colordiffuse>
			</control>
			<control type="label">
				<description>Time Label</description>
				<posx>696</posx>
				<posy>585</posy>
				<width>180</width>
				<align>right</align>
				<font>font12</font>
				<label>$INFO[Player.Time]$INFO[Player.Duration,/ ]</label>
			</control>
			<control type="label">
				<description>Artist label</description>
				<posx>35</posx>
				<posy>585</posy>
				<width>480</width>
				<height>25</height>
				<label>$INFO[MusicPlayer.Artist]</label>
				<font>font12</font>
				<include condition="Skin.HasSetting(autoscroll)">scrolltext</include>
			</control>
			<control type="label">
				<description>Now Playing Label</description>
				<posx>35</posx>
				<posy>615</posy>
				<width>660</width>
				<height>25</height>
				<font>font12</font>
				<label>$INFO[MusicPlayer.Title]</label>
				<include condition="Skin.HasSetting(autoscroll)">scrolltext</include>
			</control>
		</control>
		<control type="group">
			<posy>720</posy>
			<include>View-as</include>
			<control type="group" id="9000">
				<visible>!Skin.HasSetting(view-as-lock)</visible>
				<control type="image"><!-- Background shadow -->
					<posx>0</posx>
					<posy>0</posy>
					<width>1280</width>
					<height>720</height>
					<texture>colours/black.png</texture>
					<colordiffuse>osd-background</colordiffuse>
				</control>
				<control type="image"><!-- Button background -->
					<posx>460</posx>
					<posy>212</posy>
					<width>398</width>
					<height>306</height>
					<texture border="8">button-menu-background.png</texture>
				</control>
				<control type="button" id="20"><!-- Shuffle -->
					<posx>477</posx>
					<posy>225</posy>
					<width>362</width>
					<height>56</height>
					<font>font12</font>
					<label>$LOCALIZE[191]</label>
					<textoffsetx>10</textoffsetx>
					<onleft>50</onleft>
					<onright>50</onright>
					<onup>22</onup>
					<ondown>28</ondown>
				</control>
				<control type="radiobutton" id="28"><!-- Randomize -->
					<posx>477</posx>
					<posy>281</posy>
					<width>362</width>
					<height>56</height>
					<font>font12</font>
					<label>$LOCALIZE[13319]</label>
					<textoffsetx>10</textoffsetx>
					<onleft>50</onleft>
					<onright>50</onright>
					<onup>20</onup>
					<ondown>26</ondown>
					<radioposx>330</radioposx>
				</control>
				<control type="button" id="26"><!-- Repeat -->
					<posx>477</posx>
					<posy>337</posy>
					<width>362</width>
					<height>56</height>
					<font>font12</font>
					<textoffsetx>10</textoffsetx>
					<label>-</label>
					<onleft>50</onleft>
					<onright>50</onright>
					<onup>28</onup>
					<ondown>21</ondown>
				</control>
				<control type="button" id="21"><!-- Save -->
					<posx>477</posx>
					<posy>393</posy>
					<width>362</width>
					<height>56</height>
					<font>font12</font>
					<label>$LOCALIZE[190]</label>
					<textoffsetx>10</textoffsetx>
					<onleft>50</onleft>
					<onright>50</onright>
					<onup>26</onup>
					<ondown>22</ondown>
				</control>
				<control type="button" id="22"><!-- Clear -->
					<posx>477</posx>
					<posy>450</posy>
					<width>362</width>
					<height>56</height>
					<font>font12</font>
					<label>$LOCALIZE[192]</label>
					<textoffsetx>10</textoffsetx>
					<onleft>50</onleft>
					<onright>50</onright>
					<onup>21</onup>
					<ondown>20</ondown>
				</control>
			</control>
		</control>
	</controls>
</window>
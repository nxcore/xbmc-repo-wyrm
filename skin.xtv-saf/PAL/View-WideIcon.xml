<includes>
	<include name="WideIconView">
		<control type="panel" id="55">
			<viewtype label="Wide Icons">Wide Icons</viewtype>
			<posx>15</posx>
			<posy>120</posy>
			<width>700</width>
			<height>394</height>
			<onleft>2</onleft>
			<onright>23</onright>
			<onup>55</onup>
			<ondown>55</ondown>
			<scrolltime>200</scrolltime>
			<pagecontrol>23</pagecontrol>
			<include>list-fade</include>
			<focusposition>1</focusposition>
			<itemlayout height="110" width="350">
				<control type="image">
					<posx>5</posx>
					<posy>20</posy>
					<width>290</width>
					<height>70</height>
					<info>ListItem.Icon</info>
				</control>
				<control type="image">
					<posx>470</posx>
					<posy>65</posy>
					<width>32</width>
					<height>32</height>
					<info>ListItem.Overlay</info>
				</control>
			</itemlayout>
			<focusedlayout height="120" width="320">
				<control type="image">
					<posx>-7</posx>
					<posy>8</posy>
					<width>345</width>
					<height>98</height>
					<texture>wide-focus.png</texture>
				</control>
				<control type="image">
					<posx>4</posx>
					<posy>10</posy>
					<width>320</width>
					<height>90</height>
					<info>ListItem.Icon</info>
				</control>
				<control type="image">
					<posx>280</posx>
					<posy>30</posy>
					<width>32</width>
					<height>32</height>
					<info>ListItem.Overlay</info>
				</control>
				<control type="label">
					<posx>3</posx>
					<posy>103</posy>
					<width>290</width>
					<height>16</height>
					<font>font12</font>
					<align>left</align>
					<scroll>true</scroll>
					<textcolor>button-text</textcolor>
					<selectedcolor>listselectedtext</selectedcolor>
					<info>ListItem.Label</info>
					<visible>!Skin.HasSetting(widelabels)</visible>
				</control>
			</focusedlayout>
		</control>
	</include>


<includes>
	<include name="BannerView">
		<control type="group" id="500">
			<defaultcontrol always="true">59</defaultcontrol>
			<visible>Control.IsVisible(59)</visible>
			<control type="list" id="59">
				<viewtype label="31947">Banner List</viewtype>
				<posx>0</posx>
				<posy>110</posy>
				<width>720</width>
				<height>360</height>
				<pagecontrol>26</pagecontrol>
				<onup>59</onup>
				<ondown>59</ondown>
				<onleft>2</onleft>
				<onright>26</onright>
				<visible>Window.IsActive(VideoLibrary)</visible>
				<itemlayout height="80">
					<control type="image">
						<description>Cover</description>
						<posx>380</posx>
						<posy>5</posy>
						<width>300</width>
						<height>70</height>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<aspectratio align="center" aligny="center">keep</aspectratio>
						<visible>!SubString(ListItem.Icon,DefaultFolder,Left)</visible>
					</control>
					<control type="image">
						<posx>380</posx>
						<posy>5</posy>
						<width>300</width>
						<height>70</height>
						<texture diffuse="mask-rect.png">DefaultVideo.png</texture>
						<aspectratio align="center" aligny="center">keep</aspectratio>
						<visible>SubString(ListItem.Icon,DefaultFolder.png,Left)</visible>
					</control>
					<control type="image">
						<description>Go Back Image</description>
						<posx>380</posx>
						<posy>5</posy>
						<width>300</width>
						<height>70</height>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<aspectratio align="center" aligny="center">keep</aspectratio>
						<visible>SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
					</control>
				<!--<control type="image">
						<description>Overlay</description>
						<posx>360</posx>
						<posy>16</posy>
						<width>64</width>
						<height>64</height>
						<info>ListItem.Overlay</info>
					</control>-->
				</itemlayout>
				<focusedlayout height="120">
					<control type="group">
						<posx>380</posx>
						<posy>0</posy>
						<width>300</width>
						<height>120</height>
						<animation effect="zoom" start="90" end="110" center="auto" time="500" tween="back" easing="inout" reversible="false">Focus</animation>
						<control type="image">
							<description>Cover</description>
							<posx>0</posx>
							<posy>0</posy>
							<width>300</width>
							<height>120</height>
							<texture background="true">$INFO[ListItem.Icon]</texture>
							<aspectratio align="center" aligny="center">keep</aspectratio>
							<bordertexture border="9">hi-lite.png</bordertexture>
							<bordersize>9</bordersize>
							<visible>!SubString(ListItem.Icon,DefaultFolder,Left)</visible>
						</control>
						<control type="image">
							<posx>0</posx>
							<posy>0</posy>
							<width>300</width>
							<height>120</height>
							<texture diffuse="mask-rect.png">DefaultVideo.png</texture>
							<aspectratio align="center" aligny="center">keep</aspectratio>
							<visible>SubString(ListItem.Icon,DefaultFolder.png,Left)</visible>
						</control>
						<control type="image">
							<posx>0</posx>
							<posy>0</posy>
							<width>300</width>
							<height>120</height>
							<texture background="true">$INFO[ListItem.Icon]</texture>
							<aspectratio align="center" aligny="center">keep</aspectratio>
							<visible>SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
						</control>
					<!--<control type="image">
							<description>Overlay</description>
							<posx>6</posx>
							<posy>6</posy>
							<width>64</width>
							<height>64</height>
							<info>ListItem.Overlay</info>
							<aspectratio align="center" aligny="top">stretch</aspectratio>
						</control>-->
					</control>
				</focusedlayout>
			</control>
			<control type="label">
				<description>Go Back</description>
				<posx>40</posx>
				<posy>250</posy>
				<width>315</width>
				<height>40</height>
				<font>font28</font>
				<textcolor>button-text</textcolor>
				<shadowcolor>shadow-text</shadowcolor>
				<align>center</align>
				<aligny>center</aligny>
				<label>31688</label>
				<scroll>true</scroll>
				<visible>SubString(ListItem.Icon,DefaultFolderBack.png,Left)</visible>
			</control>
			<control type="grouplist">
				<posx>20</posx>
				<posy>95</posy>
				<width>315</width>
				<height>480</height>
				<itemgap>2</itemgap>
				<orientation>vertical</orientation>
				<visible>!IsEmpty(ListItem.Thumb)</visible>
				<control type="group">
					<posx>0</posx>
					<posy>0</posy>
					<width>300</width>
					<height>190</height>
					<visible>!IsEmpty(Listitem.Property(Fanart_Image))</visible>
					<control type="image">
						<description>Mini Fanart</description>
						<width>300</width>
						<height>180</height>
						<texture background="true">$INFO[Listitem.Property(Fanart_Image)]</texture>
						<aspectratio align="center" aligny="bottom">keep</aspectratio>
						<fadetime>600</fadetime>
					</control>
				</control>
				<control type="label">
					<description>Title</description>
					<posx>0</posx>
					<posy>180</posy>
					<width>315</width>
					<height>30</height>
					<font>font18</font>
					<textcolor>button-text</textcolor>
					<shadowcolor>shadow-text</shadowcolor>
					<align>left</align>
					<aligny>center</aligny>
					<label>[B]$INFO[ListItem.Label][/B]</label>
					<scroll>true</scroll>
				</control>
				<control type="label">
					<description>First Aired</description>
					<posx>0</posx>
					<posy>215</posy>
					<height>20</height>
					<font>font13</font>
					<textcolor>button-text</textcolor>
					<shadowcolor>shadow-text</shadowcolor>
					<label>[B]$LOCALIZE[20416]:[/B] $INFO[ListItem.Premiered]</label>
				</control>
				<control type="label">
					<description>Genre</description>
					<posx>0</posx>
					<posy>240</posy>
					<width>315</width>
					<height>20</height>
					<font>font13</font>
					<textcolor>button-text</textcolor>
					<shadowcolor>shadow-text</shadowcolor>
					<label>[B]$LOCALIZE[515]:[/B] $INFO[ListItem.Genre]</label>
					<scroll>true</scroll>
				</control>
				<control type="label">
					<description>Rating</description>
					<posx>0</posx>
					<posy>265</posy>
					<height>30</height>
					<font>font13</font>
					<textcolor>button-text</textcolor>
					<shadowcolor>shadow-text</shadowcolor>
					<label>[B]$LOCALIZE[563]:[/B] $INFO[ListItem.Rating]</label>
				</control>
				<control type="label">
					<posx>0</posx>
					<posy>300</posy>
					<height>30</height>
					<font>font13</font>
					<textcolor>button-text</textcolor>
					<shadowcolor>shadow-text</shadowcolor>
					<label>$INFO[ListItem.Property(UnWatchedEpisodes)] $LOCALIZE[16101] $LOCALIZE[20360]</label>
					<visible>!IsEmpty(ListItem.Property(UnWatchedEpisodes))</visible>
				</control>
				<control type="image">
					<posx>0</posx>
					<posy>330</posy>
					<width>315</width>
					<height>2</height>
					<texture>separator.png</texture>
				</control>
				<!-- Plot Outline -->
				<control type="textbox">
					<posx>5</posx>
					<posy>345</posy>
					<width>310</width>
					<height>120</height>
					<font>font13</font>
					<textcolor>button-text</textcolor>
					<shadowcolor>shadow-text</shadowcolor>
					<label fallback="161">$INFO[ListItem.PlotOutline]</label>
					<visible>!IsEmpty(ListItem.PlotOutline)</visible>
					<autoscroll time="4000" delay="6000" repeat="8000">true</autoscroll>
				</control>
				<!-- Plot (Show if no outline available)-->
				<control type="textbox">
					<posx>5</posx>
					<posy>345</posy>
					<width>310</width>
					<height>120</height>
					<font>font13</font>
					<textcolor>button-text</textcolor>
					<shadowcolor>shadow-text</shadowcolor>
					<label fallback="161">$INFO[ListItem.Plot]</label>
					<visible>IsEmpty(ListItem.PlotOutline) + !IsEmpty(ListItem.Plot)</visible>
					<autoscroll time="4000" delay="6000" repeat="8000">true</autoscroll>
				</control>
			</control>
			
			<control type="group">
				<visible>Control.IsVisible(59)</visible>
				<include>SortLetterNotification</include>
				<!-- Scroll Bar -->
				<control type="scrollbar" id="26">
					<posx>700</posx>
					<posy>110</posy>
					<width>14</width>
					<height>370</height>
					<texturesliderbackground border="0,8,0,8">scrollbar_background.png</texturesliderbackground>
					<texturesliderbar border="0,8,0,8">scrollbar_bar.png</texturesliderbar>
					<texturesliderbarfocus border="0,8,0,8">scrollbar_bar_focus.png</texturesliderbarfocus>
					<textureslidernib>-</textureslidernib>
					<textureslidernibfocus>-</textureslidernibfocus>
					<onleft>2</onleft>
					<onright>59</onright>
					<include>list-fade</include>
					<showonepage>false</showonepage>
					<orientation>vertical</orientation>
					<colordiffuse>ScrollBarColor</colordiffuse>
					<visible>Skin.HasSetting(sbar)</visible>
				</control>
			</control>
		</control>
	</include>
</includes>